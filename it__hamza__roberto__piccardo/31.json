[{"id": 371253, "identifier": "it.piccardo", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 411, "ruku": 355, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "it", "name": "Piccardo", "transelator_en_name": "Hamza Roberto Piccardo", "format": "text", "type": "translation", "ayah_number": 3470, "text": "Alif, L\u00e2m, M\u00eem."}, {"id": 371254, "identifier": "it.piccardo", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 411, "ruku": 355, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "it", "name": "Piccardo", "transelator_en_name": "Hamza Roberto Piccardo", "format": "text", "type": "translation", "ayah_number": 3471, "text": "Questi sono i versetti del Libro saggio"}, {"id": 371255, "identifier": "it.piccardo", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 411, "ruku": 355, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "it", "name": "Piccardo", "transelator_en_name": "Hamza Roberto Piccardo", "format": "text", "type": "translation", "ayah_number": 3472, "text": "guida e misericordia per coloro che compiono il bene"}, {"id": 371256, "identifier": "it.piccardo", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 411, "ruku": 355, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "it", "name": "Piccardo", "transelator_en_name": "Hamza Roberto Piccardo", "format": "text", "type": "translation", "ayah_number": 3473, "text": "che assolvono all'orazione e pagano la decima e fermamente credono nell'altra vita,"}, {"id": 371257, "identifier": "it.piccardo", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 411, "ruku": 355, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "it", "name": "Piccardo", "transelator_en_name": "Hamza Roberto Piccardo", "format": "text", "type": "translation", "ayah_number": 3474, "text": "che seguono la guida del loro Signore: questi sono coloro che prospereranno."}, {"id": 371258, "identifier": "it.piccardo", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 411, "ruku": 355, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "it", "name": "Piccardo", "transelator_en_name": "Hamza Roberto Piccardo", "format": "text", "type": "translation", "ayah_number": 3475, "text": "Tra gli uomini vi \u00e8 chi compra storie ridicole per traviare gli uomini dal sentiero di Allah e burlarsi di esso: quelli avranno un castigo umiliante."}, {"id": 371259, "identifier": "it.piccardo", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 411, "ruku": 355, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "it", "name": "Piccardo", "transelator_en_name": "Hamza Roberto Piccardo", "format": "text", "type": "translation", "ayah_number": 3476, "text": "Quando gli si recitano i Nostri versetti, volge le spalle superbo come se non li avesse sentiti, come se avesse un peso nelle orecchie. Dagli annuncio di un doloroso castigo."}, {"id": 371260, "identifier": "it.piccardo", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 411, "ruku": 355, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "it", "name": "Piccardo", "transelator_en_name": "Hamza Roberto Piccardo", "format": "text", "type": "translation", "ayah_number": 3477, "text": "Coloro che credono e compiono il bene avranno i Giardini della Delizia,"}, {"id": 371261, "identifier": "it.piccardo", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 411, "ruku": 355, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "it", "name": "Piccardo", "transelator_en_name": "Hamza Roberto Piccardo", "format": "text", "type": "translation", "ayah_number": 3478, "text": "dove rimarranno in perpetuo: questa in verit\u00e0 la promessa di Allah. Egli \u00e8 l'Eccelso, il Saggio."}, {"id": 371263, "identifier": "it.piccardo", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 411, "ruku": 355, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "it", "name": "Piccardo", "transelator_en_name": "Hamza Roberto Piccardo", "format": "text", "type": "translation", "ayah_number": 3479, "text": "Ha creato i cieli senza pilastri che possiate vedere, ha infisso le montagne sulla terra, ch\u00e9 altrimenti si sarebbe mossa e voi con essa e l'ha popolata di animali di tutte le specie. Abbiamo fatto scendere un'acqua [dal cielo] e abbiamo fatto germogliare ogni tipo di magnifica specie [di piante]."}, {"id": 371264, "identifier": "it.piccardo", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 411, "ruku": 355, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "it", "name": "Piccardo", "transelator_en_name": "Hamza Roberto Piccardo", "format": "text", "type": "translation", "ayah_number": 3480, "text": "Questa la creazione di Allah. Mostratemi allora quello che hanno creato gli altri [che adorate] all'infuori di Lui. No, gli ingiusti sono in errore palese."}, {"id": 371265, "identifier": "it.piccardo", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 412, "ruku": 356, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "it", "name": "Piccardo", "transelator_en_name": "Hamza Roberto Piccardo", "format": "text", "type": "translation", "ayah_number": 3481, "text": "Certamente fummo Noi a dare la saggezza a Luqm\u00e2n: \u201cSii riconoscente ad Allah: chi \u00e8 riconoscente lo \u00e8 per se stesso. Quanto a colui che \u00e8 ingrato, in verit\u00e0 Allah \u00e8 Colui Che basta a Se Stesso, il Degno di lode\u201d."}, {"id": 371266, "identifier": "it.piccardo", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 412, "ruku": 356, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "it", "name": "Piccardo", "transelator_en_name": "Hamza Roberto Piccardo", "format": "text", "type": "translation", "ayah_number": 3482, "text": "E [ricorda] quando Luqm\u00e2n disse a suo figlio: \u201cFiglio mio, non attribuire ad Allah associati. Attribuirgli associati \u00e8 un'enorme ingiustizia\u201d."}, {"id": 371267, "identifier": "it.piccardo", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 412, "ruku": 356, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "it", "name": "Piccardo", "transelator_en_name": "Hamza Roberto Piccardo", "format": "text", "type": "translation", "ayah_number": 3483, "text": "Abbiamo imposto all'uomo di trattare bene i suoi genitori: lo port\u00f2 sua madre di travaglio in travaglio e lo svezz\u00f2 dopo due anni: \u201cSii riconoscente a Me e ai tuoi genitori. Il destino ultimo \u00e8 verso di Me."}, {"id": 371268, "identifier": "it.piccardo", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 412, "ruku": 356, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "it", "name": "Piccardo", "transelator_en_name": "Hamza Roberto Piccardo", "format": "text", "type": "translation", "ayah_number": 3484, "text": "E se entrambi ti obbligassero ad associarMi ci\u00f2 di cui non hai conoscenza alcuna, non obbedire loro, ma sii comunque cortese con loro in questa vita e segui la via di chi si rivolge a Me. Poi a Me farete ritorno e vi informer\u00f2 su quello che avrete fatto\u201d."}, {"id": 371269, "identifier": "it.piccardo", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 412, "ruku": 356, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "it", "name": "Piccardo", "transelator_en_name": "Hamza Roberto Piccardo", "format": "text", "type": "translation", "ayah_number": 3485, "text": "\u201cO figlio mio, anche se fosse come il peso di un granello di senape, nel profondo di una roccia o nei cieli o sulla terra, Allah lo porter\u00e0 alla luce. Allah \u00e8 dolce e ben informato."}, {"id": 371270, "identifier": "it.piccardo", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 412, "ruku": 356, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "it", "name": "Piccardo", "transelator_en_name": "Hamza Roberto Piccardo", "format": "text", "type": "translation", "ayah_number": 3486, "text": "O figlio mio, assolvi all'orazione, raccomanda le buone consuetudini e proibisci il biasimevole e sopporta con pazienza quello che ti succede: questo il comportamento da tenere in ogni impresa."}, {"id": 371271, "identifier": "it.piccardo", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 412, "ruku": 356, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "it", "name": "Piccardo", "transelator_en_name": "Hamza Roberto Piccardo", "format": "text", "type": "translation", "ayah_number": 3487, "text": "Non voltare la tua guancia dagli uomini e non calpestare la terra con arroganza: in verit\u00e0 Allah non ama il superbo vanaglorioso."}, {"id": 371272, "identifier": "it.piccardo", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 412, "ruku": 356, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "it", "name": "Piccardo", "transelator_en_name": "Hamza Roberto Piccardo", "format": "text", "type": "translation", "ayah_number": 3488, "text": "Sii modesto nel camminare e abbassa la tua voce: invero la pi\u00f9 sgradevole delle voci \u00e8 quella dell'asino.\u201d"}, {"id": 371273, "identifier": "it.piccardo", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 413, "ruku": 357, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "it", "name": "Piccardo", "transelator_en_name": "Hamza Roberto Piccardo", "format": "text", "type": "translation", "ayah_number": 3489, "text": "Non vedete come Allah vi ha sottomesso quel che \u00e8 nei cieli e sulla terra e ha diffuso su di voi i Suoi favori, palesi e nascosti? Ciononostante vi \u00e8 qualcuno tra gli uomini che polemizza a proposito di Allah senza avere n\u00e9 scienza, n\u00e9 guida, n\u00e9 un Libro luminoso."}, {"id": 371274, "identifier": "it.piccardo", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 413, "ruku": 357, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "it", "name": "Piccardo", "transelator_en_name": "Hamza Roberto Piccardo", "format": "text", "type": "translation", "ayah_number": 3490, "text": "E quando si dice loro: \u201cSeguite quello che Allah ha rivelato\u201d, rispondono: \u201cSeguiremo invece quello che abbiamo trovato presso i nostri avi!\u201d. [Insisterebbero cos\u00ec] anche se Satana li chiamasse al castigo della Fiamma?"}, {"id": 371275, "identifier": "it.piccardo", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 413, "ruku": 357, "hizb_quarter": 165, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "it", "name": "Piccardo", "transelator_en_name": "Hamza Roberto Piccardo", "format": "text", "type": "translation", "ayah_number": 3491, "text": "Chi sottomette il suo volto ad Allah e compie il bene, si afferra all'ansa pi\u00f9 salda. In Allah \u00e8 l'esito di tutte le cose!"}, {"id": 371276, "identifier": "it.piccardo", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 413, "ruku": 357, "hizb_quarter": 165, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "it", "name": "Piccardo", "transelator_en_name": "Hamza Roberto Piccardo", "format": "text", "type": "translation", "ayah_number": 3492, "text": "Quanto a chi \u00e8 miscredente, non ti affligga la sua miscredenza: a Noi faranno ritorno e li informeremo di quel che avranno fatto. Allah conosce perfettamente cosa c'\u00e8 nei cuori."}, {"id": 371277, "identifier": "it.piccardo", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 413, "ruku": 357, "hizb_quarter": 165, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "it", "name": "Piccardo", "transelator_en_name": "Hamza Roberto Piccardo", "format": "text", "type": "translation", "ayah_number": 3493, "text": "Diamo loro godimento effimero per un po' di tempo e poi li spingeremo con forza nel castigo terribile."}, {"id": 371278, "identifier": "it.piccardo", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 413, "ruku": 357, "hizb_quarter": 165, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "it", "name": "Piccardo", "transelator_en_name": "Hamza Roberto Piccardo", "format": "text", "type": "translation", "ayah_number": 3494, "text": "Se domandi loro: \u201cChi ha creato i cieli e la terra?\u201d, certamente risponderanno: \u201cAllah\u201d. Di': \u201cLode ad Allah!\u201d. Ma la maggior parte di loro non sanno."}, {"id": 371279, "identifier": "it.piccardo", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 413, "ruku": 357, "hizb_quarter": 165, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "it", "name": "Piccardo", "transelator_en_name": "Hamza Roberto Piccardo", "format": "text", "type": "translation", "ayah_number": 3495, "text": "[Appartiene] ad Allah tutto quello che \u00e8 nei cieli e sulla terra. Allah basta a Se Stesso, \u00e8 il Degno di lode."}, {"id": 371280, "identifier": "it.piccardo", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 413, "ruku": 357, "hizb_quarter": 165, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "it", "name": "Piccardo", "transelator_en_name": "Hamza Roberto Piccardo", "format": "text", "type": "translation", "ayah_number": 3496, "text": "Anche se tutti gli alberi della terra diventassero calami, e il mare e altri sette mari ancora [fossero inchiostro], non potrebbero esaurire le parole di Allah. In verit\u00e0 Allah \u00e8 eccelso, saggio."}, {"id": 371281, "identifier": "it.piccardo", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 413, "ruku": 357, "hizb_quarter": 165, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "it", "name": "Piccardo", "transelator_en_name": "Hamza Roberto Piccardo", "format": "text", "type": "translation", "ayah_number": 3497, "text": "La vostra creazione e resurrezione [per Allah] \u00e8 [facile] come quella di una sola anima. Allah \u00e8 l'Audiente, Colui Che tutto osserva."}, {"id": 371282, "identifier": "it.piccardo", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 414, "ruku": 357, "hizb_quarter": 165, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "it", "name": "Piccardo", "transelator_en_name": "Hamza Roberto Piccardo", "format": "text", "type": "translation", "ayah_number": 3498, "text": "Non hai visto come Allah ha fatto s\u00ec che la notte compenetri il giorno e il giorno compenetri la notte? E [come] ha sottomesso il sole e la luna, ciascuno dei quali procede [nel suo corso] fino a un termine stabilito?"}, {"id": 371283, "identifier": "it.piccardo", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 414, "ruku": 357, "hizb_quarter": 165, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "it", "name": "Piccardo", "transelator_en_name": "Hamza Roberto Piccardo", "format": "text", "type": "translation", "ayah_number": 3499, "text": "Ci\u00f2 in quanto Allah \u00e8 la Verit\u00e0, mentre quel che invocano all'infuori di Lui \u00e8 falsit\u00e0. Allah \u00e8 l'Altissimo, il Grande."}, {"id": 371284, "identifier": "it.piccardo", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 414, "ruku": 357, "hizb_quarter": 165, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "it", "name": "Piccardo", "transelator_en_name": "Hamza Roberto Piccardo", "format": "text", "type": "translation", "ayah_number": 3500, "text": "Non hai visto che \u00e8 per grazia di Allah che la nave solca il mare, affinch\u00e9 vi mostri qualcuno dei Suoi segni? In verit\u00e0 in ci\u00f2 vi sono segni per ogni uomo di perseveranza, di riconoscenza."}, {"id": 371285, "identifier": "it.piccardo", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 414, "ruku": 357, "hizb_quarter": 165, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "it", "name": "Piccardo", "transelator_en_name": "Hamza Roberto Piccardo", "format": "text", "type": "translation", "ayah_number": 3501, "text": "Quando li copre un'onda come fosse tenebra, invocano Allah e Gli rendono un culto puro; quando poi [Allah] li mette al sicuro sulla terra ferma, alcuni di loro seguono una via intermedia. Solo il peggior traditore, il peggior ingrato rinnegher\u00e0 i Nostri segni."}, {"id": 371286, "identifier": "it.piccardo", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 414, "ruku": 357, "hizb_quarter": 165, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "it", "name": "Piccardo", "transelator_en_name": "Hamza Roberto Piccardo", "format": "text", "type": "translation", "ayah_number": 3502, "text": "Uomini, temete il vostro Signore e paventate il Giorno in cui il padre non potr\u00e0 soddisfare il figlio n\u00e9 il figlio potr\u00e0 soddisfare il padre in alcunch\u00e9. La promessa di Allah \u00e8 verit\u00e0. Badate che non vi inganni la vita terrena e non vi inganni, su Allah, l'Ingannatore."}, {"id": 371287, "identifier": "it.piccardo", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 414, "ruku": 357, "hizb_quarter": 165, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "it", "name": "Piccardo", "transelator_en_name": "Hamza Roberto Piccardo", "format": "text", "type": "translation", "ayah_number": 3503, "text": "In verit\u00e0 la scienza dell'Ora \u00e8 presso Allah, Colui Che fa scendere la pioggia e conosce quello che c'\u00e8 negli uteri. Nessuno conosce ci\u00f2 che guadagner\u00e0 l'indomani e nessuno conosce la terra in cui morr\u00e0. In verit\u00e0 Allah \u00e8 il Sapiente, il Ben informato."}]