[{"id": 597007, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 523, "ruku": 458, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4736, "text": "Tur'a (o da\u011fa)"}, {"id": 597008, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 523, "ruku": 458, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4737, "text": "\u0130nce deri \u00fczerine yaz\u0131lm\u0131\u015f o kitaba."}, {"id": 597009, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 523, "ruku": 458, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4738, "text": "\u0130nce deri \u00fczerine yaz\u0131lm\u0131\u015f o kitaba."}, {"id": 597010, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 523, "ruku": 458, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4739, "text": "Beyt-i Ma'm\u00fbr\u2019a"}, {"id": 597011, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 523, "ruku": 458, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4740, "text": "O pek y\u00fcksek tavan, g\u00f6k kubbeye."}, {"id": 597012, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 523, "ruku": 458, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4741, "text": "A\u011fz\u0131na kadar dolu okyanusa yemin olsun ki:"}, {"id": 597013, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 523, "ruku": 458, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4742, "text": "Rabbinin cezas\u0131 mutlaka vuku bulacakt\u0131r."}, {"id": 597014, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 523, "ruku": 458, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4743, "text": "Onu \u00f6nleyecek hi\u00e7 bir kuvvet yoktur."}, {"id": 597015, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 523, "ruku": 458, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4744, "text": "G\u00fcn gelecek, g\u00f6k \u015fiddetle \u00e7alkalanacak."}, {"id": 597016, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 523, "ruku": 458, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4745, "text": "Da\u011flar s\u00fcr'atle y\u00fcr\u00fcyecektir."}, {"id": 597017, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 523, "ruku": 458, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4746, "text": "O g\u00fcn, hakk\u0131 yalan say\u0131p Peygambere yalanc\u0131 diyenlerin vay hallerine!"}, {"id": 597018, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 523, "ruku": 458, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4747, "text": "Onlar ki dald\u0131klar\u0131 bat\u0131l i\u00e7inde oynay\u0131p dururlar."}, {"id": 597019, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 523, "ruku": 458, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4748, "text": "O g\u00fcn onlar cehenneme \u015fiddetle itilirler."}, {"id": 596350, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 523, "ruku": 458, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4749, "text": "\u0130\u015fte, denilir, al\u0131n size yalan sayd\u0131\u011f\u0131n\u0131z ate\u015f!"}, {"id": 596432, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 524, "ruku": 458, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4750, "text": "Haydi s\u00f6yleyin bakal\u0131m, bu da m\u0131 sihir, yoksa siz mi g\u00f6rm\u00fcyormu\u015fsunuz?"}, {"id": 597020, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 524, "ruku": 458, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4751, "text": "Girin oraya! \u0130ster dayan\u0131n, ister dayanamay\u0131n, art\u0131k hepsi bir!Siz sadece ne yapt\u0131ysan\u0131z onun kar\u015f\u0131l\u0131\u011f\u0131n\u0131 bulacaks\u0131n\u0131z."}, {"id": 597021, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 524, "ruku": 458, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4752, "text": "M\u00fcttakiler ise cennetlerde nimet i\u00e7indedirler."}, {"id": 597022, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 524, "ruku": 458, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4753, "text": "Rab'lerinin kendilerine verdikleriyle sefa s\u00fcrerler. Rab\u2019leri onlar\u0131 yak\u0131c\u0131 ate\u015fin azab\u0131ndan korumu\u015ftur."}, {"id": 597023, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 524, "ruku": 458, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4754, "text": "Ve onlara denilir ki: \u201cD\u00fcnyada yapt\u0131\u011f\u0131n\u0131z g\u00fczel davran\u0131\u015flardan \u00f6t\u00fcr\u00fc: \u201cYiyin, i\u00e7in, afiyetler olsun!\u201d Onlar s\u0131ra s\u0131ra dizilmi\u015f koltuklara yaslan\u0131rlar. Kendilerine temiz ve g\u00fczel hurileri de e\u015f yapar\u0131z. [37,44]"}, {"id": 597024, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 524, "ruku": 458, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4755, "text": "Ve onlara denilir ki: \u201cD\u00fcnyada yapt\u0131\u011f\u0131n\u0131z g\u00fczel davran\u0131\u015flardan \u00f6t\u00fcr\u00fc: \u201cYiyin, i\u00e7in, afiyetler olsun!\u201d Onlar s\u0131ra s\u0131ra dizilmi\u015f koltuklara yaslan\u0131rlar. Kendilerine temiz ve g\u00fczel hurileri de e\u015f yapar\u0131z. [37,44]"}, {"id": 597025, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 524, "ruku": 458, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4756, "text": "Kendileri iman edip z\u00fcrriyetleri de iman ile kendilerinin izinden gidenlerin nesillerini de kendilerine kavu\u015ftururuz.Onlar\u0131n emeklerinden hi\u00e7bir \u015feyin m\u00fck\u00e2fat\u0131n\u0131 eksiltmeyiz. Onlardan her biri kazand\u0131\u011f\u0131 g\u00fczel neticeleri ile daimdir. [74,38-40; 13,23]"}, {"id": 597026, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 524, "ruku": 458, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4757, "text": "Onlara canlar\u0131n\u0131n istedi\u011fi meyve ve et \u00e7e\u015fitlerinden bol bol veririz. [56,20-21] {KM, Matta 8,11; Luka 13,29; Vahiy 19,9}"}, {"id": 597027, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 524, "ruku": 458, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4758, "text": "Onlar orada i\u00e7ecek kadehleri kap\u015f\u0131rlar ki bunlar\u0131 i\u00e7mede ne sa\u00e7ma sapan konu\u015fma olur, ne de g\u00fcnaha girilir."}, {"id": 597028, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 524, "ruku": 458, "hizb_quarter": 210, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4759, "text": "Etraflar\u0131nda kendi hizmetlerine tahsis edilmi\u015f, sedef i\u00e7inde sakl\u0131 inci gibi p\u0131r\u0131l p\u0131r\u0131l civanlar dola\u015f\u0131r."}, {"id": 597029, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 524, "ruku": 458, "hizb_quarter": 210, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4760, "text": "Birbirlerinin yan\u0131na gelip \u015f\u00f6yle sorup sohbet etmeye ba\u015flarlar."}, {"id": 597030, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 524, "ruku": 458, "hizb_quarter": 210, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4761, "text": "Biz d\u00fcnyada, ailemiz i\u00e7inde iken sonumuzdan endi\u015fe ederdik. Ama \u015f\u00fck\u00fcrler olsun ki Allah bize l\u00fctfetti ve bizi, o kavuran ate\u015ften korudu."}, {"id": 597031, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 524, "ruku": 458, "hizb_quarter": 210, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4762, "text": "Biz d\u00fcnyada, ailemiz i\u00e7inde iken sonumuzdan endi\u015fe ederdik. Ama \u015f\u00fck\u00fcrler olsun ki Allah bize l\u00fctfetti ve bizi, o kavuran ate\u015ften korudu."}, {"id": 597032, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 524, "ruku": 458, "hizb_quarter": 210, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4763, "text": "\u00c7\u00fcnk\u00fc biz daha \u00f6nce Allah'a dua ve ibadet eder, bizi ate\u015ften korumas\u0131n\u0131 niyaz ederdik. Ger\u00e7ekten O, berr\u2019dir, rah\u00eemdir (hay\u0131rlar\u0131n kayna\u011f\u0131d\u0131r, merhamet ve ihsan\u0131 boldur)."}, {"id": 597033, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 524, "ruku": 459, "hizb_quarter": 210, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4764, "text": "Ey Resul\u00fcm, sen ir\u015fad ve nasihatina devam et! Sen Rabbinin ihsan\u0131 sayesinde k\u00e2firlerin iddia ettikleri gibi k\u00e2hin de de\u011filsin, deli de de\u011filsin."}, {"id": 597034, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 524, "ruku": 459, "hizb_quarter": 210, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4765, "text": "Ne o, yoksa onlar senin hakk\u0131nda: \u201cNe olacak? \u015eairin biri! Fele\u011fin onun ba\u015f\u0131na neler getirece\u011fini g\u00f6rece\u011fiz\u201d mi diyorlar?"}, {"id": 597035, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 524, "ruku": 459, "hizb_quarter": 210, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4766, "text": "De ki: \u201cBekleyin bakal\u0131m! Ben de sizin fec\u00ee \u00e2k\u0131betinizi bekliyorum.\u201d"}, {"id": 597036, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 525, "ruku": 459, "hizb_quarter": 210, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4767, "text": "Ak\u0131llar\u0131 m\u0131 kendilerinden bunu istiyor, yoksa onlar azg\u0131n bir toplum olduklar\u0131ndan m\u0131 b\u00f6yle yap\u0131yorlar?"}, {"id": 597037, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 525, "ruku": 459, "hizb_quarter": 210, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4768, "text": "Yahut Kur'\u00e2n\u2019\u0131 \u201ckendi uydurdu\u201d mu diyorlar? Hay\u0131r! Onlar bu iddialar\u0131nda samim\u00ee de\u011filler. Onlar\u0131n inanmaya niyetleri yok da onun i\u00e7in bu kab\u00eel s\u00f6zler sarf ediyorlar."}, {"id": 597038, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 525, "ruku": 459, "hizb_quarter": 210, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4769, "text": "O halde bu iddialar\u0131nda tutarl\u0131 iseler Kur'\u00e2n gibi bir s\u00f6z getirsinler bakal\u0131m!"}, {"id": 597039, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 525, "ruku": 459, "hizb_quarter": 210, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4770, "text": "Onlar bir Yaratan olmaks\u0131z\u0131n m\u0131 yarat\u0131ld\u0131lar? Yoksa kendi kendilerini mi yaratt\u0131lar?"}, {"id": 597040, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 525, "ruku": 459, "hizb_quarter": 210, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4771, "text": "Yoksa, g\u00f6kleri ve yeri onlar m\u0131 yaratt\u0131lar? Hay\u0131r, onlar kesin bilgiye ula\u015fmaya gitmezler."}, {"id": 597041, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 525, "ruku": 459, "hizb_quarter": 210, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4772, "text": "Yoksa Rabbinin hazineleri onlar\u0131n m\u0131 yan\u0131nda? Yoksa k\u00e2inat\u0131 onlar m\u0131 y\u00f6netiyorlar?"}, {"id": 597042, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 525, "ruku": 459, "hizb_quarter": 210, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4773, "text": "Yoksa onlar\u0131n y\u00fckselmelerini sa\u011flayan bir merdivenleri, kuleleri var da o sayede mi g\u00f6klerin haberlerini dinliyorlar? \u00d6yleyse o haber dinleyenleri kim ise, meleklerin s\u00f6zlerini dinledi\u011fine dair kesin bir delil getirsin!"}, {"id": 597043, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 525, "ruku": 459, "hizb_quarter": 210, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4774, "text": "Yoksa k\u0131z \u00e7ocuklar\u0131 O'nun da, erkekler sizin mi?"}, {"id": 597044, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 525, "ruku": 459, "hizb_quarter": 210, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4775, "text": "Yoksa onlardan vahyi tebli\u011f, risalet ve ir\u015fad hizmetlerinden \u00f6t\u00fcr\u00fc bir \u00fccret istiyorsun da, onlar a\u011f\u0131r bir bor\u00e7 y\u00fck\u00fc alt\u0131nda eziliyorlar m\u0131?"}, {"id": 597045, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 525, "ruku": 459, "hizb_quarter": 210, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4776, "text": "Yoksa gayba dair bilgiler kendilerinin elinin alt\u0131ndad\u0131r da, onlar oradan istedikleri tarzda yaz\u0131p kopyal\u0131yorlar m\u0131?"}, {"id": 597046, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 525, "ruku": 459, "hizb_quarter": 210, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4777, "text": "Yoksa onlar bir tuzak m\u0131 kurmak istiyorlar? \u015eunu bilsinler ki: As\u0131l kapana k\u0131s\u0131lacak olanlar, o k\u00e2firler olacaklar."}, {"id": 597047, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 525, "ruku": 459, "hizb_quarter": 210, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4778, "text": "Yoksa onlar\u0131n Allah'tan ba\u015fka bir tanr\u0131lar\u0131 m\u0131 var? Allah onlar\u0131n iddia ettikleri ortaklardan m\u00fcnezzeh ve y\u00fccedir."}, {"id": 597048, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 525, "ruku": 459, "hizb_quarter": 210, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4779, "text": "\u015eayet kendilerinin k\u00f6t\u00fc bir maksatla istedikleri gibi g\u00f6kten bir par\u00e7an\u0131n d\u00fc\u015ft\u00fc\u011f\u00fcn\u00fc g\u00f6rseler, inatlar\u0131ndan \u00f6t\u00fcr\u00fc \u201cBunlar \u00fcst \u00fcste y\u0131\u011f\u0131lm\u0131\u015f bulutlard\u0131r.\u201d derler. Kendilerine ceza olarak g\u00f6nderildi\u011fini ink\u00e2r ederler."}, {"id": 597049, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 525, "ruku": 459, "hizb_quarter": 210, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4780, "text": "O halde sen onlar\u0131, darbe yiyip \u00e7arp\u0131lacaklar\u0131 g\u00fcne kadar kendi hallerine b\u0131rak!"}, {"id": 597050, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 525, "ruku": 459, "hizb_quarter": 210, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4781, "text": "O g\u00fcn hile ve tuzaklar\u0131 kendilerine asla fayda sa\u011flamaz ve yard\u0131m da g\u00f6rmezler."}, {"id": 597051, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 525, "ruku": 459, "hizb_quarter": 210, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4782, "text": "Muhakkak ki o zalimlere bundan ba\u015fka azap da vard\u0131r; fakat onlar\u0131n \u00e7o\u011fu bunu bilmezler. [32,21]"}, {"id": 597052, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 525, "ruku": 459, "hizb_quarter": 210, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4783, "text": "Rabbinin h\u00fckm\u00fc yerine gelinceye kadar sabret. \u00c7\u00fcnk\u00fc sen Bizim himayemiz alt\u0131ndas\u0131n. Namaza kalkt\u0131\u011f\u0131nda Rabbini hamd ile tenzih et. Geceleyin de, gecenin sonunda y\u0131ld\u0131zlar\u0131n bat\u0131\u015f\u0131n\u0131n ard\u0131ndan da O'na ibadet edip tenzih et."}, {"id": 597054, "identifier": "tr.yildirim", "surah_number": 52, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0637\u0648\u0631", "surah_en_name": "At-Tur", "surah_en_name_translation": "The Mount", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 525, "ruku": 459, "hizb_quarter": 210, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4784, "text": "Rabbinin h\u00fckm\u00fc yerine gelinceye kadar sabret. \u00c7\u00fcnk\u00fc sen Bizim himayemiz alt\u0131ndas\u0131n. Namaza kalkt\u0131\u011f\u0131nda Rabbini hamd ile tenzih et. Geceleyin de, gecenin sonunda y\u0131ld\u0131zlar\u0131n bat\u0131\u015f\u0131n\u0131n ard\u0131ndan da O'na ibadet edip tenzih et."}]