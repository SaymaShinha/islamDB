[{"id": 596953, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 26, "manzil": 7, "page": 520, "ruku": 455, "hizb_quarter": 208, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4676, "text": "O tozutup savuran (r\u00fczg\u00e2rlara)"}, {"id": 596954, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 26, "manzil": 7, "page": 520, "ruku": 455, "hizb_quarter": 208, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4677, "text": "Ya\u011fmur y\u00fcklenen bulutlara,"}, {"id": 596955, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 26, "manzil": 7, "page": 520, "ruku": 455, "hizb_quarter": 208, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4678, "text": "Kolayca ak\u0131p giden (y\u0131ld\u0131zlar, bulutlar vb.) \u015feylere,"}, {"id": 596764, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 26, "manzil": 7, "page": 520, "ruku": 455, "hizb_quarter": 208, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4679, "text": "Emirleri, r\u0131z\u0131klar\u0131, ya\u011fmurlar\u0131 vb. \u015feyleri taksim eden meleklere yemin ederim ki:"}, {"id": 593380, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 26, "manzil": 7, "page": 520, "ruku": 455, "hizb_quarter": 208, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4680, "text": "Size v\u00e2d olunan dirili\u015f elbette ger\u00e7ektir."}, {"id": 593605, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 26, "manzil": 7, "page": 520, "ruku": 455, "hizb_quarter": 208, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4681, "text": "\u0130\u015flerin kar\u015f\u0131l\u0131\u011f\u0131 da mutlaka al\u0131nacakt\u0131r."}, {"id": 596560, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 26, "manzil": 7, "page": 521, "ruku": 455, "hizb_quarter": 208, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4682, "text": "Yollarla, y\u00f6r\u00fcngelerle dolu g\u00f6k hakk\u0131 i\u00e7in! Siz tam bir \u00e7eli\u015fki i\u00e7indesiniz."}, {"id": 596744, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 26, "manzil": 7, "page": 521, "ruku": 455, "hizb_quarter": 208, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4683, "text": "Yollarla, y\u00f6r\u00fcngelerle dolu g\u00f6k hakk\u0131 i\u00e7in! Siz tam bir \u00e7eli\u015fki i\u00e7indesiniz."}, {"id": 596956, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 26, "manzil": 7, "page": 521, "ruku": 455, "hizb_quarter": 208, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4684, "text": "Oysa bu d\u00e2vetten, ancak akl\u0131 \u00e7arp\u0131lm\u0131\u015f olan kimse \u00e7evrilip vazge\u00e7irilir."}, {"id": 596957, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 26, "manzil": 7, "page": 521, "ruku": 455, "hizb_quarter": 208, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4685, "text": "O kahrolas\u0131 yalanc\u0131lar sarho\u015fluk ve cehalet i\u00e7inde ne yapt\u0131klar\u0131n\u0131 bilmeden at\u0131p tutarlar. Bir de alay ederek: \u201cNe zaman o hesap g\u00fcn\u00fc?\u201d diye sorarlar."}, {"id": 596958, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 26, "manzil": 7, "page": 521, "ruku": 455, "hizb_quarter": 208, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4686, "text": "O kahrolas\u0131 yalanc\u0131lar sarho\u015fluk ve cehalet i\u00e7inde ne yapt\u0131klar\u0131n\u0131 bilmeden at\u0131p tutarlar. Bir de alay ederek: \u201cNe zaman o hesap g\u00fcn\u00fc?\u201d diye sorarlar."}, {"id": 596959, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 26, "manzil": 7, "page": 521, "ruku": 455, "hizb_quarter": 208, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4687, "text": "O kahrolas\u0131 yalanc\u0131lar sarho\u015fluk ve cehalet i\u00e7inde ne yapt\u0131klar\u0131n\u0131 bilmeden at\u0131p tutarlar. Bir de alay ederek: \u201cNe zaman o hesap g\u00fcn\u00fc?\u201d diye sorarlar."}, {"id": 596960, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 26, "manzil": 7, "page": 521, "ruku": 455, "hizb_quarter": 208, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4688, "text": "O g\u00fcn, onlar\u0131n ate\u015fin \u00fczerinde k\u0131vrand\u0131r\u0131lacaklar\u0131 g\u00fcnd\u00fcr!"}, {"id": 596961, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 26, "manzil": 7, "page": 521, "ruku": 455, "hizb_quarter": 208, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4689, "text": "Onlara: \u201cTad\u0131n bakal\u0131m fitnenizi, tad\u0131n d\u00fcnyada kaynatt\u0131\u011f\u0131n\u0131z fitne ate\u015finin neticesini! \u0130\u015fte gelmesini d\u00f6rt g\u00f6zle bekledi\u011finiz azap!\u201d denilir."}, {"id": 596962, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 26, "manzil": 7, "page": 521, "ruku": 455, "hizb_quarter": 208, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4690, "text": "Ama m\u00fcttakiler bah\u00e7elerde, p\u0131nar ba\u015flar\u0131ndad\u0131rlar."}, {"id": 596963, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 26, "manzil": 7, "page": 521, "ruku": 455, "hizb_quarter": 208, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4691, "text": "Rab'lerinin kendilerine verdi\u011fi m\u00fck\u00e2fatlar\u0131 almaktad\u0131rlar. \u00c7\u00fcnk\u00fc onlar, daha \u00f6nce d\u00fcnyada iyi davranan kimselerdi."}, {"id": 596964, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 26, "manzil": 7, "page": 521, "ruku": 455, "hizb_quarter": 208, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4692, "text": "Geceleri az uyurlard\u0131."}, {"id": 596965, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 26, "manzil": 7, "page": 521, "ruku": 455, "hizb_quarter": 208, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4693, "text": "Seher vakitleri isti\u011ffar ederlerdi."}, {"id": 596966, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 26, "manzil": 7, "page": 521, "ruku": 455, "hizb_quarter": 208, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4694, "text": "Mallar\u0131nda isteyenlerin ve yoksullar\u0131n hakk\u0131n\u0131 ay\u0131r\u0131rlard\u0131."}, {"id": 596967, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 26, "manzil": 7, "page": 521, "ruku": 455, "hizb_quarter": 208, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4695, "text": "Kesin inanmak isteyenler i\u00e7in yery\u00fcz\u00fcnde bir\u00e7ok deliller vard\u0131r. Bizzat kendi varl\u0131klar\u0131n\u0131zda da b\u00f6yle deliller vard\u0131r. H\u00e2l\u00e2 g\u00f6rmeyecek misiniz? G\u00f6kte de hem r\u0131zk\u0131n\u0131z (r\u0131zk\u0131n\u0131z\u0131n vesileleri), hem de size v\u00e2d olunan cennet vard\u0131r."}, {"id": 596968, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 26, "manzil": 7, "page": 521, "ruku": 455, "hizb_quarter": 208, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4696, "text": "Kesin inanmak isteyenler i\u00e7in yery\u00fcz\u00fcnde bir\u00e7ok deliller vard\u0131r. Bizzat kendi varl\u0131klar\u0131n\u0131zda da b\u00f6yle deliller vard\u0131r. H\u00e2l\u00e2 g\u00f6rmeyecek misiniz? G\u00f6kte de hem r\u0131zk\u0131n\u0131z (r\u0131zk\u0131n\u0131z\u0131n vesileleri), hem de size v\u00e2d olunan cennet vard\u0131r."}, {"id": 596969, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 26, "manzil": 7, "page": 521, "ruku": 455, "hizb_quarter": 208, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4697, "text": "Kesin inanmak isteyenler i\u00e7in yery\u00fcz\u00fcnde bir\u00e7ok deliller vard\u0131r. Bizzat kendi varl\u0131klar\u0131n\u0131zda da b\u00f6yle deliller vard\u0131r. H\u00e2l\u00e2 g\u00f6rmeyecek misiniz? G\u00f6kte de hem r\u0131zk\u0131n\u0131z (r\u0131zk\u0131n\u0131z\u0131n vesileleri), hem de size v\u00e2d olunan cennet vard\u0131r."}, {"id": 596970, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 26, "manzil": 7, "page": 521, "ruku": 455, "hizb_quarter": 208, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4698, "text": "G\u00f6\u011f\u00fcn ve yerin Rabbine yemin olsun ki bu vaad, t\u0131pk\u0131 sizin konu\u015fman\u0131z\u0131n sabit oldu\u011fu gibi bir ger\u00e7ektir."}, {"id": 596971, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 26, "manzil": 7, "page": 521, "ruku": 456, "hizb_quarter": 208, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4699, "text": "Sahi! \u0130br\u00e2himin \u015ferefli misafirlerinin geli\u015flerinden haberin oldu mu?"}, {"id": 596972, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 26, "manzil": 7, "page": 521, "ruku": 456, "hizb_quarter": 208, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4700, "text": "Onlar yan\u0131na var\u0131nca: \u201cSel\u00e2m!\u201d dediler. O da: \u201cSize de Sel\u00e2m!\u201d diye cevap verdi, ama i\u00e7inden: \u201cBunlar tan\u0131mad\u0131\u011f\u0131m kimseler, hay\u0131rd\u0131r in\u015faallah!\u201d dedi. [15,51; 4,86; 11,69]"}, {"id": 596973, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 26, "manzil": 7, "page": 521, "ruku": 456, "hizb_quarter": 208, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4701, "text": "Onlara yemek getirmek i\u00e7in gizlice ailesinin yan\u0131na ge\u00e7ti ve semiz bir dana kebab\u0131 getirdi. \u00d6nlerine koyup \u201cbuyurmaz m\u0131s\u0131n\u0131z?\u201d diye ikram etti. [11,69] {KM, Tekvin 18. b\u00f6l\u00fcm}"}, {"id": 596974, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 26, "manzil": 7, "page": 521, "ruku": 456, "hizb_quarter": 208, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4702, "text": "Onlara yemek getirmek i\u00e7in gizlice ailesinin yan\u0131na ge\u00e7ti ve semiz bir dana kebab\u0131 getirdi. \u00d6nlerine koyup \u201cbuyurmaz m\u0131s\u0131n\u0131z?\u201d diye ikram etti. [11,69] {KM, Tekvin 18. b\u00f6l\u00fcm}"}, {"id": 596975, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 26, "manzil": 7, "page": 521, "ruku": 456, "hizb_quarter": 208, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4703, "text": "O s\u0131rada onlardan yana i\u00e7ine bir korku d\u00fc\u015ft\u00fc. \u201cKorkma!\u201d dediler ve ona b\u00fcy\u00fcd\u00fc\u011f\u00fcnde \u00e2lim olacak bir \u00e7ocuklar\u0131n\u0131n d\u00fcnyaya gelece\u011fini m\u00fcjdelediler. [11,70-73; 15,53]"}, {"id": 596976, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 26, "manzil": 7, "page": 521, "ruku": 456, "hizb_quarter": 208, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4704, "text": "Evin \u00f6b\u00fcr k\u00f6\u015fesinden bunu duyan e\u015fi, elini y\u00fcz\u00fcne vurarak: \u201cVay ba\u015f\u0131ma gelene! Ben k\u0131s\u0131r bir kocakar\u0131 iken mi do\u011furaca\u011f\u0131m!\u201d diye \u00e7\u0131\u011fl\u0131k att\u0131."}, {"id": 596977, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 26, "manzil": 7, "page": 521, "ruku": 456, "hizb_quarter": 208, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4705, "text": "Onlar, han\u0131m\u0131na: \u201cEvet, Rabbin b\u00f6yle buyurdu, dediler. O, tam h\u00fck\u00fcm ve hikmet sahibidir, her \u015feyi hakk\u0131yla bilir.\u201d"}, {"id": 596978, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 522, "ruku": 456, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4706, "text": "\u0130br\u00e2him: \u201cPeki sizin geli\u015finizin as\u0131l sebebini \u00f6\u011frenebilir miyim ey de\u011ferli el\u00e7iler?\u201d dedi."}, {"id": 596979, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 522, "ruku": 456, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4707, "text": "\u201cBiz\u201d dediler, \u201cSu\u00e7lu bir g\u00fcruhun, haddini a\u015fanlar\u0131n tepelerine, \u00e7amurdan pi\u015firilip de Rabbinin nezdinde damgalanm\u0131\u015f ta\u015flar\u0131 indirmek i\u00e7in g\u00f6revlendirildik.\u201d"}, {"id": 596980, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 522, "ruku": 456, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4708, "text": "\u201cBiz\u201d dediler, \u201cSu\u00e7lu bir g\u00fcruhun, haddini a\u015fanlar\u0131n tepelerine, \u00e7amurdan pi\u015firilip de Rabbinin nezdinde damgalanm\u0131\u015f ta\u015flar\u0131 indirmek i\u00e7in g\u00f6revlendirildik.\u201d"}, {"id": 596981, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 522, "ruku": 456, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4709, "text": "\u201cBiz\u201d dediler, \u201cSu\u00e7lu bir g\u00fcruhun, haddini a\u015fanlar\u0131n tepelerine, \u00e7amurdan pi\u015firilip de Rabbinin nezdinde damgalanm\u0131\u015f ta\u015flar\u0131 indirmek i\u00e7in g\u00f6revlendirildik.\u201d"}, {"id": 596982, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 522, "ruku": 456, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4710, "text": "Derken, oradaki m\u00fcminleri \u015fehirden \u00e7\u0131karma emrini verdik."}, {"id": 596983, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 522, "ruku": 456, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4711, "text": "Ama orada, bir hane d\u0131\u015f\u0131nda, Biz'e itaat eden aile bulamad\u0131k."}, {"id": 596984, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 522, "ruku": 456, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4712, "text": "Ve \u00f6yle ac\u0131 bir azaptan korkanlar i\u00e7in, orada bir al\u00e2met b\u0131rakt\u0131k."}, {"id": 596985, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 522, "ruku": 456, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4713, "text": "M\u00fbs\u00e2'n\u0131n olay\u0131nda da al\u0131nacak dersler vard\u0131r. Onu \u00e2\u015fik\u00e2r bir delille (m\u00fbcize ile) Firavun\u2019a g\u00f6ndermi\u015ftik."}, {"id": 596986, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 522, "ruku": 456, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4714, "text": "O var g\u00fcc\u00fcyle ve b\u00fct\u00fcn ordusuyla s\u0131rt\u0131n\u0131 \u00e7evirdi ve \u201cM\u00fbs\u00e2, ya bir b\u00fcy\u00fcc\u00fc, ya da bir delidir!\u201d dedi."}, {"id": 596987, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 522, "ruku": 456, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4715, "text": "Biz de hem onu, hem ordular\u0131n\u0131 yakalay\u0131p denizin dibine ge\u00e7iriverdik. Bo\u011fulurken, pi\u015fmanl\u0131kla kendi kendini k\u0131n\u0131yordu."}, {"id": 596988, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 522, "ruku": 456, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4716, "text": "\u00c2d halk\u0131nda da al\u0131nacak dersler vard\u0131r. Onlara da ortal\u0131\u011f\u0131 kas\u0131p kavuran k\u00f6klerini kurutan bir kas\u0131rga g\u00f6nderdik."}, {"id": 596989, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 522, "ruku": 456, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4717, "text": "Bu r\u00fczg\u00e2r, u\u011frad\u0131\u011f\u0131 her \u015feyi derhal k\u00fcl gibi savuruyordu."}, {"id": 596990, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 522, "ruku": 456, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4718, "text": "Sem\u00fbd ahalisinde de b\u00f6yle al\u0131nacak ibretler vard\u0131r. Onlara da \u201cBir s\u00fcre hayattan zevk al\u0131n bakal\u0131m!\u201d denilmi\u015fti."}, {"id": 596991, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 522, "ruku": 456, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4719, "text": "Onlar Rab'lerinin emrinden uzakla\u015f\u0131p az\u0131t\u0131nca kendileri baka baka, o m\u00fcthi\u015f y\u0131ld\u0131r\u0131m onlar\u0131 \u00e7arp\u0131verdi."}, {"id": 596331, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 522, "ruku": 456, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4720, "text": "Olduklar\u0131 yerde \u00e7\u00f6ke kald\u0131lar, ne do\u011frulabildiler, ne de yard\u0131m g\u00f6rd\u00fcler."}, {"id": 596992, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 522, "ruku": 456, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4721, "text": "Daha \u00f6nceleri de N\u00fbh'un halk\u0131n\u0131 hel\u00e2k etmi\u015ftik. \u00c7\u00fcnk\u00fc onlar da din yolundan \u00e7\u0131km\u0131\u015f kimselerdi."}, {"id": 596993, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 522, "ruku": 457, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4722, "text": "G\u00f6\u011f\u00fc Biz \u00e7ok sa\u011flam bir \u015fekilde bina ettik, onu geni\u015fleten Biziz. \u00c7\u00fcnk\u00fc Biz geni\u015f kudret ve hakimiyet sahibiyiz."}, {"id": 596994, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 522, "ruku": 457, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4723, "text": "Yery\u00fcz\u00fcn\u00fc de Biz d\u00f6\u015fedik, bak\u0131n\u0131z Biz ne de g\u00fczel d\u00f6\u015fedik!"}, {"id": 596995, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 522, "ruku": 457, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4724, "text": "Her \u015feyi de \u00e7ift yaratt\u0131k ki d\u00fc\u015f\u00fcn\u00fcp ders alas\u0131n\u0131z. [36,36; 43,12]"}, {"id": 596996, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 522, "ruku": 457, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4725, "text": "\u201cO halde, Allah'a ka\u00e7\u0131n, \u00e7abuk Allah\u2019\u0131n himayesine ko\u015fun. Zira ben O\u2019nun taraf\u0131ndan, sizi uyarmak i\u00e7in g\u00f6nderilen \u00e2\u015fik\u00e2r bir el\u00e7iyim.\u201d"}, {"id": 596997, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 522, "ruku": 457, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4726, "text": "Sak\u0131n Allah'\u0131n yan\u0131 s\u0131ra ba\u015fka m\u00e2bud icad etmeyin. \u0130\u015fte ben O\u2019nun taraf\u0131ndan, sizi uyarmak i\u00e7in g\u00f6nderilen ayd\u0131nlat\u0131c\u0131 bir el\u00e7iyim."}, {"id": 596998, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 523, "ruku": 457, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4727, "text": "\u0130\u015fte b\u00f6yle... Senin hem\u015fehrilerinden \u00f6nceki \u00fcmmetlere ne zaman bir el\u00e7i geldiyse mutlaka ona muhataplar\u0131 b\u00fcy\u00fcc\u00fc veya deli dediler."}, {"id": 596999, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 523, "ruku": 457, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4728, "text": "Birbirlerine tavsiye mi ettiler, aralar\u0131nda anla\u015ft\u0131lar m\u0131 ki hep ayn\u0131 \u015feyleri s\u00f6ylediler? Hay\u0131r, b\u00f6yle bir tavsiye yok ama, onlar azg\u0131nl\u0131kta m\u00fc\u015fterekler. \u0130\u015fte ondan, b\u00f6yle s\u00f6ylerler."}, {"id": 597000, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 523, "ruku": 457, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4729, "text": "Sen de onlardan y\u00fcz \u00e7evir, yeterince onlara hakk\u0131 anlatmaya \u00e7al\u0131\u015ft\u0131\u011f\u0131ndan art\u0131k bundan \u00f6t\u00fcr\u00fc seni kimse ay\u0131playamaz."}, {"id": 597001, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 523, "ruku": 457, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4730, "text": "Bununla beraber yine de hat\u0131rlat\u0131p \u00f6\u011f\u00fct ver! Zira ger\u00e7e\u011fi hat\u0131rlat\u0131p nasihatte bulunma, inananlara ve inanacaklara fayda verir."}, {"id": 597002, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 523, "ruku": 457, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4731, "text": "Ben cinleri ve insanlar\u0131 s\u0131rf Beni tan\u0131y\u0131p yaln\u0131z Bana ibadet etsinler diye yaratt\u0131m."}, {"id": 597003, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 523, "ruku": 457, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4732, "text": "Onlardan nafaka istemiyorum, beni yedirip beslemelerini de istemiyorum. As\u0131l b\u00fct\u00fcn mahl\u00fbklar\u0131n r\u0131z\u0131klar\u0131n\u0131 veren, k\u00e2mil kuvvet ve tam iktidar sahibi olan Allah Te\u00e2l\u00e2d\u0131r."}, {"id": 597004, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 523, "ruku": 457, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4733, "text": "Onlardan nafaka istemiyorum, beni yedirip beslemelerini de istemiyorum. As\u0131l b\u00fct\u00fcn mahl\u00fbklar\u0131n r\u0131z\u0131klar\u0131n\u0131 veren, k\u00e2mil kuvvet ve tam iktidar sahibi olan Allah Te\u00e2l\u00e2d\u0131r."}, {"id": 597005, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 523, "ruku": 457, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4734, "text": "Muhakkak ki \u015fimdiki zalimlerin de, daha \u00f6nceki meslekda\u015flar\u0131n\u0131n pay\u0131 gibi, bir azap pay\u0131 vard\u0131r. Acele etmelerine hi\u00e7 gerek yok, nas\u0131lsa ona kavu\u015facaklar!"}, {"id": 597006, "identifier": "tr.yildirim", "surah_number": 51, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0630\u0627\u0631\u064a\u0627\u062a", "surah_en_name": "Adh-Dhaariyat", "surah_en_name_translation": "The Winnowing Winds", "revelation_type": "Meccan", "juz": 27, "manzil": 7, "page": 523, "ruku": 457, "hizb_quarter": 209, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 4735, "text": "Ama tehdit olunduklar\u0131 o g\u00fcn de gelince, \u00e7ekeceklerinden dolay\u0131 vay o k\u00e2firlerin haline!"}]