[{"id": 597531, "identifier": "tr.yildirim", "surah_number": 68, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0642\u0644\u0645", "surah_en_name": "Al-Qalam", "surah_en_name_translation": "The Pen", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 564, "ruku": 498, "hizb_quarter": 226, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 5272, "text": "N\u00fbn. Kalem ve ehl-i kalemin sat\u0131rlara dizdikleri ve dizecekleri \u015feyler hakk\u0131 i\u00e7in:"}, {"id": 597532, "identifier": "tr.yildirim", "surah_number": 68, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0642\u0644\u0645", "surah_en_name": "Al-Qalam", "surah_en_name_translation": "The Pen", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 564, "ruku": 498, "hizb_quarter": 226, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 5273, "text": "Rabbinin l\u00fctfuyla, deli de\u011filsin."}, {"id": 597533, "identifier": "tr.yildirim", "surah_number": 68, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0642\u0644\u0645", "surah_en_name": "Al-Qalam", "surah_en_name_translation": "The Pen", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 564, "ruku": 498, "hizb_quarter": 226, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 5274, "text": "Hem senin ecrin, m\u00fck\u00e2fat\u0131n hi\u00e7 kesilmez! [11,108; 95,6; 41,8]"}, {"id": 597534, "identifier": "tr.yildirim", "surah_number": 68, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0642\u0644\u0645", "surah_en_name": "Al-Qalam", "surah_en_name_translation": "The Pen", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 564, "ruku": 498, "hizb_quarter": 226, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 5275, "text": "Ve sen pek y\u00fcksek bir ahl\u00e2k \u00fczerindesin! [33,21]"}, {"id": 597535, "identifier": "tr.yildirim", "surah_number": 68, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0642\u0644\u0645", "surah_en_name": "Al-Qalam", "surah_en_name_translation": "The Pen", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 564, "ruku": 498, "hizb_quarter": 226, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 5276, "text": "Yak\u0131nda g\u00f6receksin, onlar da g\u00f6recekler."}, {"id": 597536, "identifier": "tr.yildirim", "surah_number": 68, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0642\u0644\u0645", "surah_en_name": "Al-Qalam", "surah_en_name_translation": "The Pen", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 564, "ruku": 498, "hizb_quarter": 226, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 5277, "text": "Hanginizde imi\u015f o dertler, o delilikler."}, {"id": 597537, "identifier": "tr.yildirim", "surah_number": 68, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0642\u0644\u0645", "surah_en_name": "Al-Qalam", "surah_en_name_translation": "The Pen", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 564, "ruku": 498, "hizb_quarter": 226, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 5278, "text": "Senin Rabbin \u015f\u00fcphesiz pek iyi bilir:Allah yolundan sapanlar kimdir ve O'nun yolunu tutanlar kimdir."}, {"id": 597538, "identifier": "tr.yildirim", "surah_number": 68, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0642\u0644\u0645", "surah_en_name": "Al-Qalam", "surah_en_name_translation": "The Pen", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 564, "ruku": 498, "hizb_quarter": 226, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 5279, "text": "O halde, hakk\u0131 yalan sayanlar\u0131n, s\u00f6zlerine sak\u0131n uyma."}, {"id": 597539, "identifier": "tr.yildirim", "surah_number": 68, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0642\u0644\u0645", "surah_en_name": "Al-Qalam", "surah_en_name_translation": "The Pen", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 564, "ruku": 498, "hizb_quarter": 226, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 5280, "text": "\u0130sterler ki sen gev\u015feyesin de, b\u00f6ylece kendileri de yumu\u015fas\u0131nlar."}, {"id": 597540, "identifier": "tr.yildirim", "surah_number": 68, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0642\u0644\u0645", "surah_en_name": "Al-Qalam", "surah_en_name_translation": "The Pen", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 564, "ruku": 498, "hizb_quarter": 226, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 5281, "text": "Sak\u0131n uyma: Servet ve hanedan sahibi diye, o bol bol yemin eden, de\u011fersiz adama! O gammaz, s\u00f6z gezdiren, hayr\u0131n \u00f6n\u00fcn\u00fc kesene, o sald\u0131rgana, g\u00fcnaha dadanm\u0131\u015fa! \u015eerefsiz, kaba, hem de soysuz olana! Kendisine \u00e2yetlerimiz okundu\u011funda \u201cBu eski insanlar\u0131n masallar\u0131!\u201d diyene, yak\u0131nda onun burnunu da\u011flay\u0131p damga basar\u0131z. [74,11-26; 6,25; 8,31; 46,17]"}, {"id": 597541, "identifier": "tr.yildirim", "surah_number": 68, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0642\u0644\u0645", "surah_en_name": "Al-Qalam", "surah_en_name_translation": "The Pen", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 564, "ruku": 498, "hizb_quarter": 226, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Suat Y\u0131ld\u0131r\u0131m", "transelator_en_name": "Suat Yildirim", "format": "text", "type": "translation", "ayah_number": 5282, "text": "Sak\u0131n uyma: Servet ve hanedan sahibi diye, o bol bol yemin eden, de\u011fersiz adama! O gammaz, s\u00f6z gezdiren, hayr\u0131n \u00f6n\u00fcn\u00fc kesene, o sald\u0131rgana, g\u00fcnaha dadanm\u0131\u015fa! \u015eerefsiz, kaba, hem de soysuz olana! Kendisine \u00e2yetlerimiz okundu\u011funda \u201cBu eski insanlar\u0131n masallar\u0131!\u201d diyene, yak\u0131nda onun burnunu da\u011flay\u0131p damga basar\u0131z. [74,11-26; 6,25; 8,31; 46,17]"}, {"id": 597543, "identifier": "tr.yildirim", "surah_number": 68, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0642\u0644\u0645", "surah_en_name": "Al-Qalam", "surah_en