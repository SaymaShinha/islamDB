[{"id": 361533, "identifier": "id.muntakhab", "surah_number": 94, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0634\u0631\u062d", "surah_en_name": "Ash-Sharh", "surah_en_name_translation": "The Consolation", "revelation_type": "Meccan", "juz": 30, "manzil": 7, "page": 596, "ruku": 536, "hizb_quarter": 239, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 6091, "text": "[[94 ~ ALAM-NASYRAH (KELAPANGAN DADA) Pendahuluan: Makkiyyah, 8 ayat ~ Surat ini memaparkan bahwa Allah Swt. telah melapangkan dan menjadikan hati Nabi- Nya, Muhammad saw., sebagai tempat turunnya berbagai rahasia dan ilmu pengetahuan. Disebutkan pula bahwa Allah juga telah menghilangkan beban menyampaikan dakwah yang terasa berat dari punggungnya, dan bahwa Allah menggandeng nama Muhammad dengan nama-Nya dalam kalimat syahadat yang menjadi dasar akidah dan syiar-syiar agama. Ayat-ayat selanjutnya, dalam surat ini, mengemukakan salah satu sunnatull\u00e2h yaitu bahwa kemudahan akan selalu menyertai kesulitan. Kemudian mengajak Rasulullah untuk berusaha mengerjakan kebaikan lain setiap kali selesai mengerjakan suatu kebaikan, juga untuk menjadikan Tuhan sebagai tujuannya. Karena memang Dialah Tuhan Yang Mahakuasa untuk menolongnya.]] Kami telah melapangkan dadamu dengan petunjuk dan keimanan yang ada di dalamnya."}, {"id": 361534, "identifier": "id.muntakhab", "surah_number": 94, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0634\u0631\u062d", "surah_en_name": "Ash-Sharh", "surah_en_name_translation": "The Consolation", "revelation_type": "Meccan", "juz": 30, "manzil": 7, "page": 596, "ruku": 536, "hizb_quarter": 239, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 6092, "text": "Dan Kami, dengan menolong dan memudahkan urusanmu, telah meringankan beban-beban dakwah yang memberatkan punggungmu."}, {"id": 361535, "identifier": "id.muntakhab", "surah_number": 94, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0634\u0631\u062d", "surah_en_name": "Ash-Sharh", "surah_en_name_translation": "The Consolation", "revelation_type": "Meccan", "juz": 30, "manzil": 7, "page": 596, "ruku": 536, "hizb_quarter": 239, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 6093, "text": "Yang memberatkan punggungmu."}, {"id": 361536, "identifier": "id.muntakhab", "surah_number": 94, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0634\u0631\u062d", "surah_en_name": "Ash-Sharh", "surah_en_name_translation": "The Consolation", "revelation_type": "Meccan", "juz": 30, "manzil": 7, "page": 596, "ruku": 536, "hizb_quarter": 239, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 6094, "text": "Dan Kami telah muliakan namamu, lalu menjadikan namamu selalu tersebut oleh setiap orang yang beriman berdampingan dengan nama Kami."}, {"id": 361537, "identifier": "id.muntakhab", "surah_number": 94, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0634\u0631\u062d", "surah_en_name": "Ash-Sharh", "surah_en_name_translation": "The Consolation", "revelation_type": "Meccan", "juz": 30, "manzil": 7, "page": 596, "ruku": 536, "hizb_quarter": 239, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 6095, "text": "Itu adalah sebagian nikmat Kami padamu. Maka yakinlah dengan kasih sayang Kami, karena sesungguhnya kesulitan itu selalu disertai dengan banyak kemudahan."}, {"id": 361538, "identifier": "id.muntakhab", "surah_number": 94, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0634\u0631\u062d", "surah_en_name": "Ash-Sharh", "surah_en_name_translation": "The Consolation", "revelation_type": "Meccan", "juz": 30, "manzil": 7, "page": 596, "ruku": 536, "hizb_quarter": 239, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 6096, "text": "Sesungguhnya dalam setiap kesulitan terdapat kemudahan yang banyak pula."}, {"id": 361539, "identifier": "id.muntakhab", "surah_number": 94, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0634\u0631\u062d", "surah_en_name": "Ash-Sharh", "surah_en_name_translation": "The Consolation", "revelation_type": "Meccan", "juz": 30, "manzil": 7, "page": 596, "ruku": 536, "hizb_quarter": 239, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 6097, "text": "Maka, apabila kamu telah selesai dalam urusan dakwah dan jihad, lakukanlah ibadah dengan sungguh- sungguh. Lakukanlah ibadah sampai dirimu merasa lelah."}, {"id": 361540, "identifier": "id.muntakhab", "surah_number": 94, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0634\u0631\u062d", "surah_en_name": "Ash-Sharh", "surah_en_name_translation": "The Consolation", "revelation_type": "Meccan", "juz": 30, "manzil": 7, "page": 596, "ruku": 536, "hizb_quarter": 239, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 6098, "text": "Dan hendaknya hanya kepada Tuhanmulah kamu menghadap dan mengadukan segala permasalahan dan kebutuhanmu."}]