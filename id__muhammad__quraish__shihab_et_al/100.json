[{"id": 361588, "identifier": "id.muntakhab", "surah_number": 100, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0639\u0627\u062f\u064a\u0627\u062a", "surah_en_name": "Al-Aadiyaat", "surah_en_name_translation": "The Chargers", "revelation_type": "Meccan", "juz": 30, "manzil": 7, "page": 599, "ruku": 542, "hizb_quarter": 239, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 6147, "text": "[[100 ~ AL-'ADIYAT (KUDA-KUDA PERANG YANG BERLARI CEPAT) Pendahuluan: Makkiyyah, 11 ayat ~ Di awal surat ini, Allah bersumpah demi kuda perang bahwa manusia sangat ingkar terhadap nikmat Tuhannya. Kelak, di akhirat, ia akan menjadi saksi bagi dirinya sendiri. Kecintaanya pada harta benda dan kekayaan telah menjadikannya kikir. Sedang pada bagian akhir surat ini disebutkan tentang hari kebangkitan dan peringatan akan adanya perhitungan dan pembalasan.]] Aku bersumpah demi kuda-kuda perang yang berlari cepat sehingga nafasnya yang terengah-engah itu terdengar."}, {"id": 361589, "identifier": "id.muntakhab", "surah_number": 100, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0639\u0627\u062f\u064a\u0627\u062a", "surah_en_name": "Al-Aadiyaat", "surah_en_name_translation": "The Chargers", "revelation_type": "Meccan", "juz": 30, "manzil": 7, "page": 599, "ruku": 542, "hizb_quarter": 239, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 6148, "text": "Kuda yang mengeluarkan percikan api ketika menyentuh bumi dan ketika hendak berjalan."}, {"id": 361590, "identifier": "id.muntakhab", "surah_number": 100, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0639\u0627\u062f\u064a\u0627\u062a", "surah_en_name": "Al-Aadiyaat", "surah_en_name_translation": "The Chargers", "revelation_type": "Meccan", "juz": 30, "manzil": 7, "page": 599, "ruku": 542, "hizb_quarter": 239, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 6149, "text": "Kuda yang menyerang musuh sebelum matahari terbit."}, {"id": 357802, "identifier": "id.muntakhab", "surah_number": 100, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0639\u0627\u062f\u064a\u0627\u062a", "surah_en_name": "Al-Aadiyaat", "surah_en_name_translation": "The Chargers", "revelation_type": "Meccan", "juz": 30, "manzil": 7, "page": 599, "ruku": 542, "hizb_quarter": 239, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 6150, "text": "Kuda-kuda itu menerbangkan debu yang tebal di tempat-tempat musuh."}, {"id": 358002, "identifier": "id.muntakhab", "surah_number": 100, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0639\u0627\u062f\u064a\u0627\u062a", "surah_en_name": "Al-Aadiyaat", "surah_en_name_translation": "The Chargers", "revelation_type": "Meccan", "juz": 30, "manzil": 7, "page": 599, "ruku": 542, "hizb_quarter": 239, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 6151, "text": "Lalu menjadikan debu itu berada di tengah-tengah kumpulan musuh sehingga mereka merasa takut dan was-was."}, {"id": 358206, "identifier": "id.muntakhab", "surah_number": 100, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0639\u0627\u062f\u064a\u0627\u062a", "surah_en_name": "Al-Aadiyaat", "surah_en_name_translation": "The Chargers", "revelation_type": "Meccan", "juz": 30, "manzil": 7, "page": 599, "ruku": 542, "hizb_quarter": 239, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 6152, "text": "Sesungguhnya manusia sangt ingkar terhadap nikmat Tuhan yang tak terbilang."}, {"id": 358376, "identifier": "id.muntakhab", "surah_number": 100, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0639\u0627\u062f\u064a\u0627\u062a", "surah_en_name": "Al-Aadiyaat", "surah_en_name_translation": "The Chargers", "revelation_type": "Meccan", "juz": 30, "manzil": 7, "page": 599, "ruku": 542, "hizb_quarter": 239, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 6153, "text": "Di akhirat kelak ia akan menjadi saksi atas dirinya dan akan mengakui segala dosanya."}, {"id": 361591, "identifier": "id.muntakhab", "surah_number": 100, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0639\u0627\u062f\u064a\u0627\u062a", "surah_en_name": "Al-Aadiyaat", "surah_en_name_translation": "The Chargers", "revelation_type": "Meccan", "juz": 30, "manzil": 7, "page": 599, "ruku": 542, "hizb_quarter": 239, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 6154, "text": "Dan karena kecintaannya pada harta, manusia menjadi kikir sehingga tidak melaksanakan apa yang seharusnya dilakukan berkenaan dengan harta itu."}, {"id": 361592, "identifier": "id.muntakhab", "surah_number": 100, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0639\u0627\u062f\u064a\u0627\u062a", "surah_en_name": "Al-Aadiyaat", "surah_en_name_translation": "The Chargers", "revelation_type": "Meccan", "juz": 30, "manzil": 7, "page": 599, "ruku": 542, "hizb_quarter": 240, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 6155, "text": "Apakah ia tidak mengetahui balasan dari perbuatannya itu, sehingga tidak tahu bahwa ketika seluruh jasad dibangkitkan dari kubur dan apa yang ada di dalam dada--yang telah tercatat dalam daftar perbuatan mereka, yang baik maupun yang buruk--itu dikumpulkan?"}, {"id": 361593, "identifier": "id.muntakhab", "surah_number": 100, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0639\u0627\u062f\u064a\u0627\u062a", "surah_en_name": "Al-Aadiyaat", "surah_en_name_translation": "The Chargers", "revelation_type": "Meccan", "juz": 30, "manzil": 7, "page": 600, "ruku": 542, "hizb_quarter": 240, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 6156, "text": "Apakah ia tidak mengetahui balasan dari perbuatannya itu, sehingga tidak tahu bahwa ketika seluruh jasad dibangkitkan dari kubur dan apa yang ada di dalam dada--yang telah tercatat dalam daftar perbuatan mereka, yang baik maupun yang buruk--itu dikumpulkan?"}, {"id": 361594, "identifier": "id.muntakhab", "surah_number": 100, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0639\u0627\u062f\u064a\u0627\u062a", "surah_en_name": "Al-Aadiyaat", "surah_en_name_translation": "The Chargers", "revelation_type": "Meccan", "juz": 30, "manzil": 7, "page": 600, "ruku": 542, "hizb_quarter": 240, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 6157, "text": "Sesungguhnya Tuhan Pemelihara dan Pencipta mereka benar-benar Maha Mengetahui segala perbuatan dan pembalasan mereka pada hari kebangkitan dan perhitungan."}]