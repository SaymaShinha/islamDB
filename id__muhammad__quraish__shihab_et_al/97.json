[{"id": 361567, "identifier": "id.muntakhab", "surah_number": 97, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0642\u062f\u0631", "surah_en_name": "Al-Qadr", "surah_en_name_translation": "The Power, Fate", "revelation_type": "Meccan", "juz": 30, "manzil": 7, "page": 598, "ruku": 539, "hizb_quarter": 239, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 6126, "text": "[[97 ~ AL-QADR (KEMULIAAN) Pendahuluan: Makkiyyah, 5 ayat ~ Dalam surat ini terdapat penjelasan tentang al-Qur'\u00e2n dan malam diturunkannya, dan penjelasan bahwa malam tersebut mempunyai nilai keutamaan yang lebih baik dari seribu bulan. Selain itu, juga terdapat keterangan bahwa para malaikat, termasuk malaikat Jibr\u00eel, pada malam itu turun ke bumi atas izin Allah untuk membawa segala perintah. Malam itu berisi kedamaian dan keselamatan sampai fajar menyingsing.]] Sesungguhnya Kami telah menurunkan al-Qur'\u00e2n pada malam kemuliaan (lailatulkadar, laylat al-qadr) dan kehormatan."}, {"id": 361568, "identifier": "id.muntakhab", "surah_number": 97, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0642\u062f\u0631", "surah_en_name": "Al-Qadr", "surah_en_name_translation": "The Power, Fate", "revelation_type": "Meccan", "juz": 30, "manzil": 7, "page": 598, "ruku": 539, "hizb_quarter": 239, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 6127, "text": "Dan tahukah kamu apakah malam kemuliaan dan kehormatan itu?"}, {"id": 361569, "identifier": "id.muntakhab", "surah_number": 97, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0642\u062f\u0631", "surah_en_name": "Al-Qadr", "surah_en_name_translation": "The Power, Fate", "revelation_type": "Meccan", "juz": 30, "manzil": 7, "page": 598, "ruku": 539, "hizb_quarter": 239, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 6128, "text": "Malam kemuliaan dan kehormatan itu lebih baik dari seribu bulan karena merupakan malam turunnya al-Qur'\u00e2n."}, {"id": 361570, "identifier": "id.muntakhab", "surah_number": 97, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0642\u062f\u0631", "surah_en_name": "Al-Qadr", "surah_en_name_translation": "The Power, Fate", "revelation_type": "Meccan", "juz": 30, "manzil": 7, "page": 598, "ruku": 539, "hizb_quarter": 239, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 6129, "text": "Para malaikat dan malaikat Jibril turun pada malam tersebut ke bumi dengan izin Tuhan untuk membawa segala perintah."}, {"id": 361571, "identifier": "id.muntakhab", "surah_number": 97, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0642\u062f\u0631", "surah_en_name": "Al-Qadr", "surah_en_name_translation": "The Power, Fate", "revelation_type": "Meccan", "juz": 30, "manzil": 7, "page": 598, "ruku": 539, "hizb_quarter": 239, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 6130, "text": "Keselamatan dari kejahatan, dan begitulah sehingga terbitnya fajar."}]