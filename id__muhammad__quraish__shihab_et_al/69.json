[{"id": 360799, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 566, "ruku": 500, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5324, "text": "[[69 ~ AL-HAQQAH (HARI KIAMAT) Pendahuluan: Makkiyyah, 52 ayat ~ Surat ini memaparkan keadaan pada hari kiamat dan menyebutkan kehancuran dan siksaan keras yang dialami umat-umat terdahulu karena mendustakan risalah. Surat ini juga berbicara tentang tiupan sangkakala, perubahan dan kehancuran bumi, gunung dan langit serta dikumpulkannya semua makhluk untuk diperhitungkan amalnya. Dalam surat ini terdapat berita gembira bagi para pengikut kebenaran berupa balasan terhormat dan kenikmatan yang akan mereka terima serta peringatan bagi para pengikut kebatilan akan siksa yang menyakitkan. Surat ini di tutup dengan pembicaraan tentang kebenaran Rasulullah saw. dalam semua yang disampaikannya dan kebenaran al-Qur'\u00e2n yang mutlak.]] Hari kiamat yang akan terjadi itu benar. Apakah hari kiamat yang benar-benar akan terjadi itu?"}, {"id": 360800, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 566, "ruku": 500, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5325, "text": "[[69 ~ AL-HAQQAH (HARI KIAMAT) Pendahuluan: Makkiyyah, 52 ayat ~ Surat ini memaparkan keadaan pada hari kiamat dan menyebutkan kehancuran dan siksaan keras yang dialami umat-umat terdahulu karena mendustakan risalah. Surat ini juga berbicara tentang tiupan sangkakala, perubahan dan kehancuran bumi, gunung dan langit serta dikumpulkannya semua makhluk untuk diperhitungkan amalnya. Dalam surat ini terdapat berita gembira bagi para pengikut kebenaran berupa balasan terhormat dan kenikmatan yang akan mereka terima serta peringatan bagi para pengikut kebatilan akan siksa yang menyakitkan. Surat ini di tutup dengan pembicaraan tentang kebenaran Rasulullah saw. dalam semua yang disampaikannya dan kebenaran al-Qur'\u00e2n yang mutlak.]] Hari kiamat yang akan terjadi itu benar. Apakah hari kiamat yang benar-benar akan terjadi itu?"}, {"id": 360801, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 566, "ruku": 500, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5326, "text": "Apakah yang dapat memberitahukanmu tentang hakikatnya dan memberikan gambaran kepadamu tentang kedahsatannya?"}, {"id": 360802, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 566, "ruku": 500, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5327, "text": "Kaum Tsam\u00fbd dan 'Ad telah mendustakan hari kiamat yang mengejutkan semua makhluk karena kedahsatannya."}, {"id": 360746, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 566, "ruku": 500, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5328, "text": "Kaum Tsam\u00fbd dibinasakan dengan peristiwa yang luar biasa dahsatnya."}, {"id": 360624, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 566, "ruku": 500, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5329, "text": "Sedangkan kaum 'Ad dibinasakan dengan angin kencang yang sangat dingin."}, {"id": 360803, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 566, "ruku": 500, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5330, "text": "Allah menimpakan angin tersebut kepada mereka selama tujuh hari delapan malam secara terus menerus. Kamu akan melihat, di tempat angin itu bertiup, mereka mati bagaikan pangkal-pangkal pohon yang telah lapuk bagian dalamnya."}, {"id": 360804, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 566, "ruku": 500, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5331, "text": "Maka, apakah kamu masih melihat seseorang dari mereka yang tersisa dan tidak turut binasa?"}, {"id": 360805, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 567, "ruku": 500, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5332, "text": "Telah datang Fir'aun, orang-orang kafir dari umat terdahulu dan kelompok masyarakat yang keluar dari kebenaran dan fitrah yang suci dengan melakukan perbuatan dosa besar yang keji."}, {"id": 360806, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 567, "ruku": 500, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5333, "text": "Masing-masing mereka durhaka kepada utusan Tuhan mereka. Maka Allah menyiksa mereka dengan siksa yang sangat keras."}, {"id": 360807, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 567, "ruku": 500, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5334, "text": "Sesungguhnya ketika air telah melampaui batas dan naik sampai ke atas gunung dalam peristiwa topan, Kami membawa kalian--dengan membawa tetua kalian--ke dalam bahtera yang berlayar."}, {"id": 360808, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 567, "ruku": 500, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5335, "text": "Agar Kami jadikan peristiwa selamatnya orang-orang Mukmin dan tenggelamnya orang-orang kafir sebagai pelajaran dan nasehat bagi kalian. Juga agar setiap orang yang mendengar dapat memperhatikannya."}, {"id": 360809, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 567, "ruku": 500, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5336, "text": "Ketika sangkakala ditiup dengan sekali tiupan saja, bumi dan gunung diangkat dari tempatnya lalu dibenturkan dengan sekali bentur."}, {"id": 360810, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 567, "ruku": 500, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5337, "text": "Ketika sangkakala ditiup dengan sekali tiupan saja, bumi dan gunung diangkat dari tempatnya lalu dibenturkan dengan sekali bentur."}, {"id": 360811, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 567, "ruku": 500, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5338, "text": "Pada hari itu terjadilah bencana, dan langit menjadi terbelah dengan hilangnya keseimbangan. Saat itu langit melemah setelah sebelumnya kuat dan terkendalikan."}, {"id": 360812, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 567, "ruku": 500, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5339, "text": "Pada hari itu terjadilah bencana, dan langit menjadi terbelah dengan hilangnya keseimbangan. Saat itu langit melemah setelah sebelumnya kuat dan terkendalikan."}, {"id": 360813, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 567, "ruku": 500, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5340, "text": "Para malaikat berada di penjuru-penjuru langit. Dan pada hari itu delapan malaikat menjunjung 'Arsy Tuhanmu di atas kepala mereka."}, {"id": 360814, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 567, "ruku": 500, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5341, "text": "Pada hari itu kalian dikumpulkan untuk diperhitungkan amal kalian. Tidak ada rahasia kalian yang tidak diketahui oleh-Nya."}, {"id": 360815, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 567, "ruku": 500, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5342, "text": "Orang yang diberikan kitab dari sebelah kanannya berkata, sambil mengungkapkan kegembiraannya kepada orang-orang disekelilingnya, \"Ambillah, bacalah kitabku ini!"}, {"id": 360816, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 567, "ruku": 500, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5343, "text": "Sesungguhnya aku, ketika di dunia, yakin akan menghadapi perhitungan ini. Maka aku pun mempersiapkannya untuk pertemuan itu.\""}, {"id": 360817, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 567, "ruku": 500, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5344, "text": "Ia benar-benar dalam kehidupan yang diridai,"}, {"id": 360818, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 567, "ruku": 500, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5345, "text": "dalam surga yang tinggi tempat dan derajatnya."}, {"id": 360819, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 567, "ruku": 500, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5346, "text": "Buah-buahannya sangat dekat untuk diambil."}, {"id": 360820, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 567, "ruku": 500, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5347, "text": "Makan dan minumlah dengan enak disebabkan amal saleh yang kalian kerjakan pada hari-hari yang telah lalu di dunia."}, {"id": 360821, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 567, "ruku": 500, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5348, "text": "Sedangkan orang yang diberikan kitab dari sebelah kirinya, dengan penuh rasa penyesalan, berkata, \"Alangkah baiknya sekiranya aku tidak diberi kitab dan tidak mengetahui perhitungan terhadap diriku!"}, {"id": 360822, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 567, "ruku": 500, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5349, "text": "Sedangkan orang yang diberikan kitab dari sebelah kirinya, dengan penuh rasa penyesalan, berkata, \"Alangkah baiknya sekiranya aku tidak diberi kitab dan tidak mengetahui perhitungan terhadap diriku!"}, {"id": 360823, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 567, "ruku": 500, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5350, "text": "Aduhai kiranya kematian yang pernah kualami menjadi batas pemisah dalam urusanku sehingga aku tidak dibangkitkan kembali."}, {"id": 360824, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 567, "ruku": 500, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5351, "text": "Apa yang aku miliki selama di dunia tidak bermanfaat sama sekali bagiku. Kesehatanku telah hilang. Begitu pula kekuatanku.\""}, {"id": 360825, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 567, "ruku": 500, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5352, "text": "Apa yang aku miliki selama di dunia tidak bermanfaat sama sekali bagiku. Kesehatanku telah hilang. Begitu pula kekuatanku.\""}, {"id": 360826, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 567, "ruku": 500, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5353, "text": "Kepada para penjaga neraka dikatakan, \"Ambillah ia dan ikatkanlah tangannya ke lehernya. Kemudian masukkan ia ke dalam neraka yang menyala-nyala. Setelah itu belitlah ia dengan rantai yang sangat panjang."}, {"id": 360827, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 567, "ruku": 500, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5354, "text": "Kepada para penjaga neraka dikatakan, \"Ambillah ia dan ikatkanlah tangannya ke lehernya. Kemudian masukkan ia ke dalam neraka yang menyala-nyala. Setelah itu belitlah ia dengan rantai yang sangat panjang."}, {"id": 360828, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 567, "ruku": 500, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5355, "text": "Kepada para penjaga neraka dikatakan, \"Ambillah ia dan ikatkanlah tangannya ke lehernya. Kemudian masukkan ia ke dalam neraka yang menyala-nyala. Setelah itu belitlah ia dengan rantai yang sangat panjang."}, {"id": 360829, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 567, "ruku": 500, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5356, "text": "Sesungguhnya dulu ia tidak percaya kepada Allah Yang Mahaagung dan tidak menganjurkan orang lain untuk memberi makan orang miskin.\""}, {"id": 360830, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 567, "ruku": 500, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5357, "text": "Sesungguhnya dulu ia tidak percaya kepada Allah Yang Mahaagung dan tidak menganjurkan orang lain untuk memberi makan orang miskin.\""}, {"id": 360831, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 568, "ruku": 500, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5358, "text": "Pada hari itu, di neraka, orang kafir itu tidak punya teman dekat yang dapat menolongnya dari api neraka. Minumannya tidak lain adalah hasil cucian penghuni neraka yang berupa darah dan nanah yang hanya dimakan oleh orang-orang yang sengaja dan terus menerus melakukan dosa."}, {"id": 360832, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 568, "ruku": 500, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5359, "text": "Pada hari itu, di neraka, orang kafir itu tidak punya teman dekat yang dapat menolongnya dari api neraka. Minumannya tidak lain adalah hasil cucian penghuni neraka yang berupa darah dan nanah yang hanya dimakan oleh orang-orang yang sengaja dan terus menerus melakukan dosa."}, {"id": 360833, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 568, "ruku": 500, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5360, "text": "Pada hari itu, di neraka, orang kafir itu tidak punya teman dekat yang dapat menolongnya dari api neraka. Minumannya tidak lain adalah hasil cucian penghuni neraka yang berupa darah dan nanah yang hanya dimakan oleh orang-orang yang sengaja dan terus menerus melakukan dosa."}, {"id": 360834, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 568, "ruku": 501, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5361, "text": "Aku bersumpah dengan apa-apa yang kalian lihat dan tidak kalian lihat berupa alam gaib, sesungguhnya al-Qur'\u00e2n itu benar-benar (wahyu) dari Allah yang disampaikan melalui seorang rasul yang mempunyai kedudukan tinggi."}, {"id": 360835, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 568, "ruku": 501, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5362, "text": "Aku bersumpah dengan apa-apa yang kalian lihat dan tidak kalian lihat berupa alam gaib, sesungguhnya al-Qur'\u00e2n itu benar-benar (wahyu) dari Allah yang disampaikan melalui seorang rasul yang mempunyai kedudukan tinggi."}, {"id": 360836, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 568, "ruku": 501, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5363, "text": "Aku bersumpah dengan apa-apa yang kalian lihat dan tidak kalian lihat berupa alam gaib, sesungguhnya al-Qur'\u00e2n itu benar-benar (wahyu) dari Allah yang disampaikan melalui seorang rasul yang mempunyai kedudukan tinggi."}, {"id": 360837, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 568, "ruku": 501, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5364, "text": "Al-Qur'\u00e2n bukanlah perkatan seorang penyair seperti yang kalian kira. Hanya sedikit sekali keyakinan kalian bahwa al-Qur'\u00e2n itu dari Allah."}, {"id": 360838, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 568, "ruku": 501, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5365, "text": "Dan al-Qur'\u00e2n bukanlah mantra seperti mantranya para tukang tenung sebagaimana anggapan kalian. Hanya sedikit sekali sikap perenungan kalian untuk memahami perbedaan antara keduanya."}, {"id": 360839, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 568, "ruku": 501, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5366, "text": "Al-Qur'\u00e2n adalah wahyu yang diturunkan oleh Zat yang menciptakan dan memelihara alam semesta ini."}, {"id": 360840, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 568, "ruku": 501, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5367, "text": "Sekiranya Muhammad mengada-ada sesuatu yang tidak Kami firmankan, tentu perkataannya itu akan Kami ambil seperti orang yang merampas sesuatu dengan keras. Kemudian Kami potong urat tali jantungnya sehingga ia mati seketika."}, {"id": 360841, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 568, "ruku": 501, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5368, "text": "Sekiranya Muhammad mengada-ada sesuatu yang tidak Kami firmankan, tentu perkataannya itu akan Kami ambil seperti orang yang merampas sesuatu dengan keras. Kemudian Kami potong urat tali jantungnya sehingga ia mati seketika."}, {"id": 360842, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 568, "ruku": 501, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5369, "text": "Sekiranya Muhammad mengada-ada sesuatu yang tidak Kami firmankan, tentu perkataannya itu akan Kami ambil seperti orang yang merampas sesuatu dengan keras. Kemudian Kami potong urat tali jantungnya sehingga ia mati seketika."}, {"id": 360843, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 568, "ruku": 501, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5370, "text": "Tidak ada seorang pun di antara kalian--betapa pun kuatnya ia--yang dapat menghalangi siksa Kami."}, {"id": 360844, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 568, "ruku": 501, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5371, "text": "Sesungguhnya al-Qur'\u00e2n benar-benar menjadi pelajaran bagi orang-orang yang mengikuti perintah Allah dan menjauhi segala larangan-Nya."}, {"id": 360845, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 568, "ruku": 501, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5372, "text": "Kami sungguh mengetahui bahwa di antara kalian ada yang mendustakan al-Qur'\u00e2n."}, {"id": 360846, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 568, "ruku": 501, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5373, "text": "Hal itu sungguh menyebabkan orang-orang yang mengingkarinya sangat menyesal, ketika mereka menyaksikan siksa yang mereka alami dan kenikmatan yang dirasakan oleh orang-orang yang mempercayainya."}, {"id": 360847, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 568, "ruku": 501, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5374, "text": "Sesungguhnya al-Qur'\u00e2n adalah kebenaran yang tidak mengandung keraguan."}, {"id": 360848, "identifier": "id.muntakhab", "surah_number": 69, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062d\u0627\u0642\u0629", "surah_en_name": "Al-Haaqqa", "surah_en_name_translation": "The Reality", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 568, "ruku": 501, "hizb_quarter": 227, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 5375, "text": "Maka, sucikanlah Tuhanmu Yang Mahaagung dan sebutlah nama-Nya selalu."}]