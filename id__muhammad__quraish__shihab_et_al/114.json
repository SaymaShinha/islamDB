[{"id": 361668, "identifier": "id.muntakhab", "surah_number": 114, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0646\u0627\u0633", "surah_en_name": "An-Naas", "surah_en_name_translation": "Mankind", "revelation_type": "Meccan", "juz": 30, "manzil": 7, "page": 604, "ruku": 556, "hizb_quarter": 240, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 6231, "text": "[[114 ~ AN-NAS (MANUSIA) Pendahuluan: Makkiyyah, 6 ayat ~ Dalam surat ini, Allah memerintahkan Nabi Muhammad saw. untuk kembali dan berlindung kepada-Nya dalam mencegah kejahatan yang besar, yang tidak terlihat oleh kebanyakan manusia. Sebab, kejahatan tersebut datang kepada mereka dari hawa nafsunya sehingga mereka terjerumus dalam apa yang dilarang. Itulah kejahatan bisikan setan yang tersembunyi dari penglihatan mata, atau yang terlihat dan tersembunyi dalam tipu muslihat.]] Katakanlah, aku berlindung kepada Tuhan manusia, dan pengatur segala urusannya."}, {"id": 361669, "identifier": "id.muntakhab", "surah_number": 114, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0646\u0627\u0633", "surah_en_name": "An-Naas", "surah_en_name_translation": "Mankind", "revelation_type": "Meccan", "juz": 30, "manzil": 7, "page": 604, "ruku": 556, "hizb_quarter": 240, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 6232, "text": "Pemilik penuh manusia, baik penguasa atau yang dikuasai."}, {"id": 361670, "identifier": "id.muntakhab", "surah_number": 114, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0646\u0627\u0633", "surah_en_name": "An-Naas", "surah_en_name_translation": "Mankind", "revelation_type": "Meccan", "juz": 30, "manzil": 7, "page": 604, "ruku": 556, "hizb_quarter": 240, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 6233, "text": "Tuhan manusia Yang Mahakuasa dalam bertindak kepada mereka"}, {"id": 361671, "identifier": "id.muntakhab", "surah_number": 114, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0646\u0627\u0633", "surah_en_name": "An-Naas", "surah_en_name_translation": "Mankind", "revelation_type": "Meccan", "juz": 30, "manzil": 7, "page": 604, "ruku": 556, "hizb_quarter": 240, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 6234, "text": "Dari kejahatan pembisik bagi manusia yang menghindar jika kamu meminta pertolongan dari Allah Swt."}, {"id": 361672, "identifier": "id.muntakhab", "surah_number": 114, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0646\u0627\u0633", "surah_en_name": "An-Naas", "surah_en_name_translation": "Mankind", "revelation_type": "Meccan", "juz": 30, "manzil": 7, "page": 604, "ruku": 556, "hizb_quarter": 240, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 6235, "text": "Yang membisikkan dengan tersembunyi--dalam dada manusia--sesuatu yang memalingkannya dari jalan kebenaran."}, {"id": 358622, "identifier": "id.muntakhab", "surah_number": 114, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0646\u0627\u0633", "surah_en_name": "An-Naas", "surah_en_name_translation": "Mankind", "revelation_type": "Meccan", "juz": 30, "manzil": 7, "page": 604, "ruku": 556, "hizb_quarter": 240, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "id", "name": "Quraish Shihab", "transelator_en_name": "Muhammad Quraish Shihab et al.", "format": "text", "type": "translation", "ayah_number": 6236, "text": "Yaitu jin dan manusia."}]