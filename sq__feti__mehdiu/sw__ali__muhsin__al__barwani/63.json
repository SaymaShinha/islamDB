[{"id": 528828, "identifier": "sw.barwani", "surah_number": 63, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0645\u0646\u0627\u0641\u0642\u0648\u0646", "surah_en_name": "Al-Munaafiqoon", "surah_en_name_translation": "The Hypocrites", "revelation_type": "Medinan", "juz": 28, "manzil": 7, "page": 554, "ruku": 488, "hizb_quarter": 221, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "sw", "name": "Al-Barwani", "transelator_en_name": "Ali Muhsin Al-Barwani", "format": "text", "type": "translation", "ayah_number": 5189, "text": "Wanapo kujia wanaafiki husema: Tunashuhudia ya kuwa wewe ni Mtume wa Mwenyezi Mungu. Na Mwenyezi Mungu anajua kuwa wewe ni Mtume wa Mwenyezi Mungu, na Mwenyezi Mungu anashuhudia ya kuwa hakika wanaafiki ni waongo."}, {"id": 528829, "identifier": "sw.barwani", "surah_number": 63, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0645\u0646\u0627\u0641\u0642\u0648\u0646", "surah_en_name": "Al-Munaafiqoon", "surah_en_name_translation": "The Hypocrites", "revelation_type": "Medinan", "juz": 28, "manzil": 7, "page": 554, "ruku": 488, "hizb_quarter": 221, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "sw", "name": "Al-Barwani", "transelator_en_name": "Ali Muhsin Al-Barwani", "format": "text", "type": "translation", "ayah_number": 5190, "text": "Wamevifanya viapo vyao ni kinga, na wao wakajizuia kuifuata Njia ya Mwenyezi Mungu. Hakika ni mabaya kabisa waliyo kuwa wakiyafanya."}, {"id": 528831, "identifier": "sw.barwani", "surah_number": 63, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0645\u0646\u0627\u0641\u0642\u0648\u0646", "surah_en_name": "Al-Munaafiqoon", "surah_en_name_translation": "The Hypocrites", "revelation_type": "Medinan", "juz": 28, "manzil": 7, "page": 554, "ruku": 488, "hizb_quarter": 221, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "sw", "name": "Al-Barwani", "transelator_en_name": "Ali Muhsin Al-Barwani", "format": "text", "type": "translation", "ayah_number": 5191, "text": "Hayo ni kwa sababu ya kuwa waliamini, kisha wakakufuru; kwa hivyo umepigwa muhuri juu ya nyoyo zao. Kwa hivyo hawafahamu lolote."}, {"id": 528832, "identifier": "sw.barwani", "surah_number": 63, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0645\u0646\u0627\u0641\u0642\u0648\u0646", "surah_en_name": "Al-Munaafiqoon", "surah_en_name_translation": "The Hypocrites", "revelation_type": "Medinan", "juz": 28, "manzil": 7, "page": 554, "ruku": 488, "hizb_quarter": 222, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "sw", "name": "Al-Barwani", "transelator_en_name": "Ali Muhsin Al-Barwani", "format": "text", "type": "translation", "ayah_number": 5192, "text": "Na unapo waona, miili yao inakupendeza, na wakisema, unasikiliza usemi wao. Lakini wao ni kama magogo yaliyo egemezwa. Wao hudhania kila ukelele unao pigwa ni kwa ajili yao. Hao ni maadui; tahadhari nao. Mwenyezi Mungu awaangamizilie mbali! Vipi wanapotoka na haki?"}, {"id": 528833, "identifier": "sw.barwani", "surah_number": 63, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0645\u0646\u0627\u0641\u0642\u0648\u0646", "surah_en_name": "Al-Munaafiqoon", "surah_en_name_translation": "The Hypocrites", "revelation_type": "Medinan", "juz": 28, "manzil": 7, "page": 555, "ruku": 488, "hizb_quarter": 222, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "sw", "name": "Al-Barwani", "transelator_en_name": "Ali Muhsin Al-Barwani", "format": "text", "type": "translation", "ayah_number": 5193, "text": "Na wanapo ambiwa: Njooni ili Mtume wa Mwenyezi Mungu akuombeeni maghfira, huvigeuza vichwa vyao, na unawaona wanageuka nao wamejaa kiburi."}, {"id": 528834, "identifier": "sw.barwani", "surah_number": 63, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0645\u0646\u0627\u0641\u0642\u0648\u0646", "surah_en_name": "Al-Munaafiqoon", "surah_en_name_translation": "The Hypocrites", "revelation_type": "Medinan", "juz": 28, "manzil": 7, "page": 555, "ruku": 488, "hizb_quarter": 222, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "sw", "name": "Al-Barwani", "transelator_en_name": "Ali Muhsin Al-Barwani", "format": "text", "type": "translation", "ayah_number": 5194, "text": "Sawa sawa kwao, ukiwatakia maghfira au hukuwatakia maghfira, Mwenyezi Mungu hatawaghufiria. Hakika Mwenyezi Mungu hawaongoi watu wapotovu."}, {"id": 528835, "identifier": "sw.barwani", "surah_number": 63, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0645\u0646\u0627\u0641\u0642\u0648\u0646", "surah_en_name": "Al-Munaafiqoon", "surah_en_name_translation": "The Hypocrites", "revelation_type": "Medinan", "juz": 28, "manzil": 7, "page": 555, "ruku": 488, "hizb_quarter": 222, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "sw", "name": "Al-Barwani", "transelator_en_name": "Ali Muhsin Al-Barwani", "format": "text", "type": "translation", "ayah_number": 5195, "text": "Hao ndio wanao sema: Msitoe mali kwa ajili ya walioko kwa Mtume wa Mwenyezi Mungu, ili waondokelee mbali! Na Mwenyezi Mungu ndiye Mwenye khazina za mbingu na ardhi, lakini wanaafiki hawafahamu."}, {"id": 528836, "identifier": "sw.barwani", "surah_number": 63, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0645\u0646\u0627\u0641\u0642\u0648\u0646", "surah_en_name": "Al-Munaafiqoon", "surah_en_name_translation": "The Hypocrites", "revelation_type": "Medinan", "juz": 28, "manzil": 7, "page": 555, "ruku": 488, "hizb_quarter": 222, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "sw", "name": "Al-Barwani", "transelator_en_name": "Ali Muhsin Al-Barwani", "format": "text", "type": "translation", "ayah_number": 5196, "text": "Wanasema: Tukirejea Madina mwenye utukufu zaidi bila ya shaka atamfukuza aliye mnyonge. Na Mwenyezi Mungu ndiye Mwenye utukufu - Yeye, na Mtume wake, na Waumini. Lakini wanaafiki hawajui."}, {"id": 528837, "identifier": "sw.barwani", "surah_number": 63, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0645\u0646\u0627\u0641\u0642\u0648\u0646", "surah_en_name": "Al-Munaafiqoon", "surah_en_name_translation": "The Hypocrites", "revelation_type": "Medinan", "juz": 28, "manzil": 7, "page": 555, "ruku": 489, "hizb_quarter": 222, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "sw", "name": "Al-Barwani", "transelator_en_name": "Ali Muhsin Al-Barwani", "format": "text", "type": "translation", "ayah_number": 5197, "text": "Enyi mlio amini! Yasikusahaulisheni mali yenu, wala watoto wenu, kumkumbuka Mwenyezi Mungu. Na wenye kufanya hayo ndio walio khasiri."}, {"id": 528838, "identifier": "sw.barwani", "surah_number": 63, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0645\u0646\u0627\u0641\u0642\u0648\u0646", "surah_en_name": "Al-Munaafiqoon", "surah_en_name_translation": "The Hypocrites", "revelation_type": "Medinan", "juz": 28, "manzil": 7, "page": 555, "ruku": 489, "hizb_quarter": 222, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "sw", "name": "Al-Barwani", "transelator_en_name": "Ali Muhsin Al-Barwani", "format": "text", "type": "translation", "ayah_number": 5198, "text": "Na toeni katika tulicho kupeni kabla hayajamfikia mmoja wenu mauti, tena hapo akasema: Mola wangu Mlezi! Huniakhirishi muda kidogo nipate kutoa sadaka, na niwe katika watu wema?"}, {"id": 528839, "identifier": "sw.barwani", "surah_number": 63, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0645\u0646\u0627\u0641\u0642\u0648\u0646", "surah_en_name": "Al-Munaafiqoon", "surah_en_name_translation": "The Hypocrites", "revelation_type": "Medinan", "juz": 28, "manzil": 7, "page": 555, "ruku": 489, "hizb_quarter": 222, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "sw", "name": "Al-Barwani", "transelator_en_name": "Ali Muhsin Al-Barwani", "format": "text", "type": "translation", "ayah_number": 5199, "text": "Wala Mwenyezi Mungu hataiakhirisha nafsi yoyote inapo fika ajali yake; na Mwenyezi Mungu anazo khabari za mnayo yatenda."}]