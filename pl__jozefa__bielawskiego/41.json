[{"id": 421857, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 413, "hizb_quarter": 190, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4219, "text": "Ha. Mim."}, {"id": 421858, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 413, "hizb_quarter": 190, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4220, "text": "Objawienie od Mi\u0142osiernego, Lito\u015bciwego."}, {"id": 421859, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 413, "hizb_quarter": 190, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4221, "text": "Ksi\u0119ga, kt\u00f3rej znaki s\u0105 wyja\u015bnione, jako Koran arabski, dla ludzi, kt\u00f3rzy posiadaj\u0105 wiedz\u0119"}, {"id": 421860, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 413, "hizb_quarter": 190, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4222, "text": "- zwiastun radosnej wie\u015bci i ostrze\u017cenie. Lecz wi\u0119kszo\u015b\u0107 z nich si\u0119 odwr\u00f3ci\u0142a; oni nie s\u0142uchaj\u0105."}, {"id": 421861, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 413, "hizb_quarter": 190, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4223, "text": "Powiedzieli: \"Nasze serca s\u0105 zas\u0142oni\u0119te, oddzielone od tego, do czego wzywasz; w naszych uszach jest g\u0142uchota, a mi\u0119dzy nami i tob\u0105 jest przegroda. Dzia\u0142aj wi\u0119c, i my dzia\u0142amy!\""}, {"id": 421862, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 413, "hizb_quarter": 190, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4224, "text": "Powiedz: \"Ja jestem tylko \u015bmiertelnikiem, tak jak wy. Zosta\u0142o mi objawione, \u017ce B\u00f3g wasz jest Bogiem Jedynym. Id\u017acie wi\u0119c prosto ku Niemu i pro\u015bcie Go o przebaczenie! I biada ba\u0142wochwalcom,"}, {"id": 421863, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 413, "hizb_quarter": 190, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4225, "text": "Kt\u00f3rzy nie daj\u0105 ja\u0142mu\u017cny i kt\u00f3rzy nie wierz\u0105 w \u017cycie ostateczne!"}, {"id": 421864, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 413, "hizb_quarter": 190, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4226, "text": "Zaprawd\u0119, tych, kt\u00f3rzy wierz\u0105 i kt\u00f3rzy pe\u0142ni\u0105 dobre dzie\u0142a - czeka nagroda nieustanna!\""}, {"id": 421865, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 414, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4227, "text": "Powiedz: \"Czy nie wierzycie w Tego, kt\u00f3ry stworzy\u0142 ziemi\u0119 w ci\u0105gu dw\u00f3ch dni, i wynajdujecie Jemu r\u00f3wnych? To jest Pan \u015bwiat\u00f3w!\""}, {"id": 421866, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 414, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4228, "text": "On umie\u015bci\u0142 na niej solidnie stoj\u0105ce, wznosz\u0105ce si\u0119 nad ni\u0105, i pob\u0142ogos\u0142awi\u0142 j\u0105. Porozdziela\u0142 na niej \u015brodki \u017cywno\u015bci w ci\u0105gu czterech dni, r\u00f3wno dla wszystkich prosz\u0105cych."}, {"id": 421867, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 414, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4229, "text": "Potem zwr\u00f3ci\u0142 si\u0119 ku niebu - ono by\u0142o wtedy dymem - i powiedzia\u0142 jemu i ziemi: \"Przychod\u017acie dobrowolnie lub wbrew woli!\" One powiedzia\u0142y: \"Przychodzimy pos\u0142uszne.\""}, {"id": 421868, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 478, "ruku": 414, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4230, "text": "I On ustanowi\u0142 siedem niebios, w dwa dni, i objawi\u0142 ka\u017cdemu niebu jego zasady. I ozdobili\u015bmy niebo najbli\u017csze lampami - tak\u017ce dla ochrony. Takie jest ustanowienie Pot\u0119\u017cnego, Wszechwiedz\u0105cego!"}, {"id": 421869, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 478, "ruku": 414, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4231, "text": "A je\u015bli oni si\u0119 odwr\u00f3c\u0105, to powiedz: \"Ostrzegam was przed piorunem podobnym do pioruna ludu Ad i Samud.\""}, {"id": 421870, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 478, "ruku": 414, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4232, "text": "Kiedy przyszli do nich pos\u0142a\u0144cy z jednej i z drugiej strony: \"Nie czcijcie nikogo opr\u00f3cz Boga!\", oni powiedzieli: \"Je\u015bliby zechcia\u0142 nasz Pan, to zes\u0142a\u0142by anio\u0142\u00f3w; lecz my nie wierzymy w pos\u0142annictwo, z kt\u00f3rym wy zostali\u015bcie pos\u0142ani.\""}, {"id": 421871, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 478, "ruku": 414, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4233, "text": "A je\u015bli chodzi o lud Ad, to oni bezprawnie wbili si\u0119 w dum\u0119 na ziemi i powiedzieli: \"Kt\u00f3\u017c ma wi\u0119cej od nas si\u0142y?\" Czy\u017c oni nie widzieli, \u017ce B\u00f3g, kt\u00f3ry ich stworzy\u0142, ma pot\u0119\u017cniejsz\u0105 od nich moc? I oni odrzucali Nasze znaki."}, {"id": 421872, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 478, "ruku": 414, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4234, "text": "Wys\u0142ali\u015bmy wi\u0119c przeciwko nim wiatr wyj\u0105cy w owe dni nieszcz\u0119sne, a\u017ceby da\u0107 im zakosztowa\u0107 kary ha\u0144bi\u0105cej w \u017cyciu na tym \u015bwiecie. Ale, zaprawd\u0119, kara w \u017cyciu ostatecznym jest bardziej ha\u0144bi\u0105ca; a oni nie b\u0119d\u0105 wspomo\u017ceni!"}, {"id": 421873, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 478, "ruku": 414, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4235, "text": "A je\u015bli chodzi o lud Samud, to prowadzili\u015bmy ich drog\u0105 prost\u0105, lecz oni woleli \u015blepot\u0119 zamiast drogi prostej. Dosi\u0119gn\u0105 ich wi\u0119c grom kary poni\u017caj\u0105cej za to, co oni czynili."}, {"id": 421874, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 478, "ruku": 414, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4236, "text": "A uratowali\u015bmy tych; kt\u00f3rzy uwierzyli i byli bogobojni."}, {"id": 421875, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 478, "ruku": 415, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4237, "text": "W Dniu, kiedy wrogowie Boga stan\u0105 przed ogniem, zostan\u0105 podzieleni."}, {"id": 421876, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 478, "ruku": 415, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4238, "text": "A kiedy przybli\u017c\u0105 si\u0119 do niego, ich s\u0142uch, spojrzenie i sk\u00f3ra b\u0119d\u0105 \u015bwiadczy\u0107 przeciwko nim z powodu tego, co czynili."}, {"id": 421877, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 479, "ruku": 415, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4239, "text": "I b\u0119d\u0105 m\u00f3wili swojej sk\u00f3rze: \"Dlaczego \u015bwiadczysz przeciwko nam?\" One powiedz\u0105: \"B\u00f3g da\u0142 nam mow\u0119, albowiem da\u0142 mow\u0119 wszelkiej rzeczy; On was stworzy\u0142 po raz pierwszy i wy do Niego zostaniecie sprowadzeni.\""}, {"id": 421878, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 479, "ruku": 415, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4240, "text": "I nie mogli\u015bcie si\u0119 ukry\u0107, \u017ceby Wasz s\u0142uch, spojrzenia i sk\u00f3ry nie \u015bwiadczy\u0142y przeciwko wam. Lecz s\u0105dzili\u015bcie, \u017ce B\u00f3g niewiele wie z tego, co czynicie."}, {"id": 421879, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 479, "ruku": 415, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4241, "text": "Oto wasze mniemanie, kt\u00f3re mieli\u015bcie o waszym Panu - ono was zgubi\u0142o. I znale\u017ali\u015bcie si\u0119 mi\u0119dzy tymi, kt\u00f3rzy ponie\u015bli strat\u0119."}, {"id": 421880, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 479, "ruku": 415, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4242, "text": "Je\u015bli oni nawet oka\u017c\u0105 cierpliwo\u015b\u0107, to i tak ogie\u0144 b\u0119dzie ich miejscem schronienia; a je\u015bli b\u0119d\u0105 prosi\u0107 o \u0142ask\u0119, to i tak nie znajd\u0105 si\u0119 w\u015br\u00f3d tych, kt\u00f3rzy doznaj\u0105 \u0142aski."}, {"id": 421881, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 479, "ruku": 415, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4243, "text": "I przydzielili\u015bmy im wsp\u00f3\u0142towarzyszy, kt\u00f3rzy im upi\u0119kszyli to, co jest przed nimi i co jest za nimi. I zi\u015bci\u0142o si\u0119 na nich s\u0142owo o narodach, kt\u00f3re ju\u017c dawno przemin\u0119\u0142y - spo\u015br\u00f3d d\u017cin\u00f3w i ludzi. Zaprawd\u0119, oni si\u0119 znajd\u0105 w\u015br\u00f3d ponosz\u0105cych strat\u0119!"}, {"id": 421882, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 479, "ruku": 416, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4244, "text": "Powiedzieli ci, kt\u00f3rzy nie uwierzyli: \"Nie s\u0142uchajcie tego Koranu i m\u00f3wcie o nim puste s\u0142owa! By\u0107 mo\u017ce, zwyci\u0119\u017cycie!\""}, {"id": 421883, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 479, "ruku": 416, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4245, "text": "My na pewno damy zakosztowa\u0107 tym, kt\u00f3rzy nie wierz\u0105, kary strasznej; My zap\u0142acimy im czym\u015b gorszym ni\u017c to, co oni czynili."}, {"id": 421884, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 479, "ruku": 416, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4246, "text": "Taka jest zap\u0142ata dla wrog\u00f3w Boga - ogie\u0144! Dla nich b\u0119dzie tam siedziba wieczno\u015bci jako zap\u0142ata za to, i\u017c oni odrzucali Nasze znaki."}, {"id": 421885, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 479, "ruku": 416, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4247, "text": "Powiedzieli ci, kt\u00f3rzy nie uwierzyli: \"Panie nasz! Poka\u017c nam tych spo\u015br\u00f3d d\u017cin\u00f3w i ludzi, kt\u00f3rzy nas sprowadzili z drogi na manowce. My ich umie\u015bcimy pod naszymi nogami, aby si\u0119 znale\u017ali w\u015br\u00f3d najpodlejszych.\""}, {"id": 421886, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 480, "ruku": 416, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4248, "text": "Zaprawd\u0119, na tych, kt\u00f3rzy powiedzieli: \"Pan nasz - to B\u00f3g!\", i potem poszli prosto - zst\u0105pi\u0105 anio\u0142owie: \"Nie obawiajcie si\u0119 i nie smu\u0107cie! Cieszcie si\u0119 Ogrodem, kt\u00f3ry wam zosta\u0142 obiecany!"}, {"id": 421887, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 480, "ruku": 416, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4249, "text": "My jeste\u015bmy waszymi opiekunami w \u017cyciu na tym \u015bwiecie i w \u017cyciu ostatecznym. Dla was b\u0119dzie tam to, czego zapragn\u0105 wasze dusze; i dla was b\u0119dzie tam to, o co wy poprosicie"}, {"id": 421888, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 480, "ruku": 416, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4250, "text": "- jako go\u015bcinne przyj\u0119cie od Przebaczaj\u0105cego, Lito\u015bciwego.\""}, {"id": 421889, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 480, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4251, "text": "A kt\u00f3\u017c wypowiada pi\u0119kniejsze s\u0142owa ani\u017celi ten, kto modli si\u0119 do Boga i kto spe\u0142nia dobre dzie\u0142o, m\u00f3wi\u0105c: \"Zaprawd\u0119, jestem mi\u0119dzy tymi, kt\u00f3rzy si\u0119 ca\u0142kowicie poddali!\""}, {"id": 421890, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 480, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4252, "text": "Dobry czyn i z\u0142y czyn nie s\u0105 r\u00f3wne. Odsuwaj wi\u0119c gorszy czyn tym, co jest lepsze. Wtedy ten, kt\u00f3ry jest tobie wrogiem, b\u0119dzie jak bliski przyjaciel."}, {"id": 421891, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 480, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4253, "text": "Lecz tego nie dano nikomu innemu, jak tylko tym, kt\u00f3rzy s\u0105 cierpliwi; nie b\u0119dzie to dane nikomu innemu, tylko tym, kt\u00f3rzy maj\u0105 wielkie szcz\u0119\u015bcie."}, {"id": 421892, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 480, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4254, "text": "A je\u015bli szatan b\u0119dzie ci\u0119 kusi\u0142, to szukaj ucieczki u Boga. Zaprawd\u0119, On jest S\u0142ysz\u0105cy, Wszechwiedz\u0105cy!"}, {"id": 421893, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 480, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4255, "text": "W\u015br\u00f3d Jego znak\u00f3w s\u0105: noc i dzie\u0144, s\u0142o\u0144ce i ksi\u0119\u017cyc. Nie wybijajcie pok\u0142on\u00f3w ani s\u0142o\u0144cu, ani ksi\u0119\u017cycowi! Wybijajcie pok\u0142ony przed Bogiem, kt\u00f3ry je stworzy\u0142 - je\u015bli Jego czcicie!"}, {"id": 421894, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 480, "ruku": 417, "hizb_quarter": 192, "sajda": true, "sajda_id": 12, "sajda_obligatory": true, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4256, "text": "Oni wbijaj\u0105 si\u0119 w pych\u0119, natomiast ci, kt\u00f3rzy s\u0105 u twego Pana, wys\u0142awiaj\u0105 Go noc\u0105 i dniem i nie ustaj\u0105."}, {"id": 421895, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 481, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4257, "text": "W\u015br\u00f3d Jego znak\u00f3w jest to, i\u017c widzisz ziemi\u0119 pokorn\u0105; a kiedy My zsy\u0142amy na ni\u0105 wod\u0119, to ona si\u0119 wzburza i nabrzmiewa. Zaprawd\u0119, Ten, kt\u00f3ry j\u0105 o\u017cywia, b\u0119dzie z pewno\u015bci\u0105 o\u017cywicielem zmar\u0142ych! On jest nad ka\u017cd\u0105 rzecz\u0105 wszechw\u0142adny!"}, {"id": 421896, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 481, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4258, "text": "Zaprawd\u0119, ci, kt\u00f3rzy nie uznaj\u0105 Naszych znak\u00f3w, nie ukryj\u0105 si\u0119 przed Nami! Czy\u017c ten, kt\u00f3ry b\u0119dzie wrzucony w ogie\u0144, jest lepszy od tego, kt\u00f3ry przychodzi bezpieczny w Dniu Zmartwychwstania? R\u00f3bcie, co chcecie, On widzi dobrze, co czynicie."}, {"id": 421897, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 481, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4259, "text": "Zaprawd\u0119, ci, kt\u00f3rzy nie wierz\u0105 w napomnienie, kiedy ono do nich przychodzi... - a przecie\u017c to jest Ksi\u0119ga wspania\u0142a!"}, {"id": 421898, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 481, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4260, "text": "Nie przenika do niej fa\u0142sz z \u017cadnej strony. To jest objawienie pochodz\u0105ce od m\u0105drego, godnego chwa\u0142y!"}, {"id": 421899, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 481, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4261, "text": "Powiedziano ci tylko to, co ju\u017c powiedziano pos\u0142a\u0144com przed tob\u0105. Zaprawd\u0119, tw\u00f3j Pan jest w\u0142adc\u0105 przebaczenia i w\u0142adc\u0105 kary bolesnej!"}, {"id": 421900, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 481, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4262, "text": "A je\u015bliby\u015bmy go uczynili Koranem w j\u0119zyku wam obcym, to oni by powiedzieli: \"Dlaczego jego znaki nie zosta\u0142y wyja\u015bnione? Dlaczego obcy, skoro jest arabski?\" Powiedz: \"Dla tych, kt\u00f3rzy wierz\u0105, on jest drog\u0105 prost\u0105 i uzdrowieniem; ci za\u015b, kt\u00f3rzy nie wierz\u0105, maj\u0105 w swoich uszach g\u0142uchot\u0119 i dotkni\u0119ci s\u0105 \u015blepot\u0105; s\u0105 wzywani z dalekiego miejsca.\""}, {"id": 421901, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 481, "ruku": 418, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4263, "text": "Dali\u015bmy ju\u017c Ksi\u0119g\u0119 Moj\u017ceszowi, lecz ona by\u0142a przedmiotem sporu; i je\u015bliby nie s\u0142owo, kt\u00f3re wysz\u0142o ju\u017c wcze\u015bniej od twego Pana, to sami rozstrzygn\u0119liby spraw\u0119 mi\u0119dzy sob\u0105. Zaprawd\u0119, oni s\u0105 wzgl\u0119dem niej w g\u0142\u0119bokim zw\u0105tpieniu."}, {"id": 421902, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 481, "ruku": 418, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4264, "text": "Ten, kto czyni dobro, czyni dla siebie samego; a ten, kto czyni z\u0142o, czyni przeciwko sobie. Tw\u00f3j Pan nie jest niesprawiedliwy dla Swoich s\u0142ug!"}, {"id": 421903, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 482, "ruku": 418, "hizb_quarter": 193, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4265, "text": "Do Niego sprowadza si\u0119 wiedza o Godzinie. \u017baden owoc nie wychodzi ze swej otoczki i \u017cadna istota \u017ce\u0144ska nie nosi i nie sk\u0142ada - jak tylko za Jego wiedz\u0105. A w tym Dniu, kiedy On do nich zawo\u0142a: \"Gdzie s\u0105 moi wsp\u00f3\u0142towarzysze?\" - oni powiedz\u0105: \"Obwieszczamy Tobie, i\u017c w\u015br\u00f3d nas nie ma na to \u017cadnego \u015bwiadka!\""}, {"id": 421904, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 482, "ruku": 418, "hizb_quarter": 193, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4266, "text": "I odsunie si\u0119 od nich to, czego przedtem wzywali, i pomy\u015bl\u0105 sobie, \u017ce nie ma dla nich \u017cadnego miejsca schronienia."}, {"id": 421905, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 482, "ruku": 418, "hizb_quarter": 193, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4267, "text": "Cz\u0142owiek nie zm\u0119czy si\u0119 modlitw\u0105 o dobro; a je\u015bli go dotknie nieszcz\u0119\u015bcie, to jest zrozpaczony, przygn\u0119biony."}, {"id": 421908, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 482, "ruku": 418, "hizb_quarter": 193, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4268, "text": "A kiedy my damy mu zakosztowa\u0107 mi\u0142osierdzia pochodz\u0105cego od Nas, po nieszcz\u0119\u015bciu, jakie go dotkn\u0119\u0142o, on z pewno\u015bci\u0105 powie: \"To mi si\u0119 nale\u017cy i nie s\u0105dz\u0119, \u017ce nadejdzie Godzina. A je\u015bli zostan\u0119 sprowadzony do mego Pana, to, zaprawd\u0119, otrzymam najpi\u0119kniejsz\u0105 nagrod\u0119!\" My wtedy zapewne obwie\u015bcimy tym, kt\u00f3rzy nie uwierzyli, to, co uczynili; i damy im bez w\u0105tpienia zakosztowa\u0107 surowej kary!"}, {"id": 421909, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 482, "ruku": 418, "hizb_quarter": 193, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4269, "text": "Kiedy obdarzamy cz\u0142owieka dobrodziejstwami, on si\u0119 odwraca i oddala; a kiedy dotyka go z\u0142o, on wtedy jest pe\u0142en d\u0142ugiej modlitwy."}, {"id": 421910, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 482, "ruku": 418, "hizb_quarter": 193, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4270, "text": "Powiedz: \"C\u00f3\u017c wy my\u015blicie? Je\u015bli to pochodzi od Boga, a potem wy nie mierzycie, to czy nie b\u0142\u0105dzicie bardziej ni\u017c ten, kto jest w g\u0142\u0119bokim odszczepie\u0144stwie?\""}, {"id": 421911, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 482, "ruku": 418, "hizb_quarter": 193, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4271, "text": "Niebawem poka\u017cemy im Nasze znaki na horyzontach i w nich samych, a\u017c w ko\u0144cu stanie si\u0119 dla nich jasne, \u017ce to jest prawda. Czy\u017c nie jest wystarczaj\u0105ce, je\u015bli chodzi o twojego Pana, \u017ce On jest \u015bwiadkiem ka\u017cdej rzeczy?"}, {"id": 421912, "identifier": "pl.bielawskiego", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 482, "ruku": 418, "hizb_quarter": 193, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 4272, "text": "Czy oni jeszcze w\u0105tpi\u0105 w spotkanie ze swoim Panem? Czy On nie obejmuje ka\u017cdej rzeczy?"}]