[{"id": 421022, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 404, "ruku": 349, "hizb_quarter": 162, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3410, "text": "Alif. Lam. Mim."}, {"id": 418140, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 404, "ruku": 349, "hizb_quarter": 162, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3411, "text": "Bizantyjczycy zostali zwyci\u0119\u017ceni"}, {"id": 420978, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 404, "ruku": 349, "hizb_quarter": 162, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3412, "text": "W najbli\u017cszym kraju; lecz oni, po swojej kl\u0119sce, b\u0119d\u0105 zwyci\u0119zcami"}, {"id": 421046, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 404, "ruku": 349, "hizb_quarter": 162, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3413, "text": "W ci\u0105gu kilku lat. Do Boga nale\u017cy w\u0142adza, tak przedtem, jak i potem. I tego Dnia b\u0119d\u0105 si\u0119 radowa\u0107 wierni,"}, {"id": 421047, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 404, "ruku": 349, "hizb_quarter": 162, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3414, "text": "Z pomocy Boga. On udziela pomocy, komu chce. On jest Pot\u0119\u017cny, Lito\u015bciwy!"}, {"id": 421048, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 405, "ruku": 349, "hizb_quarter": 162, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3415, "text": "Obietnica Boga! B\u00f3g nie \u0142amie Swojej obietnicy, lecz wi\u0119kszo\u015b\u0107 ludzi nie wie."}, {"id": 421049, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 405, "ruku": 349, "hizb_quarter": 162, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3416, "text": "Znaj\u0105 oni tylko zewn\u0119trzny aspekt \u017cycia tego \u015bwiata, a s\u0105 niedbali o \u017cycie ostateczne."}, {"id": 421050, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 405, "ruku": 349, "hizb_quarter": 162, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3417, "text": "Czy\u017c oni si\u0119 nie zastanowili nad sob\u0105? B\u00f3g stworzy\u0142 niebiosa i ziemi\u0119, i to, co jest mi\u0119dzy nimi, w ca\u0142ej prawdzie i na pewien okre\u015blony czas. Lecz, zaprawd\u0119, wielu spo\u015br\u00f3d ludzi nie wierzy w spotkanie ze swoim Panem!"}, {"id": 421051, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 405, "ruku": 349, "hizb_quarter": 162, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3418, "text": "Czy\u017c oni nie w\u0119drowali po ziemi i nie widzieli, jaki by\u0142 ostateczny koniec tych, kt\u00f3rzy byli przed nimi? Tamci byli silniejsi, uprawiali ziemi\u0119 i zasiedlili j\u0105, bardziej ni\u017c oni sami. I przyszli do nich ich pos\u0142a\u0144cy z jasnymi dowodami; i nie B\u00f3g wyrz\u0105dzi\u0142 im niesprawiedliwo\u015b\u0107, lecz oni sami j\u0105 sobie wyrz\u0105dzili."}, {"id": 421052, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 405, "ruku": 349, "hizb_quarter": 162, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3419, "text": "Ostatecznym ko\u0144cem tych, kt\u00f3rzy czynili z\u0142o, b\u0119dzie jeszcze co\u015b gorszego, poniewa\u017c oni za k\u0142amstwo uznali znaki Boga i wy\u015bmiewali si\u0119 z nich."}, {"id": 421053, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 405, "ruku": 350, "hizb_quarter": 162, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3420, "text": "B\u00f3g zaczyna stworzenie, i powtarza je; potem do Niego zostaniecie sprowadzeni."}, {"id": 421054, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 405, "ruku": 350, "hizb_quarter": 162, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3421, "text": "Tego Dnia, kiedy nadejdzie Godzina, grzesznicy b\u0119d\u0105 zrozpaczeni."}, {"id": 421055, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 405, "ruku": 350, "hizb_quarter": 162, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3422, "text": "I nie b\u0119d\u0105 mieli or\u0119downik\u00f3w spo\u015br\u00f3d tych, kt\u00f3rych uznali za wsp\u00f3\u0142towarzyszy; i oni wyrzekn\u0105 si\u0119 swoich wsp\u00f3\u0142towarzyszy;"}, {"id": 421056, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 405, "ruku": 350, "hizb_quarter": 162, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3423, "text": "Tego Dnia, kiedy nadejdzie Godzina, oni si\u0119 rozdziel\u0105 mi\u0119dzy sob\u0105."}, {"id": 421057, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 405, "ruku": 350, "hizb_quarter": 162, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3424, "text": "Ci, kt\u00f3rzy uwierzyli i pe\u0142nili dobre czyny, b\u0119d\u0105 si\u0119 radowa\u0107 w Ogrodzie kwitn\u0105cym."}, {"id": 421058, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 406, "ruku": 350, "hizb_quarter": 162, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3425, "text": "A ci, kt\u00f3rzy nie uwierzyli i kt\u00f3rzy za k\u0142amstwo uznali Nasze znaki, jak i spotkanie \u017cycia ostatecznego, b\u0119d\u0105 skazani na kar\u0119."}, {"id": 421059, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 406, "ruku": 350, "hizb_quarter": 162, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3426, "text": "Chwa\u0142a niech b\u0119dzie Bogu, kiedy zastaje was pora wieczorna i kiedy zastaje was pora poranna!"}, {"id": 421060, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 406, "ruku": 350, "hizb_quarter": 162, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3427, "text": "I chwa\u0142a Jemu w niebiosach i na ziemi, kiedy si\u0119 \u015bciemnia i w porze po\u0142udniowej!"}, {"id": 421061, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 406, "ruku": 350, "hizb_quarter": 162, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3428, "text": "On wyprowadza \u017cyj\u0105cego ze zmar\u0142ego; On wyprowadza zmar\u0142ego z \u017cyj\u0105cego; On o\u017cywia ziemi\u0119 po jej \u015bmierci - w ten spos\u00f3b zostaniecie wyprowadzeni."}, {"id": 421062, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 406, "ruku": 351, "hizb_quarter": 162, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3429, "text": "A z Jego znak\u00f3w jest to, i\u017c On stworzy\u0142 was z prochu; nast\u0119pnie oto, wy ludzie, rozprzestrzenili\u015bcie si\u0119."}, {"id": 421063, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 406, "ruku": 351, "hizb_quarter": 162, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3430, "text": "I z Jego znak\u00f3w jest to, i\u017c On stworzy\u0142 dla was \u017cony z was samych, aby\u015bcie mogli odpocz\u0105\u0107 przy nich; i ustanowi\u0142 mi\u0119dzy wami mi\u0142o\u015b\u0107 i mi\u0142osierdzie."}, {"id": 421064, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 406, "ruku": 351, "hizb_quarter": 162, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3431, "text": "I z Jego znak\u00f3w jest stworzenie niebios i ziemi, r\u00f3\u017cnorodno\u015b\u0107 waszych j\u0119zyk\u00f3w i kolor\u00f3w. Zaprawd\u0119, w tym s\u0105 znaki dla tych, kt\u00f3rzy wiedz\u0105!"}, {"id": 421065, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 406, "ruku": 351, "hizb_quarter": 162, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3432, "text": "I z Jego znak\u00f3w jest - wasz sen w nocy i w dzie\u0144 i wasze poszukiwanie Jego \u0142aski. Zaprawd\u0119, w tym s\u0105 znaki dla ludzi, kt\u00f3rzy s\u0142ysz\u0105!"}, {"id": 421066, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 406, "ruku": 351, "hizb_quarter": 162, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3433, "text": "I z Jego znak\u00f3w jest to, i\u017c On ukazuje wam b\u0142yskawic\u0119, by wzbudzi\u0107 strach i nadziej\u0119, i\u017c On zsy\u0142a z nieba wod\u0119 i o\u017cywia przez ni\u0105 ziemi\u0119 po jej \u015bmierci. Zaprawd\u0119, w tym s\u0105 znaki dla ludzi, kt\u00f3rzy s\u0105 rozumni!"}, {"id": 421067, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 407, "ruku": 351, "hizb_quarter": 162, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3434, "text": "I z Jego znak\u00f3w jest to, i\u017c stoj\u0105 mocno na Jego rozkaz niebo i ziemia. Potem, kiedy On was wezwie jednym wezwaniem, wtedy z ziemi wyjdziecie."}, {"id": 421068, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 407, "ruku": 351, "hizb_quarter": 162, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3435, "text": "Do Niego nale\u017c\u0105 ci, kt\u00f3rzy s\u0105 w niebiosach i na ziemi; wszyscy s\u0105 Jemu pobo\u017cnie pos\u0142uszni."}, {"id": 421069, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 407, "ruku": 351, "hizb_quarter": 162, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3436, "text": "On jest Tym, kt\u00f3ry daje pocz\u0105tek stworzeniu, potem je powtarza. To jest dla Niego \u0142atwe! On jest najwznio\u015blejszym wzorem w niebiosach i na ziemi. On jest Pot\u0119\u017cny, M\u0105dry!"}, {"id": 421071, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 407, "ruku": 352, "hizb_quarter": 162, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3437, "text": "On przytoczy\u0142 wam przyk\u0142ad z was samych. Czy macie z waszych niewolnik\u00f3w wsp\u00f3\u0142uczestnik\u00f3w w tym, w co was zaopatrzyli\u015bmy, i czy jeste\u015bcie w tym z nimi r\u00f3wni? Czy wy si\u0119 ich obawiacie, tak jak obawiacie si\u0119 siebie nawzajem? Tak My wyja\u015bniamy znaki ludziom,, kt\u00f3rzy s\u0105 rozumni."}, {"id": 421072, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 407, "ruku": 352, "hizb_quarter": 162, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3438, "text": "Ale ci, kt\u00f3rzy s\u0105 niesprawiedliwi, post\u0119puj\u0105 za swoimi nami\u0119tno\u015bciami, bezwiednie. A kto poprowadzi drog\u0105 prost\u0105 tego, kt\u00f3rego sprowadzi\u0142 z drogi B\u00f3g? Oni nie b\u0119d\u0105 mieli \u017cadnych pomocnik\u00f3w."}, {"id": 421073, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 407, "ruku": 352, "hizb_quarter": 162, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3439, "text": "Przeto zwr\u00f3\u0107 swoje oblicze ku religii, jak cz\u0142owiek gorliwie pobo\u017cny, zgodnie z natur\u0105, jak\u0105 B\u00f3g obdarzy\u0142 ludzi przy stworzeniu. - Nie ma \u017cadnej odmiany w stworzeniu Boga! - To jest religia prawdziwa, lecz wi\u0119kszo\u015b\u0107 ludzi nie wie."}, {"id": 421074, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 407, "ruku": 352, "hizb_quarter": 163, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3440, "text": "Nawracaj\u0105c si\u0119 do Niego, b\u00f3jcie si\u0119 Go, odprawiajcie modlitw\u0119 i nie b\u0105d\u017acie z liczby tych, kt\u00f3rzy Jemu dodaj\u0105 wsp\u00f3\u0142towarzyszy!"}, {"id": 421075, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 407, "ruku": 352, "hizb_quarter": 163, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3441, "text": "Ani te\u017c spo\u015br\u00f3d tych, kt\u00f3rzy podzielili swoj\u0105 religi\u0119, tworz\u0105c sekty; przy czym ka\u017cda frakcja odszczepie\u0144cza cieszy si\u0119 tym, co zachowuje."}, {"id": 421076, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 408, "ruku": 352, "hizb_quarter": 163, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3442, "text": "A kiedy ludzi dotknie jakie\u015b nieszcz\u0119\u015bcie, to oni wzywaj\u0105 swego Pana, nawracaj\u0105c si\u0119 do Niego. Potem jednak, kiedy On da im zakosztowa\u0107 Swojego mi\u0142osierdzia, niekt\u00f3rzy z nich dodaj\u0105 swemu Panu wsp\u00f3\u0142towarzyszy."}, {"id": 421077, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 408, "ruku": 352, "hizb_quarter": 163, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3443, "text": "Czyni\u0105 tak dlatego, \u017ceby nie by\u0107 wdzi\u0119czni za to, co im dali\u015bmy. U\u017cywajcie wi\u0119c, niebawem si\u0119 dowiecie!"}, {"id": 421078, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 408, "ruku": 352, "hizb_quarter": 163, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3444, "text": "Czy, zes\u0142ali\u015bmy im jak\u0105\u015b w\u0142adz\u0119, kt\u00f3ra by im m\u00f3wi\u0142a o tym, co oni Jemu przypisuj\u0105 jako wsp\u00f3\u0142towarzyszy?"}, {"id": 421079, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 408, "ruku": 352, "hizb_quarter": 163, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3445, "text": "A kiedy My dajemy ludziom zakosztowa\u0107 mi\u0142osierdzia, oni si\u0119 nim ciesz\u0105; lecz kiedy dosi\u0119gnie ich jakie\u015b z\u0142o, za to, co przygotowa\u0142y ich r\u0119ce, wtedy oni s\u0105 zrozpaczeni."}, {"id": 421080, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 408, "ruku": 352, "hizb_quarter": 163, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3446, "text": "Czy\u017c nie widzieli, \u017ce B\u00f3g szeroko rozdaje zaopatrzenie, komu chce, i je wymierza? Zaprawd\u0119, w tym s\u0105 znaki dla ludzi, kt\u00f3rzy wierz\u0105!"}, {"id": 421081, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 408, "ruku": 352, "hizb_quarter": 163, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3447, "text": "Daj wi\u0119c krewnemu, co mu si\u0119 nale\u017cy, i biednemu, i podr\u00f3\u017cnemu! To jest dobro dla tych, kt\u00f3rzy chc\u0105 oblicza Boga. I tacy b\u0119d\u0105 szcz\u0119\u015bliwi."}, {"id": 421082, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 408, "ruku": 352, "hizb_quarter": 163, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3448, "text": "A to, co dajecie na lichw\u0119, by powi\u0119kszy\u0142o si\u0119 kosztem maj\u0105tku innych ludzi, nie powi\u0119kszy si\u0119 u Boga. Lecz to, co dajecie jako ja\u0142mu\u017cn\u0119, poszukuj\u0105c oblicza Boga - oni otrzymaj\u0105 to w dw\u00f3jnas\u00f3b."}, {"id": 421083, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 408, "ruku": 352, "hizb_quarter": 163, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3449, "text": "B\u00f3g jest Tym, kt\u00f3ry stworzy\u0142 was i zaopatrzy\u0142; potem sprawi, \u017ce pomrzecie, a nast\u0119pnie przywr\u00f3ci was do \u017cycia. Czy w\u015br\u00f3d tych, kt\u00f3rych wy Mu dodajecie jako wsp\u00f3\u0142towarzyszy, jest taki, kt\u00f3ry zrobi co\u015b podobnego? Niech Jemu b\u0119dzie chwa\u0142a! On jest wynios\u0142y ponad to, co wy Mu dodajecie jako wsp\u00f3\u0142towarzyszy!"}, {"id": 421084, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 408, "ruku": 353, "hizb_quarter": 163, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3450, "text": "Pojawi\u0142o si\u0119 zepsucie na l\u0105dzie i na morzu przez to, co zdzia\u0142a\u0142y r\u0119ce ludzi, \u017ceby On m\u00f3g\u0142 im da\u0107 zakosztowa\u0107 cz\u0119\u015b\u0107 tego, co oni uczynili. By\u0107 mo\u017ce, oni si\u0119 nawr\u00f3c\u0105!"}, {"id": 421085, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 409, "ruku": 353, "hizb_quarter": 163, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3451, "text": "Powiedz: \"W\u0119drujcie po ziemi i popatrzcie, jaki by\u0142 ostateczny koniec tych, kt\u00f3rzy \u017cyli poprzednio; wi\u0119kszo\u015b\u0107 z nich to ba\u0142wochwalcy.\""}, {"id": 421086, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 409, "ruku": 353, "hizb_quarter": 163, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3452, "text": "Zwr\u00f3\u0107 wi\u0119c twarz ku prawdziwej religii, zanim nadejdzie Dzie\u0144 od Boga, kt\u00f3rego nie mo\u017cna odwr\u00f3ci\u0107. Tego Dnia ludzie zostan\u0105 rozdzieleni:"}, {"id": 421087, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 409, "ruku": 353, "hizb_quarter": 163, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3453, "text": "Ten, kt\u00f3ry nie uwierzy\u0142, odczuje skutki swojej niewiary; a ci, kt\u00f3rzy czyni\u0105 dobro - to dla siebie samych \u015bciel\u0105 \u0142o\u017ce;"}, {"id": 421088, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 409, "ruku": 353, "hizb_quarter": 163, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3454, "text": "Tak jest, aby B\u00f3g m\u00f3g\u0142 zap\u0142aci\u0107 Swoj\u0105 \u0142ask\u0105 tym, kt\u00f3rzy uwierzyli i czynili dobre dzie\u0142a. Zaprawd\u0119, On nie mi\u0142uje niewierz\u0105cych!"}, {"id": 421089, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 409, "ruku": 353, "hizb_quarter": 163, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3455, "text": "A z Jego znak\u00f3w jest to, i\u017c posy\u0142a wiatry - radosnych zwiastun\u00f3w, aby wam da\u0107 zakosztowa\u0107 Swego mi\u0142osierdzia; aby pop\u0142yn\u0119\u0142y statki wed\u0142ug Jego rozkazu i aby\u015bcie poszukiwali Jego \u0142aski. By\u0107 mo\u017ce, b\u0119dziecie wdzi\u0119czni!"}, {"id": 421090, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 409, "ruku": 353, "hizb_quarter": 163, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3456, "text": "Wysy\u0142ali\u015bmy ju\u017c, przed tob\u0105 pos\u0142a\u0144c\u00f3w do ich ludu; i przybywali oni do nich z jasnymi dowodami. Wtedy zem\u015bcili\u015bmy si\u0119 na tych, kt\u00f3rzy zgrzeszyli. Lecz obowi\u0105zkiem Naszym by\u0142a pomoc wiernym."}, {"id": 421091, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 409, "ruku": 353, "hizb_quarter": 163, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3457, "text": "B\u00f3g jest Tym, kt\u00f3ry posy\u0142a wiatry, a one wzburzaj\u0105 chmury; On rozci\u0105ga je po niebie, jak chce, i czyni je p\u0142atami; i widzisz wtedy, jak obfity deszcz wylewa si\u0119 spomi\u0119dzy nich. I kiedy On dosi\u0119ga nim kogo chce ze Swoich s\u0142ug, wtedy oni si\u0119 raduj\u0105,"}, {"id": 421070, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 409, "ruku": 353, "hizb_quarter": 163, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3458, "text": "Cho\u0107 ju\u017c byli zrozpaczeni, zanim on zosta\u0142 im zes\u0142any."}, {"id": 421092, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 409, "ruku": 353, "hizb_quarter": 163, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3459, "text": "Sp\u00f3jrz wi\u0119c na \u015blady mi\u0142osierdzia Boga, jak On o\u017cywia ziemi\u0119 po jej \u015bmierci! Zaprawd\u0119, On o\u017cywia umar\u0142ych; On jest nad ka\u017cd\u0105 rzecz\u0105 wszechw\u0142adny!"}, {"id": 421093, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 410, "ruku": 353, "hizb_quarter": 163, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3460, "text": "Ale, z pewno\u015bci\u0105, je\u015bli My wy\u015blemy wiatr i oni zobacz\u0105, \u017ce jest \u017c\u00f3\u0142ty, to po jego przej\u015bciu nadal zostaj\u0105 niewiernymi."}, {"id": 421094, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 410, "ruku": 353, "hizb_quarter": 163, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3461, "text": "A ty przecie\u017c nie mo\u017cesz da\u0107 us\u0142ysze\u0107 umar\u0142ym ani g\u0142uchych zmusi\u0107 do s\u0142yszenia tego wezwania, kiedy oni si\u0119 odwracaj\u0105 plecami."}, {"id": 421095, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 410, "ruku": 353, "hizb_quarter": 163, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3462, "text": "Ty nie mo\u017cesz wprowadzi\u0107 na drog\u0119 prost\u0105 \u015blepych z ich zab\u0142\u0105dzenia. Lecz sk\u0142onisz do us\u0142yszenia tylko tych, kt\u00f3rzy wierz\u0105 w Nasze znaki i s\u0105 ca\u0142kowicie poddani."}, {"id": 421096, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 410, "ruku": 354, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3463, "text": "B\u00f3g jest Tym, kt\u00f3ry stworzy\u0142 was s\u0142abymi; potem, po s\u0142abo\u015bci, da\u0142 wam si\u0142\u0119; po okresie si\u0142y - s\u0142abo\u015b\u0107 i siwizn\u0119. On stwarza to, co chce. On jest Wszechwiedz\u0105cy, Wszechpot\u0119\u017cny!"}, {"id": 421097, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 410, "ruku": 354, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3464, "text": "W tym Dniu, kiedy nastanie Godzina, grzesznicy b\u0119d\u0105 si\u0119 zaklina\u0107, i\u017c oni nie przebywali nawet godziny. W ten spos\u00f3b zostali oszukani."}, {"id": 421098, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 410, "ruku": 354, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3465, "text": "A powiedz\u0105 ci, kt\u00f3rzy otrzymali wiedz\u0119 i wiar\u0119: \"Wy znajdowali\u015bcie si\u0119 w ksi\u0119dze Boga a\u017c do Dnia Zmartwychwstania - a oto Dzie\u0144 Zmartwychwstania, lecz wy nie wiedzieli\u015bcie.\""}, {"id": 421099, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 410, "ruku": 354, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3466, "text": "W tym Dniu nie pomo\u017ce tym, kt\u00f3rzy byli niesprawiedliwi, ich usprawiedliwienie i nie zostan\u0105 oni wys\u0142uchani."}, {"id": 421100, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 410, "ruku": 354, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3467, "text": "Przytoczyli\u015bmy ludziom w tym Koranie wszelkie przypowie\u015bci. Lecz je\u015bli ty przychodzisz do nich ze znakiem, to z pewno\u015bci\u0105 ci, kt\u00f3rzy nie uwierzyli, b\u0119d\u0105 m\u00f3wili: \"Wy jeste\u015bcie tylko g\u0142osicielami fa\u0142szu.\""}, {"id": 421101, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 410, "ruku": 354, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3468, "text": "W ten spos\u00f3b B\u00f3g piecz\u0119tuje serca tych, kt\u00f3rzy nie wiedz\u0105."}, {"id": 421102, "identifier": "pl.bielawskiego", "surah_number": 30, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0631\u0648\u0645", "surah_en_name": "Ar-Room", "surah_en_name_translation": "The Romans", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 410, "ruku": 354, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "pl", "name": "Bielawskiego", "transelator_en_name": "J\u00f3zefa Bielawskiego", "format": "text", "type": "translation", "ayah_number": 3469, "text": "Miej wi\u0119c cierpliwo\u015b\u0107! Zaiste, obietnica Boga jest prawd\u0105! I niech ci\u0119 nie zachwiej\u0105 ci, kt\u00f3rzy nie s\u0105 przekonani o prawdzie!"}]