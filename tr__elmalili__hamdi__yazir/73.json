[{"id": 585269, "identifier": "tr.yazir", "surah_number": 73, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0645\u0632\u0645\u0644", "surah_en_name": "Al-Muzzammil", "surah_en_name_translation": "The Enshrouded One", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 574, "ruku": 508, "hizb_quarter": 229, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Elmal\u0131l\u0131 Hamdi Yaz\u0131r", "transelator_en_name": "Elmalili Hamdi Yazir", "format": "text", "type": "translation", "ayah_number": 5476, "text": "Ey \u00f6rt\u00fcnen! (Peygamber)"}, {"id": 585270, "identifier": "tr.yazir", "surah_number": 73, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0645\u0632\u0645\u0644", "surah_en_name": "Al-Muzzammil", "surah_en_name_translation": "The Enshrouded One", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 574, "ruku": 508, "hizb_quarter": 229, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Elmal\u0131l\u0131 Hamdi Yaz\u0131r", "transelator_en_name": "Elmalili Hamdi Yazir", "format": "text", "type": "translation", "ayah_number": 5477, "text": "Gecenin biraz\u0131 hari\u00e7 olmak \u00fczere geceleyin kalk (namaz k\u0131l)."}, {"id": 585271, "identifier": "tr.yazir", "surah_number": 73, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0645\u0632\u0645\u0644", "surah_en_name": "Al-Muzzammil", "surah_en_name_translation": "The Enshrouded One", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 574, "ruku": 508, "hizb_quarter": 229, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Elmal\u0131l\u0131 Hamdi Yaz\u0131r", "transelator_en_name": "Elmalili Hamdi Yazir", "format": "text", "type": "translation", "ayah_number": 5478, "text": "Gecenin yar\u0131s\u0131nda kalk, yahut yar\u0131s\u0131ndan biraz eksilt."}, {"id": 585272, "identifier": "tr.yazir", "surah_number": 73, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0645\u0632\u0645\u0644", "surah_en_name": "Al-Muzzammil", "surah_en_name_translation": "The Enshrouded One", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 574, "ruku": 508, "hizb_quarter": 229, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Elmal\u0131l\u0131 Hamdi Yaz\u0131r", "transelator_en_name": "Elmalili Hamdi Yazir", "format": "text", "type": "translation", "ayah_number": 5479, "text": "Veya bunu art\u0131r ve a\u011f\u0131r a\u011f\u0131r Kur'\u00e2n oku."}, {"id": 585273, "identifier": "tr.yazir", "surah_number": 73, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0645\u0632\u0645\u0644", "surah_en_name": "Al-Muzzammil", "surah_en_name_translation": "The Enshrouded One", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 574, "ruku": 508, "hizb_quarter": 229, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Elmal\u0131l\u0131 Hamdi Yaz\u0131r", "transelator_en_name": "Elmalili Hamdi Yazir", "format": "text", "type": "translation", "ayah_number": 5480, "text": "Do\u011frusu biz, senin \u00fczerine a\u011f\u0131r bir s\u00f6z b\u0131rakaca\u011f\u0131z (Kur'an vahyedece\u011fiz)."}, {"id": 585274, "identifier": "tr.yazir", "surah_number": 73, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0645\u0632\u0645\u0644", "surah_en_name": "Al-Muzzammil", "surah_en_name_translation": "The Enshrouded One", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 574, "ruku": 508, "hizb_quarter": 229, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Elmal\u0131l\u0131 Hamdi Yaz\u0131r", "transelator_en_name": "Elmalili Hamdi Yazir", "format": "text", "type": "translation", "ayah_number": 5481, "text": "\u00c7\u00fcnk\u00fc gece kalk\u0131\u015f\u0131 hem daha etkili, hem de s\u00f6z bak\u0131m\u0131ndan daha sa\u011flamd\u0131r."}, {"id": 585275, "identifier": "tr.yazir", "surah_number": 73, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0645\u0632\u0645\u0644", "surah_en_name": "Al-Muzzammil", "surah_en_name_translation": "The Enshrouded One", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 574, "ruku": 508, "hizb_quarter": 229, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Elmal\u0131l\u0131 Hamdi Yaz\u0131r", "transelator_en_name": "Elmalili Hamdi Yazir", "format": "text", "type": "translation", "ayah_number": 5482, "text": "\u00c7\u00fcnk\u00fc g\u00fcnd\u00fcz senin i\u00e7in uzun bir me\u015fguliyet vard\u0131r."}, {"id": 585276, "identifier": "tr.yazir", "surah_number": 73, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0645\u0632\u0645\u0644", "surah_en_name": "Al-Muzzammil", "surah_en_name_translation": "The Enshrouded One", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 574, "ruku": 508, "hizb_quarter": 229, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Elmal\u0131l\u0131 Hamdi Yaz\u0131r", "transelator_en_name": "Elmalili Hamdi Yazir", "format": "text", "type": "translation", "ayah_number": 5483, "text": "Rabbinin ad\u0131n\u0131 an ve b\u00fct\u00fcn g\u00f6nl\u00fcnle ona y\u00f6nel."}, {"id": 585277, "identifier": "tr.yazir", "surah_number": 73, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0645\u0632\u0645\u0644", "surah_en_name": "Al-Muzzammil", "surah_en_name_translation": "The Enshrouded One", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 574, "ruku": 508, "hizb_quarter": 229, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Elmal\u0131l\u0131 Hamdi Yaz\u0131r", "transelator_en_name": "Elmalili Hamdi Yazir", "format": "text", "type": "translation", "ayah_number": 5484, "text": "O, do\u011funun ve bat\u0131n\u0131n Rabbidir. Ondan ba\u015fka tanr\u0131 yoktur. O halde yaln\u0131z O'nu vekil tut."}, {"id": 585278, "identifier": "tr.yazir", "surah_number": 73, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0645\u0632\u0645\u0644", "surah_en_name": "Al-Muzzammil", "surah_en_name_translation": "The Enshrouded One", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 574, "ruku": 508, "hizb_quarter": 229, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Elmal\u0131l\u0131 Hamdi Yaz\u0131r", "transelator_en_name": "Elmalili Hamdi Yazir", "format": "text", "type": "translation", "ayah_number": 5485, "text": "Ba\u015fkalar\u0131n\u0131n diyeceklerine sabret, g\u00fczellikle onlardan ayr\u0131l."}, {"id": 585279, "identifier": "tr.yazir", "surah_number": 73, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0645\u0632\u0645\u0644", "surah_en_name": "Al-Muzzammil", "surah_en_name_translation": "The Enshrouded One", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 574, "ruku": 508, "hizb_quarter": 229, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Elmal\u0131l\u0131 Hamdi Yaz\u0131r", "transelator_en_name": "Elmalili Hamdi Yazir", "format": "text", "type": "translation", "ayah_number": 5486, "text": "O yalanlay\u0131c\u0131 zevk ve refah sahiplerini bana b\u0131rak, onlara biraz m\u00fchlet ver."}, {"id": 585280, "identifier": "tr.yazir", "surah_number": 73, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0645\u0632\u0645\u0644", "surah_en_name": "Al-Muzzammil", "surah_en_name_translation": "The Enshrouded One", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 574, "ruku": 508, "hizb_quarter": 229, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Elmal\u0131l\u0131 Hamdi Yaz\u0131r", "transelator_en_name": "Elmalili Hamdi Yazir", "format": "text", "type": "translation", "ayah_number": 5487, "text": "Zira bizim yan\u0131m\u0131zda buka\u011f\u0131lar var, bir cehennem var."}, {"id": 585281, "identifier": "tr.yazir", "surah_number": 73, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0645\u0632\u0645\u0644", "surah_en_name": "Al-Muzzammil", "surah_en_name_translation": "The Enshrouded One", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 574, "ruku": 508, "hizb_quarter": 229, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Elmal\u0131l\u0131 Hamdi Yaz\u0131r", "transelator_en_name": "Elmalili Hamdi Yazir", "format": "text", "type": "translation", "ayah_number": 5488, "text": "Bo\u011faza duran bir yiyecek, elem verici bir azap var."}, {"id": 585282, "identifier": "tr.yazir", "surah_number": 73, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0645\u0632\u0645\u0644", "surah_en_name": "Al-Muzzammil", "surah_en_name_translation": "The Enshrouded One", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 574, "ruku": 508, "hizb_quarter": 229, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Elmal\u0131l\u0131 Hamdi Yaz\u0131r", "transelator_en_name": "Elmalili Hamdi Yazir", "format": "text", "type": "translation", "ayah_number": 5489, "text": "O g\u00fcn yer ve da\u011flar sars\u0131lacak, da\u011flar erimi\u015f bir kum y\u0131\u011f\u0131n\u0131na d\u00f6necek."}, {"id": 585283, "identifier": "tr.yazir", "surah_number": 73, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0645\u0632\u0645\u0644", "surah_en_name": "Al-Muzzammil", "surah_en_name_translation": "The Enshrouded One", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 574, "ruku": 508, "hizb_quarter": 229, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Elmal\u0131l\u0131 Hamdi Yaz\u0131r", "transelator_en_name": "Elmalili Hamdi Yazir", "format": "text", "type": "translation", "ayah_number": 5490, "text": "Do\u011frusu biz size tan\u0131kl\u0131k edecek bir el\u00e7i g\u00f6nderdik. Nitekim Firavun'a da bir el\u00e7i g\u00f6ndermi\u015ftik."}, {"id": 585284, "identifier": "tr.yazir", "surah_number": 73, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0645\u0632\u0645\u0644", "surah_en_name": "Al-Muzzammil", "surah_en_name_translation": "The Enshrouded One", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 574, "ruku": 508, "hizb_quarter": 229, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Elmal\u0131l\u0131 Hamdi Yaz\u0131r", "transelator_en_name": "Elmalili Hamdi Yazir", "format": "text", "type": "translation", "ayah_number": 5491, "text": "Firavun o el\u00e7iye isyan etmi\u015fti. Biz de onu a\u011f\u0131r bir yakalay\u0131\u015fla yakalad\u0131k."}, {"id": 585285, "identifier": "tr.yazir", "surah_number": 73, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0645\u0632\u0645\u0644", "surah_en_name": "Al-Muzzammil", "surah_en_name_translation": "The Enshrouded One", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 574, "ruku": 508, "hizb_quarter": 229, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Elmal\u0131l\u0131 Hamdi Yaz\u0131r", "transelator_en_name": "Elmalili Hamdi Yazir", "format": "text", "type": "translation", "ayah_number": 5492, "text": "Peki ink\u00e2r ederseniz, \u00e7ocuklar\u0131 ihtiyarlatacak o g\u00fcnden (k\u0131yamet g\u00fcn\u00fcnden) kendinizi nas\u0131l kurtaracaks\u0131n\u0131z?"}, {"id": 585286, "identifier": "tr.yazir", "surah_number": 73, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0645\u0632\u0645\u0644", "surah_en_name": "Al-Muzzammil", "surah_en_name_translation": "The Enshrouded One", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 574, "ruku": 508, "hizb_quarter": 229, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Elmal\u0131l\u0131 Hamdi Yaz\u0131r", "transelator_en_name": "Elmalili Hamdi Yazir", "format": "text", "type": "translation", "ayah_number": 5493, "text": "O g\u00fcn\u00fcn deh\u015fetinden g\u00f6k yar\u0131l\u0131r. Allah'\u0131n s\u00f6z\u00fc kesinlikle ger\u00e7ekle\u015fmi\u015ftir."}, {"id": 585287, "identifier": "tr.yazir", "surah_number": 73, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0645\u0632\u0645\u0644", "surah_en_name": "Al-Muzzammil", "surah_en_name_translation": "The Enshrouded One", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 574, "ruku": 508, "hizb_quarter": 229, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Elmal\u0131l\u0131 Hamdi Yaz\u0131r", "transelator_en_name": "Elmalili Hamdi Yazir", "format": "text", "type": "translation", "ayah_number": 5494, "text": "\u0130\u015fte bu bir \u00f6\u011f\u00fctt\u00fcr. Art\u0131k dileyen Rabbine bir yol tutar."}, {"id": 585290, "identifier": "tr.yazir", "surah_number": 73, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0645\u0632\u0645\u0644", "surah_en_name": "Al-Muzzammil", "surah_en_name_translation": "The Enshrouded One", "revelation_type": "Meccan", "juz": 29, "manzil": 7, "page": 575, "ruku": 509, "hizb_quarter": 230, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Elmal\u0131l\u0131 Hamdi Yaz\u0131r", "transelator_en_name": "Elmalili Hamdi Yazir", "format": "text", "type": "translation", "ayah_number": 5495, "text": "Rabbin, senin gecenin \u00fc\u00e7te ikisinden daha az\u0131nda, yar\u0131s\u0131nda ve \u00fc\u00e7te birinde kalkt\u0131\u011f\u0131n\u0131, seninle beraber bulunanlardan bir toplulu\u011fun da b\u00f6yle yapt\u0131\u011f\u0131n\u0131 biliyor. Gece ve g\u00fcnd\u00fcz\u00fc Allah takdir eder. O, sizin onu sayamayaca\u011f\u0131n\u0131z\u0131 bildi de sizi affetti. Bundan b\u00f6yle Kur'\u00e2n'dan size ne kolay gelirse okuyun. Allah, i\u00e7inizden hastalar, yery\u00fcz\u00fcnde gezip Allah'\u0131n l\u00fctfunu arayan ba\u015fka kimseler ve Allah yolunda sava\u015fan daha ba\u015fka insanlar olaca\u011f\u0131n\u0131 bilmi\u015ftir. Onun i\u00e7in Kur'\u00e2n'dan kolay\u0131n\u0131za geldi\u011fi kadar okuyun, namaz\u0131 k\u0131l\u0131n, zekat\u0131 verin ve Allah'a g\u00fczel bir bor\u00e7 verin (Hay\u0131rl\u0131 i\u015flere mal sarfedin). Kendiniz i\u00e7in g\u00f6nderdi\u011finiz her iyili\u011fi, Allah kat\u0131nda daha hay\u0131rl\u0131 ve sevap\u00e7a daha b\u00fcy\u00fck olarak bulacaks\u0131n\u0131z. Allah'tan ba\u011f\u0131\u015f dileyin. Ku\u015fkusuz Allah ba\u011f\u0131\u015flayand\u0131r, merhamet edendir."}]