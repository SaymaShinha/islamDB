[{"id": 554730, "identifier": "tr.golpinarli", "surah_number": 98, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0628\u064a\u0646\u0629", "surah_en_name": "Al-Bayyina", "surah_en_name_translation": "The Evidence", "revelation_type": "Medinan", "juz": 30, "manzil": 7, "page": 598, "ruku": 540, "hizb_quarter": 239, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Abdulbak\u00ee G\u00f6lp\u0131narl\u0131", "transelator_en_name": "Abdulbaki Golpinarli", "format": "text", "type": "translation", "ayah_number": 6131, "text": "Vaz ge\u00e7emezlerdi kafirlikten kitap ehlinden kafir olanlar ve \u015firk ko\u015fanlar, kendilerine apa\u00e7\u0131k kesin bir delil gelmedik\u00e7e."}, {"id": 554731, "identifier": "tr.golpinarli", "surah_number": 98, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0628\u064a\u0646\u0629", "surah_en_name": "Al-Bayyina", "surah_en_name_translation": "The Evidence", "revelation_type": "Medinan", "juz": 30, "manzil": 7, "page": 598, "ruku": 540, "hizb_quarter": 239, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Abdulbak\u00ee G\u00f6lp\u0131narl\u0131", "transelator_en_name": "Abdulbaki Golpinarli", "format": "text", "type": "translation", "ayah_number": 6132, "text": "Bir kesin delil, bir peygamber, Allah taraf\u0131ndan, onlara tertemiz sahifeleri okumad\u0131k\u00e7a."}, {"id": 554732, "identifier": "tr.golpinarli", "surah_number": 98, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0628\u064a\u0646\u0629", "surah_en_name": "Al-Bayyina", "surah_en_name_translation": "The Evidence", "revelation_type": "Medinan", "juz": 30, "manzil": 7, "page": 598, "ruku": 540, "hizb_quarter": 239, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Abdulbak\u00ee G\u00f6lp\u0131narl\u0131", "transelator_en_name": "Abdulbaki Golpinarli", "format": "text", "type": "translation", "ayah_number": 6133, "text": "O sahifelerdedir h\u00fckm\u00fc sabit do\u011fru kitaplar."}, {"id": 554733, "identifier": "tr.golpinarli", "surah_number": 98, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0628\u064a\u0646\u0629", "surah_en_name": "Al-Bayyina", "surah_en_name_translation": "The Evidence", "revelation_type": "Medinan", "juz": 30, "manzil": 7, "page": 598, "ruku": 540, "hizb_quarter": 239, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Abdulbak\u00ee G\u00f6lp\u0131narl\u0131", "transelator_en_name": "Abdulbaki Golpinarli", "format": "text", "type": "translation", "ayah_number": 6134, "text": "Ve ancak kendilerine apa\u00e7\u0131k kesin bir delil geldikten sonrad\u0131r ki ayk\u0131r\u0131l\u0131\u011fa d\u00fc\u015ft\u00fcler, kendilerine kitap verilmi\u015f olanlar."}, {"id": 554734, "identifier": "tr.golpinarli", "surah_number": 98, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0628\u064a\u0646\u0629", "surah_en_name": "Al-Bayyina", "surah_en_name_translation": "The Evidence", "revelation_type": "Medinan", "juz": 30, "manzil": 7, "page": 598, "ruku": 540, "hizb_quarter": 239, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Abdulbak\u00ee G\u00f6lp\u0131narl\u0131", "transelator_en_name": "Abdulbaki Golpinarli", "format": "text", "type": "translation", "ayah_number": 6135, "text": "Ve ancak \u00f6zleri halis olarak ve onun ger\u00e7ek dinine uyarak Allah'a kulluk etmeleri emredildi onlara, do\u011fru olmalar\u0131 emredildi ve namaz k\u0131lmalar\u0131 ve zekat vermeleri ve i\u015fte budur h\u00fck\u00fcmleri sabit do\u011fru kitaplardaki din de."}, {"id": 554735, "identifier": "tr.golpinarli", "surah_number": 98, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0628\u064a\u0646\u0629", "surah_en_name": "Al-Bayyina", "surah_en_name_translation": "The Evidence", "revelation_type": "Medinan", "juz": 30, "manzil": 7, "page": 598, "ruku": 540, "hizb_quarter": 239, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Abdulbak\u00ee G\u00f6lp\u0131narl\u0131", "transelator_en_name": "Abdulbaki Golpinarli", "format": "text", "type": "translation", "ayah_number": 6136, "text": "Kitap ehlinden kafir olanlar ve \u015firk ko\u015fanlar, \u015f\u00fcphe yok ki cehennem ate\u015findedir, ebedidir onlar orada, onlard\u0131r yarat\u0131lm\u0131\u015flar\u0131n en k\u00f6t\u00fcleri."}, {"id": 554736, "identifier": "tr.golpinarli", "surah_number": 98, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0628\u064a\u0646\u0629", "surah_en_name": "Al-Bayyina", "surah_en_name_translation": "The Evidence", "revelation_type": "Medinan", "juz": 30, "manzil": 7, "page": 598, "ruku": 540, "hizb_quarter": 239, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Abdulbak\u00ee G\u00f6lp\u0131narl\u0131", "transelator_en_name": "Abdulbaki Golpinarli", "format": "text", "type": "translation", "ayah_number": 6137, "text": "\u0130nananlar ve iyi i\u015flerde bulunanlarsa: Onlard\u0131r \u015f\u00fcphe yok ki yarat\u0131lm\u0131\u015flar\u0131n en hay\u0131rl\u0131lar\u0131."}, {"id": 554737, "identifier": "tr.golpinarli", "surah_number": 98, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0628\u064a\u0646\u0629", "surah_en_name": "Al-Bayyina", "surah_en_name_translation": "The Evidence", "revelation_type": "Medinan", "juz": 30, "manzil": 7, "page": 599, "ruku": 540, "hizb_quarter": 239, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Abdulbak\u00ee G\u00f6lp\u0131narl\u0131", "transelator_en_name": "Abdulbaki Golpinarli", "format": "text", "type": "translation", "ayah_number": 6138, "text": "Rablerinin kat\u0131ndaki m\u00fckafatlar\u0131, k\u0131y\u0131lar\u0131ndan \u0131rmaklar akan ebedi Adn cennetleridir, ebedidir onlar orada, Allah raz\u0131 olmu\u015ftur onlardan ve onlar da raz\u0131 olmu\u015flard\u0131r ondan; ve bu m\u00fckafat, Rabbinden korkanad\u0131r."}]