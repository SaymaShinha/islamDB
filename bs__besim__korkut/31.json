[{"id": 109166, "identifier": "bs.korkut", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 411, "ruku": 355, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 3470, "text": "Elif L\u0101m M\u012bm."}, {"id": 109189, "identifier": "bs.korkut", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 411, "ruku": 355, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 3471, "text": "Ovo su ajeti mudre Knjige,"}, {"id": 106031, "identifier": "bs.korkut", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 411, "ruku": 355, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 3472, "text": "upute i milosti onima koji budu dobro \u010dinili,"}, {"id": 109294, "identifier": "bs.korkut", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 411, "ruku": 355, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 3473, "text": "onima koji molitvu budu obavljali i zekat davali i koji u onaj svijet budu \u010dvrsto vjerovali;"}, {"id": 109295, "identifier": "bs.korkut", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 411, "ruku": 355, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 3474, "text": "njima \u0107e Gospodar njihov na Pravi put ukazati i oni \u0107e \u017eelje svoje ostvariti."}, {"id": 109296, "identifier": "bs.korkut", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 411, "ruku": 355, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 3475, "text": "Ima ljudi koji kupuju pri\u010de za razonodu da bi, ne znaju\u0107i koliki je to grijeh, s Allahova puta odvodili i da bi ga predmetom za ismijavanje uzimali. Njih \u010deka sramna kazna."}, {"id": 109297, "identifier": "bs.korkut", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 411, "ruku": 355, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 3476, "text": "Kad se nekom od njih ajeti Na\u0161i kazuju, on oholo glavu okre\u0107e, kao da ih nije ni \u010duo, kao da je gluh \u2013 zato mu navijesti patnju nesnosnu."}, {"id": 109298, "identifier": "bs.korkut", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 411, "ruku": 355, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 3477, "text": "One koji budu vjerovali i dobra djela \u010dinili doista \u010dekaju ba\u0161\u010de u\u017eivanja,"}, {"id": 109299, "identifier": "bs.korkut", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 411, "ruku": 355, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 3478, "text": "u njima \u0107e vje\u010dno boraviti \u2013 obe\u0107anje je Allahovo istinito, a On je silan i mudar."}, {"id": 109300, "identifier": "bs.korkut", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 411, "ruku": 355, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 3479, "text": "Nebesa je, vidite ih, bez stupova stvorio, a po Zemlji planine nepomi\u010dne razbacao da vas ne trese, i po njoj \u017eivotinje svih vrsta razasuo. Mi s neba ki\u0161u spu\u0161tamo i \u010dinimo da po njoj ni\u010du svakovrsne plemenite biljke."}, {"id": 109301, "identifier": "bs.korkut", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 411, "ruku": 355, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 3480, "text": "To je Allahovo djelo; a poka\u017eite Mi \u0161ta su drugi, mimo Njega, stvorili? Ni\u0161ta! Mnogobo\u0161ci su u pravoj zabludi."}, {"id": 109302, "identifier": "bs.korkut", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 412, "ruku": 356, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 3481, "text": "A Mi smo Lukmanu mudrost darovali: \"Budi zahvalan Allahu! Ko je zahvalan, \u010dini to u svoju korist, a ko je nezahvalan \u2013 pa, Allah je, zaista, neovisan i hvale dostojan.\""}, {"id": 109303, "identifier": "bs.korkut", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 412, "ruku": 356, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 3482, "text": "Kada Lukman re\u010de sinu svome, savjetuju\u0107i ga: \"O sinko moj, ne smatraj druge Allahu ravnim, mnogobo\u0161tvo je, zaista, velika nepravda.\""}, {"id": 109304, "identifier": "bs.korkut", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 412, "ruku": 356, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 3483, "text": "Mi smo naredili \u010dovjeku da bude poslu\u0161an roditeljima svojim. Majka ga nosi, a njeno zdravlje trpi, i odbija ga u toku dvije godine. Budi zahvalan Meni i roditeljima svojim, Meni \u0107e se svi vratiti."}, {"id": 109305, "identifier": "bs.korkut", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 412, "ruku": 356, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 3484, "text": "A ako te budu nagovarali da drugog Meni ravnim smatra\u0161, onoga o kome ni\u0161ta ne zna\u0161, ti ih ne slu\u0161aj i prema njima se, na ovome svijetu, velikodu\u0161no pona\u0161aj, a slijedi put onoga koji se iskreno Meni obra\u0107a; Meni \u0107ete se poslije vratiti i Ja \u0107u vas o onome \u0161to ste radili obavijestiti."}, {"id": 109306, "identifier": "bs.korkut", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 412, "ruku": 356, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 3485, "text": "\"O sinko moj, dobro ili zlo, te\u0161ko koliko zrno goru\u0161ice, bilo u stijeni ili na nebesima ili u zemlji, Allah \u0107e na vidjelo iznijeti, jer Allah zna najskrivenije stvari, On je Sveznaju\u0107i."}, {"id": 109307, "identifier": "bs.korkut", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 412, "ruku": 356, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 3486, "text": "O sinko moj, obavljaj molitvu i tra\u017ei da se \u010dine dobra djela, a odvra\u0107aj od hr\u0111avih i strpljivo podnosi ono \u0161to te zadesi \u2013 du\u017enost je tako postupiti."}, {"id": 109308, "identifier": "bs.korkut", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 412, "ruku": 356, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 3487, "text": "I, iz oholosti, ne okre\u0107i od ljudi lice svoje i ne idi zemljom nadmeno, jer Allah ne voli ni gordog ni hvalisavog."}, {"id": 109309, "identifier": "bs.korkut", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 412, "ruku": 356, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 3488, "text": "U hodu budi odmjeren, a u govoru ne budi grlat; ta najneprijatniji glas je revanje magarca!\""}, {"id": 109310, "identifier": "bs.korkut", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 413, "ruku": 357, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 3489, "text": "Kako ne vidite da vam je Allah omogu\u0107io da se koristite svim onim \u0161to postoji na nebesima i na Zemlji i da vas dare\u017eljivo obasipa milo\u0161\u0107u Svojom, i vidljivom i nevidljivom? A ima ljudi koji raspravljaju o Allahu bez ikakva znanja, bez ikakve upute i bez knjige svjetilje."}, {"id": 109311, "identifier": "bs.korkut", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 413, "ruku": 357, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 3490, "text": "A kad im se govori: \"Slijedite ono \u0161to vam Allah objavljuje!\" \u2013 odgovaraju: \"Ne, mi slijedimo ono \u0161to smo zapamtili od predaka na\u0161ih.\" Zar i onda kad ih \u0161ejtan poziva na patnju u ognju?!"}, {"id": 109312, "identifier": "bs.korkut", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 413, "ruku": 357, "hizb_quarter": 165, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 3491, "text": "Onaj ko se sasvim preda Allahu, a uz to \u010dini dobra djela, uhvatio se za naj\u010dvr\u0161\u0107u vezu. Allahu se na koncu sve vra\u0107a."}, {"id": 109313, "identifier": "bs.korkut", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 413, "ruku": 357, "hizb_quarter": 165, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 3492, "text": "A onaj koji ne vjeruje, pa, neka te ne zabrinjava nevjerovanje njegovo. Nama \u0107e se svi vratiti i Mi \u0107emo ih o onome \u0161ta su radili obavijestiti; Allahu su, uistinu, poznate sva\u010dije misli."}, {"id": 109314, "identifier": "bs.korkut", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 413, "ruku": 357, "hizb_quarter": 165, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 3493, "text": "Mi im dajemo da kratko u\u017eivaju, a onda \u0107emo ih natjerati u patnju neizdr\u017eljivu."}, {"id": 109315, "identifier": "bs.korkut", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 413, "ruku": 357, "hizb_quarter": 165, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 3494, "text": "A da ih upita\u0161: \"Ko je stvorio nebesa i Zemlju?\" \u2013 sigurno bi rekli: \"Allah!\" \u2013 a ti reci: \"Hvaljen neka je Allah!\" \u2013 samo \u0161to ve\u0107ina njih ne zna."}, {"id": 109316, "identifier": "bs.korkut", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 413, "ruku": 357, "hizb_quarter": 165, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 3495, "text": "Allahovo je sve na nebesima i na Zemlji! Allah je, uistinu, nezavisan i hvale dostojan."}, {"id": 109317, "identifier": "bs.korkut", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 413, "ruku": 357, "hizb_quarter": 165, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 3496, "text": "Da su sva stabla na Zemlji pisaljke, a da se u more, kad presahne, ulije jo\u0161 sedam mora, ne bi se ispisale Allahove rije\u010di; Allah je, uistinu, silan i mudar."}, {"id": 109318, "identifier": "bs.korkut", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 413, "ruku": 357, "hizb_quarter": 165, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 3497, "text": "Stvoriti sve vas i sve vas o\u017eiviti isto je kao stvoriti i o\u017eiviti jednoga \u010dovjeka; Allah, zaista, sve \u010duje i sve vidi."}, {"id": 109319, "identifier": "bs.korkut", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 414, "ruku": 357, "hizb_quarter": 165, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 3498, "text": "Kako ne vidi\u0161 da Allah uvodi no\u0107 u dan i uvodi dan u no\u0107, i da je pot\u010dinio Sunce i Mjesec \u2013 svako se kre\u0107e do roka odre\u0111enog \u2013 i da Allah dobro zna ono \u0161to radite?"}, {"id": 109320, "identifier": "bs.korkut", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 414, "ruku": 357, "hizb_quarter": 165, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 3499, "text": "To zato \u0161to je Allah \u2013 Istina, a oni kojima se, pored Njega, oni mole \u2013 neistina, i \u0161to je Allah uzvi\u0161en i velik."}, {"id": 109321, "identifier": "bs.korkut", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 414, "ruku": 357, "hizb_quarter": 165, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 3500, "text": "Zar ne vidi\u0161 da la\u0111e Allahovom milo\u0161\u0107u morem plove da bi vam pokazao neke dokaze Svoje? To su, zaista, pouke za sve strpljive i zahvalne."}, {"id": 109322, "identifier": "bs.korkut", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 414, "ruku": 357, "hizb_quarter": 165, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 3501, "text": "A kad ih talas, kao oblak, prekrije, mole se Allahu iskreno Mu vjeru ispovijedaju\u0107i; a \u010dim ih On do kopna dovede, samo Mu neki zahvalni ostaju. A dokaze Na\u0161e samo izdajnik, nezahvalnik pori\u010de."}, {"id": 109323, "identifier": "bs.korkut", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 414, "ruku": 357, "hizb_quarter": 165, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 3502, "text": "O ljudi, bojte se Gospodara svoga i strahujte od Dana kad roditelj djetetu svome ne\u0107e mo\u0107i nimalo pomo\u0107i, niti \u0107e dijete mo\u0107i svome roditelju imalo pomo\u0107i! Allahova prijetnja je istinita, pa neka vas nikako \u017eivot na ovome svijetu ne zavara i neka vas u Allaha \u0161ejtan ne pokoleba."}, {"id": 109324, "identifier": "bs.korkut", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 414, "ruku": 357, "hizb_quarter": 165, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 3503, "text": "Samo Allah zna kad \u0107e Smak svijeta nastupiti, samo On spu\u0161ta ki\u0161u i samo On zna \u0161ta je u matericama, a \u010dovjek ne zna \u0161ta \u0107e sutra zaraditi i ne zna \u010dovjek u kojoj \u0107e zemlji umrijeti; Allah, uistinu, sve zna i o svemu je obavije\u0161ten."}]