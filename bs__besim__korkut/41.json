[{"id": 110043, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 413, "hizb_quarter": 190, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4219, "text": "H\u0101 M\u012bm."}, {"id": 110044, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 413, "hizb_quarter": 190, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4220, "text": "Objava je od Milostivog, Samilosnog,"}, {"id": 110045, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 413, "hizb_quarter": 190, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4221, "text": "Knjiga \u010diji su ajeti jasno izlo\u017eeni, Kur'an na arapskom jeziku za ljude koji znaju,"}, {"id": 110046, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 413, "hizb_quarter": 190, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4222, "text": "vjesnik radosnih vijesti i opomena \u2013 pa opet ve\u0107ina njih glavu okre\u0107e, ne\u0107e ni da \u010duje."}, {"id": 110047, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 413, "hizb_quarter": 190, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4223, "text": "\"Srca na\u0161a su\" \u2013 govore oni \u2013 \"pod pokriva\u010dima, daleka od onoga \u010demu nas ti poziva\u0161, i mi smo gluhi za to, a izme\u0111u nas i tebe je pregrada, pa ti radi, i mi \u0107emo raditi.\""}, {"id": 110048, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 413, "hizb_quarter": 190, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4224, "text": "Reci: \"Ja sam \u010dovjek kao i vi, samo \u2013 meni se objavljuje da je va\u0161 Bog samo jedan Bog, zato se Njemu iskreno klanjajte i od Njega oprosta tra\u017eite! A te\u0161ko onima koji Njemu druge ravnim smatraju,"}, {"id": 110049, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 413, "hizb_quarter": 190, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4225, "text": "koji zekat ne daju i koji u onaj svijet ne vjeruju!"}, {"id": 110050, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 413, "hizb_quarter": 190, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4226, "text": "One koji vjeruju i dobra djela \u010dine zbilja \u010deka nagrada neprekidna.\""}, {"id": 110051, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 414, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4227, "text": "Reci: \"Zar, zaista, ne\u0107ete da vjerujete u Onoga koji je u dva vremenska razdoblja Zemlju stvorio \u2013 i jo\u0161 Mu druge ravnim smatrate? To je Gospodar svjetova!\""}, {"id": 110052, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 414, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4228, "text": "On je nepomi\u010dna brda po njoj stvorio i blagoslovljenom je u\u010dinio i proizvode njezine na njoj odredio, sve to u \u010detiri vremenska razdoblja \u2013 ovo je obja\u0161njenje za one koji pitaju \u2013"}, {"id": 110053, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 414, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4229, "text": "zatim se nebeskim visinama uputio dok je nebo jo\u0161 maglina bilo, pa njemu i Zemlji rekao: \"Pojavite se milom ili silom!\" \u2013 \"Pojavljujemo se drage volje!\" \u2013 odgovorili su,"}, {"id": 110054, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 478, "ruku": 414, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4230, "text": "pa ih u dva vremenska razdoblja, kao sedam nebesa, stvorio, i odredio \u0161ta \u0107e se u svakom nebu nalaziti. A nebo najbli\u017ee sjajnim zvijezdama smo ukrasili i nad njim Mi bdijemo. To je odredba Silnoga i Sveznaju\u0107ega."}, {"id": 110055, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 478, "ruku": 414, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4231, "text": "A ako glave okrenu, ti reci: \"Opominjem vas munjom onakvom kakva je pogodila Ada i Semuda,"}, {"id": 110056, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 478, "ruku": 414, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4232, "text": "kada su im sa svih strana poslanici njihovi dolazili i govorili: \"Ne klanjajte se nikome do Allahu!\" \u2013 a oni odgovarali: \"Da je Gospodar na\u0161 htio, On bi meleke poslao, mi ne vjerujemo u ono \u0161to je po vama poslano.\""}, {"id": 110057, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 478, "ruku": 414, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4233, "text": "Ad se bez ikakva osnova bio na Zemlji uzoholio. \"Ko je od nas ja\u010di?\" \u2013 govorili su. A zar nisu znali da je Allah, koji ih je stvorio, ja\u010di od njih \u2013 a i znamenja Na\u0161a su poricali."}, {"id": 110058, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 478, "ruku": 414, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4234, "text": "I Mi poslasmo protiv njih, u danima nesretnim, vjetar leden, da bismo im jo\u0161 na ovome svijetu dali da osjete sramnu patnju \u2013 patnja na onom svijetu bi\u0107e, zaista, jo\u0161 sramnija \u2013 i niko im ne\u0107e u pomo\u0107 prite\u0107i."}, {"id": 110059, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 478, "ruku": 414, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4235, "text": "I Semudu smo na Pravi put ukazivali, ali, njima je bila milija sljepo\u0107a od Pravog puta, pa ih je stigla sramna kazna od munje, prema onome kako su zaslu\u017eili,"}, {"id": 110060, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 478, "ruku": 414, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4236, "text": "a one koji su vjerovali i Allaha se bojali Mi smo spasili."}, {"id": 110061, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 478, "ruku": 415, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4237, "text": "A na Dan kad Allahovi neprijatelji u vatru budu potjerani \u2013 oni prvi bi\u0107e zadr\u017eani, da bi ih sustigli ostali \u2013"}, {"id": 110062, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 478, "ruku": 415, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4238, "text": "i kad do\u0111u do nje, u\u0161i njihove, i o\u010di njihove, i ko\u017ee njihove svjedo\u010di\u0107e protiv njih o onome \u0161to su radili."}, {"id": 110063, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 479, "ruku": 415, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4239, "text": "\"Za\u0161to svjedo\u010dite protiv nas?\" \u2013 upita\u0107e oni ko\u017ee svoje. \u2013 \"Allah, koji je dao sposobnost govora svakome bi\u0107u, obdario je darom govora i nas\" \u2013 odgovori\u0107e. \u2013 \"On vas je prvi put stvorio i Njemu ste se, evo, vratili."}, {"id": 110064, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 479, "ruku": 415, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4240, "text": "Vi se niste krili zato da ne bi u\u0161i va\u0161e i o\u010di va\u0161e i ko\u017ee va\u0161e protiv vas svjedo\u010dile, ve\u0107 zato \u0161to ste vjerovali da Allah ne\u0107e saznati mnogo \u0161to\u0161ta \u0161to ste radili."}, {"id": 110065, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 479, "ruku": 415, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4241, "text": "I to va\u0161e uvjerenje, koje ste o Gospodaru svome imali, upropastilo vas je, i sada ste nastradali.\""}, {"id": 110066, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 479, "ruku": 415, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4242, "text": "Pa i ako budu trpjeli, njihovo boravi\u0161te \u0107e Vatra biti; a ako budu tra\u017eili naklonost Allahovu, njihovoj molbi ne\u0107e se udovoljiti."}, {"id": 110067, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 479, "ruku": 415, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4243, "text": "Mi smo im bili odredili lo\u0161e drugove koji su im lijepim prikazivali ono \u0161to su uradili i ono \u0161to \u0107e uraditi, i na njima se obistinilo ono \u0161to je re\u010deno za narode, d\u017eine i ljude koji su prije njih bili i nestali \u2013 doista su nastradali."}, {"id": 110068, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 479, "ruku": 416, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4244, "text": "Oni koji ne vjeruju govore: \"Ne slu\u0161ajte ovaj Kur'an, nego pravite buku da biste ga nadvikali!\""}, {"id": 110069, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 479, "ruku": 416, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4245, "text": "Zato \u0107emo Mi, sigurno, dati da nevjernici iskuse nesnosnu patnju, i kazni\u0107emo ih najgorom kaznom za djela koja su po\u010dinili."}, {"id": 110070, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 479, "ruku": 416, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4246, "text": "To je kazna za Allahove neprijatelje, vatra u kojoj \u0107e im vje\u010dna ku\u0107a biti, kao naplata \u0161to su dokaze Na\u0161e stalno poricali."}, {"id": 110071, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 479, "ruku": 416, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4247, "text": "I nevjernici \u0107e re\u0107i: \"Gospodaru na\u0161, poka\u017ei nam d\u017eine i ljude, one koji su nas zaveli, da ih stavimo pod noge na\u0161e, neka budu najdonji.\""}, {"id": 110072, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 480, "ruku": 416, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4248, "text": "Onima koji govore: \"Gospodar na\u0161 je Allah\" \u2013 pa poslije ostanu pri tome \u2013 dolaze meleki: \"Ne bojte se i ne \u017ealostite se, i radujte se D\u017eennetu koji vam je obe\u0107an."}, {"id": 110073, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 480, "ruku": 416, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4249, "text": "Mi smo za\u0161titnici va\u0161i u \u017eivotu na ovome svijetu, a i na onome; u njemu \u0107ete imati sve ono \u0161to du\u0161e va\u0161e za\u017eele, i \u0161to god zatra\u017eite \u2013 ima\u0107ete,"}, {"id": 110074, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 480, "ruku": 416, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4250, "text": "bi\u0107ete po\u010da\u0161\u0107eni od Onoga koji pra\u0161ta i koji je milostiv.\""}, {"id": 110075, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 480, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4251, "text": "A ko govori ljep\u0161e od onoga koji poziva Allahu, koji dobra djela \u010dini i koji govori: \"Ja sam doista musliman!\""}, {"id": 110076, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 480, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4252, "text": "Dobro i zlo nisu isto! Zlo dobrim uzvrati, pa \u0107e ti du\u0161manin tvoj odjednom prisni prijatelj postati."}, {"id": 110077, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 480, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4253, "text": "To mogu posti\u0107i samo strpljivi; to mogu posti\u0107i samo vrlo sretni."}, {"id": 110078, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 480, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4254, "text": "A kad \u0161ejtan poku\u0161a da te na zle misli navede, ti zatra\u017ei uto\u010di\u0161te u Allaha, jer On, uistinu, sve \u010duje i zna sve."}, {"id": 110079, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 480, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4255, "text": "Me\u0111u znamenjima Njegovim su no\u0107 i dan, i Sunce i Mjesec. Ne padajte licem na tle ni pred Suncem ni pred Mjesecom, ve\u0107 padajte licem na tle pred Allahom, koji ih je stvorio, ako \u017eelite da se samo Njemu jedinom klanjate."}, {"id": 110080, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 480, "ruku": 417, "hizb_quarter": 192, "sajda": true, "sajda_id": 12, "sajda_obligatory": true, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4256, "text": "A ako oni ne\u0107e da te poslu\u0161aju \u2013 pa, oni koji su kod Gospodara tvoga hvale Ga i no\u0107u i danju i ne dosa\u0111uju se."}, {"id": 110081, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 481, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4257, "text": "Jedno od znamenja Njegovih je i to \u0161to ti vidi\u0161 suhu zemlju, a kad na nju spustimo ki\u0161u, ona se pokrene i uzbuja. Onaj ko njoj daje \u017eivot o\u017eivi\u0107e, sigurno, i umrle, jer je On kadar sve."}, {"id": 110082, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 481, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4258, "text": "Oni koji rije\u010di Na\u0161e izvr\u0107u ne\u0107e se, doista, od Nas sakriti. Pa da li \u0107e biti ugodnije onome koji u Vatru bude ba\u010den ili onome koji na Sudnji dan do\u0111e smiren? Radite \u0161ta ho\u0107ete, On, zaista, vidi \u0161ta vi radite."}, {"id": 110083, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 481, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4259, "text": "Oni koji ne vjeruju u Kur'an, po\u0161to im je objavljen\u2026 A on je, zaista, knjiga za\u0161ti\u0107ena,"}, {"id": 110084, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 481, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4260, "text": "la\u017e joj je str\u00e2na, bilo s koje strane, ona je Objava od Mudroga i Hvale dostojnoga."}, {"id": 110085, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 481, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4261, "text": "Tebi se ne\u0107e re\u0107i ni\u0161ta \u0161to ve\u0107 nije re\u010deno poslanicima prije tebe. Gospodar tvoj zaista pra\u0161ta, a i bolno ka\u017enjava."}, {"id": 110087, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 481, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4262, "text": "A da Kur'an objavljujemo na tu\u0111em jeziku, oni bi, sigurno, rekli: \"Trebalo je da su mu ajeti razumljivi. Zar jezik tu\u0111, a onaj kome se objavljuje je Arap?\" \u2013 Reci: \"On je vjernicima uputstvo i lijek. A oni koji ne\u0107e da vjeruju \u2013 i gluhi su i slijepi, kao da se iz daleka mjesta dozivaju.\""}, {"id": 110088, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 481, "ruku": 418, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4263, "text": "I Musau smo Knjigu dali, pa su se zbog nje podvojili. A da nije Rije\u010di Gospodara tvoga prije izre\u010dene, sa ovima bi bilo ve\u0107 svr\u0161eno, jer oni mnogo u Kur'an sumnjaju."}, {"id": 110089, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 481, "ruku": 418, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4264, "text": "Ko \u010dini dobro, u svoju korist \u010dini, a ko radi zlo, na svoju \u0161tetu radi. \u2013 A Gospodar tvoj nije nepravedan prema robovima Svojim."}, {"id": 110090, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 482, "ruku": 418, "hizb_quarter": 193, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4265, "text": "Samo On zna kada \u0107e Smak svijeta nastupiti. A ni plodovi ne izlaze iz cvijetnih \u010da\u0161ki svojih i nijedna \u017eena ne zanese i ne rodi, a da On to ne zna. A na Dan kad ih On upita: \"Gdje su oni koje ste smatrali Meni ravnim?\" \u2013 oni \u0107e odgovoriti: \"Javljamo Ti da niko od nas to ne tvrdi.\""}, {"id": 110091, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 482, "ruku": 418, "hizb_quarter": 193, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4266, "text": "I ne\u0107e biti onih kojima su se prije klanjali i uvjeri\u0107e se da ne mogu nikud uma\u0107i."}, {"id": 110092, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 482, "ruku": 418, "hizb_quarter": 193, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4267, "text": "\u010covjeku ne dosadi da bogatstvo tra\u017ei, a kada ga neima\u0161tina zadesi, onda zdvaja i nadu gubi."}, {"id": 110093, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 482, "ruku": 418, "hizb_quarter": 193, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4268, "text": "Kad ga obaspemo milo\u0161\u0107u Na\u0161om, poslije nesre\u0107e koja ga zadesi, on govori: \"Ovo sam i zaslu\u017eio i ja ne mislim da \u0107e \u010cas o\u017eivljenja do\u0107i. A ako budem Gospodaru svome vra\u0107en, kod Njega me \u010deka D\u017eennet.\" A Mi \u0107emo one koji nisu vjerovali, sigurno, o onom \u0161to su radili obavijestiti i da iskuse patnju te\u0161ku \u2013 doista \u0107emo im dati."}, {"id": 110094, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 482, "ruku": 418, "hizb_quarter": 193, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4269, "text": "Kada \u010dovjeku milost Na\u0161u darujemo, postaje nezahvalan i uzoholi se, a kada ga nevolja dotakne, onda se dugo moli."}, {"id": 110095, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 482, "ruku": 418, "hizb_quarter": 193, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4270, "text": "Reci: \"\u0160ta mislite, ako je Kur'an od Allaha, a vi u nj ne\u0107ete da vjerujete \u2013 ko je onda u ve\u0107oj zabludi od onoga koji je u protivrje\u010dju dalekom od istine?\""}, {"id": 110096, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 482, "ruku": 418, "hizb_quarter": 193, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4271, "text": "Mi \u0107emo im pru\u017eati dokaze Na\u0161e u prostranstvima svemirskim, a i u njima samim, dok im ne bude sasvim jasno da je Kur'an istina. A zar nije dovoljno to \u0161to je Gospodar tvoj o svemu obavije\u0161ten?"}, {"id": 110097, "identifier": "bs.korkut", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 482, "ruku": 418, "hizb_quarter": 193, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Korkut", "transelator_en_name": "Besim Korkut", "format": "text", "type": "translation", "ayah_number": 4272, "text": "Oni sumnjaju da \u0107e pred Gospodara svoga stati, a On znanjem Svojim obuhva\u0107a sve."}]