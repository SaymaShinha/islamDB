[{"id": 415597, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 413, "hizb_quarter": 190, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4219, "text": "Ha Mim"}, {"id": 415543, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 413, "hizb_quarter": 190, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4220, "text": "En \u00e5penbaring fra den Barmhjertige, den N\u00e5derike,"}, {"id": 415598, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 413, "hizb_quarter": 190, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4221, "text": "en Bok, hvis ord er klargjort som en arabisk Koran, for mennesker som har innsikt,"}, {"id": 415599, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 413, "hizb_quarter": 190, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4222, "text": "med godt budskap og advarsler, men de fleste vender seg bort, og de h\u00f8rer ikke."}, {"id": 415600, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 413, "hizb_quarter": 190, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4223, "text": "De sier: \u00abV\u00e5re hjerter er tildekket mot det du kaller oss til, og det er tungh\u00f8rthet i v\u00e5re \u00f8rer, og et sl\u00f8r mellom oss og deg. Gj\u00f8r det du gj\u00f8r. Vi gj\u00f8r det vi gj\u00f8r.\u00bb"}, {"id": 415601, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 413, "hizb_quarter": 190, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4224, "text": "Si: \u00abJeg er bare et vanlig menneske som dere. Meg er \u00e5penbart at deres Gud er \u00e9n Gud, s\u00e5 ta rett vei til Ham, og be Ham om tilgivelse! Ve over avgudsdyrkerne,"}, {"id": 415602, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 413, "hizb_quarter": 190, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4225, "text": "som ikke gir det rituelle bidrag, og fornekter det hinsidige!"}, {"id": 415603, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 413, "hizb_quarter": 190, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4226, "text": "Men de som tror, og lever rettskaffent, de f\u00e5r den l\u00f8nn som tilkommer dem.\u00bb"}, {"id": 415604, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 414, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4227, "text": "Si: \u00abFornekter dere virkelig Ham, som skapte jorden p\u00e5 to dager, og gir Ham likemenn?\u00bb Han er all verdens Herre!"}, {"id": 415605, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 414, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4228, "text": "Han plasserte de faste fjell h\u00f8yt opp p\u00e5 den, og velsignet den, og anordnet en levem\u00e5te p\u00e5 den p\u00e5 fire dager, til alle som s\u00f8ker p\u00e5 like fot."}, {"id": 415606, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 414, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4229, "text": "S\u00e5 drog Han til himmelen, som var r\u00f8yk og damp, og sa til den og til jorden: \u00abKom igjen, godvillig eller motvillig!\u00bb De svarte: \u00abVi kommer godvillig.\u00bb"}, {"id": 415607, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 478, "ruku": 414, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4230, "text": "Og Han gjorde dem ferdig som syv himler p\u00e5 to dager, og Han inngav hver himmel dens oppgave. Vi prydet den nederste himmel med lysbluss, ogs\u00e5 til vern. Dette er anordningen til den Mektige, den Allvitende."}, {"id": 415608, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 478, "ruku": 414, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4231, "text": "Om de vender seg bort, s\u00e5 si: \u00abJeg advarer dere mot et tordenskrall, lik det som rammet Ad og Thamod.\u00bb"}, {"id": 415609, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 478, "ruku": 414, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4232, "text": "Da deres sendebud kom til dem fra alle kanter: \u00abDyrk ingen annen enn Gud!\u00bb Da svarte de: \u00abOm Herren hadde villet, ville Han sikkert sendt ned engler! Vi tror ikke p\u00e5 det budskap dere er sendt med.\u00bb"}, {"id": 415610, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 478, "ruku": 414, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4233, "text": "Hva Ad ang\u00e5r, s\u00e5 viste de uberettiget hovmod p\u00e5 jorden, og sa: \u00abHvem er st\u00f8rre enn oss i makt?\u00bb Hadde de da ikke innsett at Gud, som skapte dem, var st\u00f8rre enn dem i makt? Og de fornektet V\u00e5rt ord."}, {"id": 415611, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 478, "ruku": 414, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4234, "text": "Vi sendte over dem en rasende vind i uhellsvangre dager for \u00e5 la dem smake fornedrelsens straff i jordelivet. Men straffen i det hinsidige er mer fornedrende, og de kan ikke hjelpes."}, {"id": 415612, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 478, "ruku": 414, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4235, "text": "Hva Thamod ang\u00e5r, s\u00e5 gav Vi dem ledelse, men de foretrakk blindhet fremfor ledelse. S\u00e5 tok den fornedrende straffs tordenskrall dem, for det de hadde fortjent."}, {"id": 415613, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 478, "ruku": 414, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4236, "text": "Men Vi reddet dem som trodde og var gudfryktige."}, {"id": 415614, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 478, "ruku": 415, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4237, "text": "P\u00e5 den dag, n\u00e5r Guds fiender samles hen til Ilden gruppevis,"}, {"id": 415615, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 478, "ruku": 415, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4238, "text": "og n\u00e5r de s\u00e5 n\u00e5r frem til den, vil deres \u00f8rer, \u00f8yne og hud b\u00e6re vitnem\u00e5l mot dem om hva de bedrev."}, {"id": 415616, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 479, "ruku": 415, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4239, "text": "Og de vil si til huden: \u00abHvorfor vitner dere mot oss?\u00bb Den vil svare: \u00abGud lar oss tale, Han, som f\u00e5r alt til \u00e5 tale. Han skapte dere f\u00f8rste gang, og til Ham m\u00e5 dere vende tilbake."}, {"id": 415617, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 479, "ruku": 415, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4240, "text": "Dere kunne ikke skjule dere fra at \u00f8rer, \u00f8yne og hud vitner mot dere, men dere trodde at Gud ikke ville f\u00e5 vite stort av det dere gj\u00f8r."}, {"id": 415618, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 479, "ruku": 415, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4241, "text": "Og denne deres formodning, som dere hadde om Herren, har brakt dere i fordervelsen, og dere ble av taperne.\u00bb"}, {"id": 415619, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 479, "ruku": 415, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4242, "text": "Om de turer frem, s\u00e5 er Ilden husly for dem. Og om de ber om n\u00e5de, s\u00e5 blir de ikke h\u00f8rt."}, {"id": 415620, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 479, "ruku": 415, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4243, "text": "Vi lot dem f\u00e5 \u00abkamerater\u00bb, og de pyntet opp for dem, b\u00e5de det de hadde foran seg og bak seg. S\u00e5 ble ordet realitet for dem, om henfarne samfunn av dsjinner og folk. De var visselig tapere."}, {"id": 415621, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 479, "ruku": 416, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4244, "text": "De vantro sier: \u00abH\u00f8r ikke p\u00e5 denne Koranen! Sl\u00e5 den hen i tomt prat, s\u00e5 kanskje dere vinner frem.\u00bb"}, {"id": 415622, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 479, "ruku": 416, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4245, "text": "Men Vi skal visselig la de vantro smake en sv\u00e6r straff! Og la dem f\u00e5 igjen for sine verste handlinger."}, {"id": 415623, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 479, "ruku": 416, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4246, "text": "Dette er Guds fienders bel\u00f8nning, Ilden. Der har de varig bosted, som bel\u00f8nning for at de fornektet V\u00e5rt ord."}, {"id": 415624, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 479, "ruku": 416, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4247, "text": "Og de vantro vil si: \u00abHerre, vis oss dem som f\u00f8rte oss vill, av dsjinner og mennesker, s\u00e5 vi kan legge dem under v\u00e5re f\u00f8tter, s\u00e5 de kan bli av dem dypest nede.\u00bb"}, {"id": 415625, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 480, "ruku": 416, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4248, "text": "Men til dem som sier: \u00abV\u00e5r Herre er Gud,\u00bb og s\u00e5 holder rett kurs, stiger englene ned: \u00abFrykt ikke, og v\u00e6r ikke bedr\u00f8vet! Fryd dere ved paradiset, som er lovet dere."}, {"id": 415626, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 480, "ruku": 416, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4249, "text": "Vi tar oss av dere i denne verden og den hinsidige. Der vil dere f\u00e5 alt deres hjerter begj\u00e6rer, og alt dere ber om,"}, {"id": 415627, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 480, "ruku": 416, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4250, "text": "som gjestfrihet fra en som er tilgivende, n\u00e5derik.\u00bb"}, {"id": 415628, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 480, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4251, "text": "Hvem taler vakrere ord enn den som kaller til Gud, lever rettskaffent, og sier: \u00abJeg har overgitt meg til Gud?\u00bb"}, {"id": 415629, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 480, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4252, "text": "En god og en ond gjerning er ikke like. Vis det onde tilbake med det som bedre er, og se, den du lever i fiendskap med, blir som en varm venn!"}, {"id": 415630, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 480, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4253, "text": "Men dette gis bare dem som viser t\u00e5lmod. Det gis bare den som har en stor gave."}, {"id": 415631, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 480, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4254, "text": "Om en djevelens provokasjon skulle slite i deg, s\u00e5 s\u00f8k tilflukt hos Gud. Han er den H\u00f8rende, den Allvitende!"}, {"id": 415632, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 480, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4255, "text": "Av Hans tegn er natten og dagen, solen og m\u00e5nen. Fall ikke ned for sol og m\u00e5ne, men fall ned for Gud, som skapte dem, om det er Ham dere tilber."}, {"id": 415633, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 480, "ruku": 417, "hizb_quarter": 192, "sajda": true, "sajda_id": 12, "sajda_obligatory": true, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4256, "text": "Men om noen er for hovmodige, s\u00e5 lovpriser de som er hos Herren Ham natt og dag, og de blir ikke trette."}, {"id": 415634, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 481, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4257, "text": "Av Hans tegn er at du ser jorden ligge livl\u00f8s og uanselig, men s\u00e5 sender Vi vann over den, og den kommer til liv, og gr\u00f8nnes. Han, som gir den liv, gir ogs\u00e5 de d\u00f8de liv. Han evner alt!"}, {"id": 415635, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 481, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4258, "text": "De som forvrir V\u00e5rt ord, er ikke skjult for oss. Er vel den som kastes i Ilden bedre enn den som med trygghet st\u00e5r frem p\u00e5 oppstandelsens dag? Gj\u00f8r hva dere vil! Han ser hva dere gj\u00f8r."}, {"id": 415636, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 481, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4259, "text": "Se, de som ikke tror p\u00e5 formaningen n\u00e5r den er kommet til dem!"}, {"id": 415637, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 481, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4260, "text": "Det er visselig en mektig skrift! Falskhet n\u00e5r den ikke fra noen kant! En \u00e5penbaring fra en som er vis, prisverdig!"}, {"id": 415638, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 481, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4261, "text": "Intet blir meddelt deg som ikke er meddelt sendebud f\u00f8r deg. Herren har tilgivelse, og ogs\u00e5 en smertelig straff."}, {"id": 415639, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 481, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4262, "text": "Hadde Vi gjort den til en Koran p\u00e5 fremmed spr\u00e5k, ville de sagt: \u00abHvorfor er ikke dens ord gjort forst\u00e5elige? Et fremmed spr\u00e5k, og en araber?\u00bb Si: \u00abDen er ledelse og legedom for dem som tror.\u00bb Men de som ikke tror, har tungh\u00f8rthet i sine \u00f8rer, og de er blinde for den. De er som folk som kalles fra et sted i det fjerne."}, {"id": 415640, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 481, "ruku": 418, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4263, "text": "Vi gav Moses skriften, og det ble uenighet om den. Hadde det ikke foreligget et ord fra Herren, ville saken blitt opp- og avgjort mellom dem. De er visselig i betenkelig tvil om den."}, {"id": 415641, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 481, "ruku": 418, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4264, "text": "Om noen handler rettskaffent, s\u00e5 er det til egen vinning. Om noen handler ondt, s\u00e5 er det til egen belastning. Gud er ikke den som gj\u00f8r Sine tjenere urett."}, {"id": 415642, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 482, "ruku": 418, "hizb_quarter": 193, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4265, "text": "Kunnskap om timen beror hos Ham. Ingen frukt kommer ut av sitt hylster, og intet hunkj\u00f8nn blir svanger eller f\u00f8der uten Hans viten. P\u00e5 den dag da Han roper til dem: \u00abHvor er Mine medguder?\u00bb Da vil de svare: \u00abVi forsikrer Deg, ingen av oss kan bevitne det!\u00bb"}, {"id": 415643, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 482, "ruku": 418, "hizb_quarter": 193, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4266, "text": "Og det de p\u00e5kalte tidligere er borte for dem, og de innser at de har ingen utvei."}, {"id": 415644, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 482, "ruku": 418, "hizb_quarter": 193, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4267, "text": "Mennesket blir ikke trett av \u00e5 be om godt, men om noe ondt rammer ham, blir han fortvilet og mismodig."}, {"id": 415645, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 482, "ruku": 418, "hizb_quarter": 193, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4268, "text": "Og lar Vi ham smake en n\u00e5desbevisning fra Oss etter motgang har rammet ham, s\u00e5 vil han visselig si: \u00abDette tilkommer meg! Jeg tror ikke at timen inntreffer. Om jeg bringes tilbake til Herren, f\u00e5r jeg nok det beste hos Ham.\u00bb Men da skal Vi visselig fortelle de vantro hva de bedrev, og Vi skal la dem smake en hard straff."}, {"id": 415646, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 482, "ruku": 418, "hizb_quarter": 193, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4269, "text": "Viser Vi mennesket godhet, vender han seg bort, og trekker seg unna, men n\u00e5r ondt rammer ham, er han full av b\u00f8nner."}, {"id": 415647, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 482, "ruku": 418, "hizb_quarter": 193, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4270, "text": "Si: \u00abHva mener dere? Hvis det kommer fra Gud, og dere s\u00e5 fornekter det? Hvem er mer villfarende enn den som g\u00e5r langt i tross?\u00bb"}, {"id": 415649, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 482, "ruku": 418, "hizb_quarter": 193, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4271, "text": "Vi skal vise dem V\u00e5re tegn p\u00e5 alle horisonter, og i dem selv, til det blir klart for dem at det er sannhetens realitet. Er det ikke nok at Herren er vitne til alle ting?"}, {"id": 415650, "identifier": "no.berg", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 482, "ruku": 418, "hizb_quarter": 193, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "no", "name": "Einar Berg", "transelator_en_name": "Einar Berg", "format": "text", "type": "translation", "ayah_number": 4272, "text": "Er de da i tvil om m\u00f8tet med Herren? Er det ikke slik at Han omslutter alle ting?"}]