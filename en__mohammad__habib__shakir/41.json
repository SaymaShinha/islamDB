[{"id": 209863, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 413, "hizb_quarter": 190, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4219, "text": "Ha Mim!"}, {"id": 209864, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 413, "hizb_quarter": 190, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4220, "text": "A revelation from the Beneficent, the Merciful Allah:"}, {"id": 209865, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 413, "hizb_quarter": 190, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4221, "text": "A Book of which the verses are made plain, an Arabic Quran for a people who know:"}, {"id": 209866, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 413, "hizb_quarter": 190, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4222, "text": "A herald of good news and a warner, but most of them turn aside so they hear not."}, {"id": 209867, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 413, "hizb_quarter": 190, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4223, "text": "And they say: Our hearts are under coverings from that to which you call us, and there is a heaviness in our ears, and a veil hangs between us and you, so work, we too are working."}, {"id": 209868, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 413, "hizb_quarter": 190, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4224, "text": "Say: I am only a mortal like you; it is revealed to me that your Allah is one Allah, therefore follow the right way to Him and ask His forgiveness; and woe to the polytheists;"}, {"id": 209869, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 413, "hizb_quarter": 190, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4225, "text": "(To) those who do not give poor-rate and they are unbelievers in the hereafter."}, {"id": 209870, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 413, "hizb_quarter": 190, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4226, "text": "(As for) those who believe and do good, they shall surely have a reward never to be cut off."}, {"id": 209871, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 414, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4227, "text": "Say: What! do you indeed disbelieve in Him Who created the earth in two periods, and do you set up equals with Him? That is the Lord of the Worlds."}, {"id": 209872, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 414, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4228, "text": "And He made in it mountains above its surface, and He blessed therein and made therein its foods, in four periods: alike for the seekers."}, {"id": 209873, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 477, "ruku": 414, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4229, "text": "Then He directed Himself to the heaven and it is a vapor, so He said to it and to the earth: Come both, willingly or unwillingly. They both said: We come willingly."}, {"id": 209874, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 478, "ruku": 414, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4230, "text": "So He ordained them seven heavens in two periods, and revealed in every heaven its affair; and We adorned the lower heaven with brilliant stars and (made it) to guard; that is the decree of the Mighty, the Knowing."}, {"id": 209875, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 478, "ruku": 414, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4231, "text": "But if they turn aside, then say: I have warned you of a scourge like the scourge of Ad and Samood."}, {"id": 209876, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 478, "ruku": 414, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4232, "text": "When their apostles came to them from before them and from behind them, saying, Serve nothing but Allah, they said: If our Lord had pleased He would certainly have sent down angels, so we are surely unbelievers in that with which you are sent."}, {"id": 209877, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 478, "ruku": 414, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4233, "text": "Then as to Ad, they were unjustly proud in the land, and they said: Who is mightier in strength than we? Did they not see that Allah Who created them was mightier than they in strength, and they denied Our communications?"}, {"id": 209878, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 478, "ruku": 414, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4234, "text": "So We sent on them a furious wind in unlucky days, that We may make them taste the chastisement of abasement in this world's life; and certainly the chastisement of the hereafter is much more abasing, and they shall not be helped."}, {"id": 209879, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 478, "ruku": 414, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4235, "text": "And as to Samood, We showed them the right way, but they chose error above guidance, so there overtook them the scourge of an abasing chastisement for what they earned."}, {"id": 209880, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 478, "ruku": 414, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4236, "text": "And We delivered those who believed and guarded (against evil)."}, {"id": 209881, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 478, "ruku": 415, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4237, "text": "And on the day that the enemies of Allah shall be brought together to the fire, then they shall be formed into groups."}, {"id": 209882, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 478, "ruku": 415, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4238, "text": "Until when they come to it, their ears and their eyes and their skins shall bear witness against them as to what they did."}, {"id": 209883, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 479, "ruku": 415, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4239, "text": "And they shall say to their skins: Why have you borne witness against us? They shall say: Allah Who makes everything speak has made us speak, and He created you at first, and to Him you shall be brought back."}, {"id": 209884, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 479, "ruku": 415, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4240, "text": "And you did not veil yourselves lest your ears and your eyes and your skins should bear witness against you, but you thought that Allah did not know most of what you did."}, {"id": 209885, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 479, "ruku": 415, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4241, "text": "And that was your (evil) thought which you entertained about your Lord that has tumbled you down into perdition, so are you become of the lost ones."}, {"id": 209886, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 479, "ruku": 415, "hizb_quarter": 191, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4242, "text": "Then if they will endure, still the fire is their abode, and if they ask for goodwill, then are they not of those who shall be granted goodwill."}, {"id": 209887, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 479, "ruku": 415, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4243, "text": "And We have appointed for them comrades so they have made fair-seeming to them what is before them and what is behind them, and the word proved true against them-- among the nations of the jinn and the men that have passed away before them-- that they shall surely be losers."}, {"id": 209888, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 479, "ruku": 416, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4244, "text": "And those who disbelieve say: Do not listen to this Quran and make noise therein, perhaps you may overcome."}, {"id": 209889, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 479, "ruku": 416, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4245, "text": "Therefore We will most certainly make those who disbelieve taste a severe punishment, and We will most certainly reward them for the evil deeds they used to do."}, {"id": 209890, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 479, "ruku": 416, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4246, "text": "That is the reward of the enemies of Allah-- the fire; for them therein shall be the house of long abiding; a reward for their denying Our communications."}, {"id": 209891, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 479, "ruku": 416, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4247, "text": "And those who disbelieve will say: Our Lord! show us those who led us astray from among the jinn and the men that we may trample them under our feet so that they may be of the lowest."}, {"id": 209892, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 480, "ruku": 416, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4248, "text": "(As for) those who say: Our Lord is Allah, then continue in the right way, the angels descend upon them, saying: Fear not, nor be grieved, and receive good news of the garden which you were promised."}, {"id": 209893, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 480, "ruku": 416, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4249, "text": "We are your guardians in this world's life and in the hereafter, and you shall have therein what your souls desire and you shall have therein what you ask for:"}, {"id": 209894, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 480, "ruku": 416, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4250, "text": "A provision from the Forgiving, the Merciful."}, {"id": 209895, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 480, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4251, "text": "And who speaks better than he who calls to Allah while he himself does good, and says: I am surely of those who submit?"}, {"id": 209896, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 480, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4252, "text": "And not alike are the good and the evil. Repel (evil) with what is best, when lo! he between whom and you was enmity would be as if he were a warm friend."}, {"id": 209897, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 480, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4253, "text": "And none are made to receive it but those who are patient, and none are made to receive it but those who have a mighty good fortune."}, {"id": 209898, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 480, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4254, "text": "And if an interference of the Shaitan should cause you mischief, seek refuge in Allah; surely He is the Hearing, the Knowing."}, {"id": 209899, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 480, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4255, "text": "And among His signs are the night and the day and the sun and the moon; do not prostrate to the sun nor to the moon; and prostrate to Allah Who created them, if Him it is that you serve."}, {"id": 209900, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 480, "ruku": 417, "hizb_quarter": 192, "sajda": true, "sajda_id": 12, "sajda_obligatory": true, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4256, "text": "But if they are proud, yet those with your Lord glorify Him during the night and the day, and they are not tired."}, {"id": 209902, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 481, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4257, "text": "And among His signs is this, that you see the earth still, but when We send down on it the water, it stirs and swells: most surely He Who gives it life is the Giver of life to the dead; surely He has power over all things."}, {"id": 209903, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 481, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4258, "text": "Surely they who deviate from the right way concerning Our communications are not hidden from Us. What! is he then who is cast into the fire better, or he who comes safe on the day of resurrection? Do what you like, surely He sees what you do."}, {"id": 209904, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 481, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4259, "text": "Surely those who disbelieve in the reminder when it comes to them, and most surely it is a Mighty Book:"}, {"id": 209905, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 481, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4260, "text": "Falsehood shall not come to it from before it nor from behind it; a revelation from the Wise, the Praised One."}, {"id": 209906, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 481, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4261, "text": "Naught is said to you but what was said indeed to the apostles before you; surely your Lord is the Lord of forgiveness and the Lord of painful retribution."}, {"id": 209907, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 481, "ruku": 417, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4262, "text": "And if We had made it a Quran in a foreign tongue, they would certainly have said: Why have not its communications been made clear? What! a foreign (tongue) and an Arabian! Say: It is to those who believe a guidance and a healing; and (as for) those who do not believe, there is a heaviness in their ears and it is obscure to them; these shall be called to from a far-off place."}, {"id": 209908, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 481, "ruku": 418, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4263, "text": "And certainly We gave the Book to Musa, but it has been differed about, and had not a word already gone forth from your Lord, judgment would certainly have been given between them; and most surely they are in a disquieting doubt about it."}, {"id": 209909, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 24, "manzil": 6, "page": 481, "ruku": 418, "hizb_quarter": 192, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4264, "text": "Whoever does good, it is for his own soul, and whoever does evil, it is against it; and your Lord is not in the least unjust to the servants."}, {"id": 209910, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 482, "ruku": 418, "hizb_quarter": 193, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4265, "text": "To Him is referred the knowledge of the hour, and there come not forth any of the fruits from their coverings, nor does a female bear, nor does she give birth, but with His knowledge; and on the day when He shall call out to them, Where are (those whom you called) My associates? They shall say: We declare to Thee, none of us is a witness."}, {"id": 209911, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 482, "ruku": 418, "hizb_quarter": 193, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4266, "text": "And away from them shall go what they called upon before, and they shall know for certain that there is no escape for them."}, {"id": 209912, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 482, "ruku": 418, "hizb_quarter": 193, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4267, "text": "Man is never tired of praying for good, and if evil touch him, then he is despairing, hopeless."}, {"id": 209913, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 482, "ruku": 418, "hizb_quarter": 193, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4268, "text": "And if We make him taste mercy from Us after distress that has touched him, he would most certainly say: This is of me, and I do not think the hour will come to pass, and if I am sent back to my Lord, I shall have with Him sure good; but We will most certainly inform those who disbelieved of what they did, and We will most certainly make them taste of hard chastisement."}, {"id": 209914, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 482, "ruku": 418, "hizb_quarter": 193, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4269, "text": "And when We show favor to man, he turns aside and withdraws himself; and when evil touches him, he makes lengthy supplications."}, {"id": 209915, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 482, "ruku": 418, "hizb_quarter": 193, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4270, "text": "Say: Tell me if it is from Allah; then you disbelieve in it, who is in greater error than he who is in a prolonged opposition?"}, {"id": 209916, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 482, "ruku": 418, "hizb_quarter": 193, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4271, "text": "We will soon show them Our signs in the Universe and in their own souls, until it will become quite clear to them that it is the truth. Is it not sufficient as regards your Lord that He is a witness over all things?"}, {"id": 209917, "identifier": "en.shakir", "surah_number": 41, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0641\u0635\u0644\u062a", "surah_en_name": "Fussilat", "surah_en_name_translation": "Explained in detail", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 482, "ruku": 418, "hizb_quarter": 193, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Shakir", "transelator_en_name": "Mohammad Habib Shakir", "format": "text", "type": "translation", "ayah_number": 4272, "text": "Now surely they are in doubt as to the meeting of their Lord; now surely He encompasses all things."}]