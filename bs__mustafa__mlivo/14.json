[{"id": 113842, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 255, "ruku": 211, "hizb_quarter": 102, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1751, "text": "Alif. Lam. Ra. Knjiga - objavljujemo ti je da izvede\u0161 ljude iz tmina na svjetlost s dozvolom Gospodara njihovog, na put Mo\u0107nog, Hvaljenog,"}, {"id": 113843, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 255, "ruku": 211, "hizb_quarter": 102, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1752, "text": "Allaha, \u010cije je \u0161ta je u nebesima i \u0161ta je na Zemlji. A te\u0161ko nevjernicima od kazne \u017eestoke!,"}, {"id": 113844, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 255, "ruku": 211, "hizb_quarter": 102, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1753, "text": "Onima koji vi\u0161e vole \u017eivot Dunjaa od Ahireta i odvra\u0107aju od puta Allahovog i tra\u017ee iskrivljenost u njemu; takvi su u zabludi dalekoj."}, {"id": 113845, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 255, "ruku": 211, "hizb_quarter": 102, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1754, "text": "I slali smo svakog poslanika samo s jezikom naroda njegovog, da im objasni, pa Allah zablu\u0111uje koga ho\u0107e, a upu\u0107uje koga ho\u0107e; a On je Mo\u0107ni, Mudri!"}, {"id": 113846, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 255, "ruku": 211, "hizb_quarter": 102, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1755, "text": "I doista smo poslali Musaa sa znakovima Na\u0161im: \"Izvedi narod svoj iz tmina na svjetlost i opomeni ih danima Allahovim.\" Uistinu, u tome su znaci svakom strpljivom, zahvalnom."}, {"id": 113847, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 256, "ruku": 211, "hizb_quarter": 102, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1756, "text": "I kad re\u010de Musa narodu svom: \"Sjetite se blagodati Allahove nad vama, kad vas je izbavio od ljudstva faraovnovog, mu\u010dili su vas zlom kaznom i klali sinove va\u0161e, a davali da \u017eive \u017eene va\u0161e; a u tome je bilo stra\u0161no isku\u0161enje od Gospodara va\u0161eg.\""}, {"id": 113848, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 256, "ruku": 212, "hizb_quarter": 102, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1757, "text": "I kad najavi Gospodar va\u0161: \"Ako budete zahvaljivali, sigurno \u0107u vam uve\u0107ati; a ako ne budete zahvaljivali, uistinu, kazna Moja je \u017eestoka.\""}, {"id": 113849, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 256, "ruku": 212, "hizb_quarter": 102, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1758, "text": "I re\u010de Musa: \"Ako budete nezahvalni vi i onaj ko je na Zemlji, svi, pa uistinu, Allah je Neovisni, Hvaljeni.\""}, {"id": 113850, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 256, "ruku": 212, "hizb_quarter": 102, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1759, "text": "Zar vam nije stigla vijest onih prije vas: naroda Nuhovog i Ada, i Semuda i onih poslije njih? Zna ih samo Allah. Dolazili su im poslanici njihovi sa jasnim znacima, pa su stavljali ruke svoje u usta svoja, i govorili: \"Uistinu, mi ne vjerujemo u ono s \u010dim ste poslani, i uistinu, mi smo prema onom \u010demu nas pozivate u sumnji ozbiljnoj.\""}, {"id": 113851, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 256, "ruku": 212, "hizb_quarter": 103, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1760, "text": "Rekli bi poslanici njihovi: \"Zar je u Allaha sumnja, Stvoritelja nebesa i Zemlje? Poziva vas da vam oprosti grijehe va\u0161e i ostavi vas do roka odre\u0111enog.\" Rekli bi: \"Vi ste samo smrtnici sli\u010dni nama! \u017delite da nas odvratite od onog \u0161ta obo\u017eavaju o\u010devi na\u0161i, zato nam dajte dokaz jasan.\""}, {"id": 113852, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 257, "ruku": 212, "hizb_quarter": 103, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1761, "text": "Poslanici njihovi bi im rekli: \"Mi smo samo smrtnici sli\u010dni vama, me\u0111utim Allah obdaruje koga ho\u0107e od robova Svojih. I nije za nas da vam donosimo dokaz, izuzev s dozvolom Allahovom. I u Allaha zato neka se pouzdaju vjernici!"}, {"id": 113853, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 257, "ruku": 212, "hizb_quarter": 103, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1762, "text": "A za\u0161to da se ne pouzdamo u Allaha, a ve\u0107 nas je uputio putevima na\u0161im. I sigurno \u0107emo se strpiti nad onim \u010dim nas uznemiravate; a u Allaha zato neka se pouzdaju oni koji se pouzdavaju.\""}, {"id": 113854, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 257, "ruku": 213, "hizb_quarter": 103, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1763, "text": "A oni koji nisu vjerovali rekli bi, poslanicima svojim: \"Sigurno \u0107emo vas protjerati iz zemlje na\u0161e, ili \u0107ete se sigurno vratiti u millet na\u0161.\" Tad bi im objavljivao Gospodar njihov: \"Sigurno \u0107emo uni\u0161titi zalime,"}, {"id": 113855, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 257, "ruku": 213, "hizb_quarter": 103, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1764, "text": "I sigurno \u0107emo Zemlju nastaniti vama, poslije njih. To je za onog ko se boji stajanja preda Mnom i boji prijetnje Moje.\""}, {"id": 113734, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 257, "ruku": 213, "hizb_quarter": 103, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1765, "text": "I tra\u017eili su presudu (pobjedu), i ne bi uspio niti jedan buntovni, svojeglavi."}, {"id": 113810, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 257, "ruku": 213, "hizb_quarter": 103, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1766, "text": "Ispred njega je D\u017eehennem, a bi\u0107e napajan vodom gnojavom,"}, {"id": 113856, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 257, "ruku": 213, "hizb_quarter": 103, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1767, "text": "\u017ddera\u0107e je, a jedva da \u0107e je progutati, i dolazi\u0107e mu smrt sa svakog mjesta, a ne\u0107e on biti mrtav, i ispred njega \u0107e biti kazna gruba."}, {"id": 113857, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 257, "ruku": 213, "hizb_quarter": 103, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1768, "text": "Primjer onih koji ne vjeruju u Gospodara svog: Djela njihova su kao pepeo kojeg raznese vjetar u danu olujnom. Ne\u0107e upravljati ni nad \u010dim od onog \u0161ta su zaradili. To je ta zabluda daleka."}, {"id": 113858, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 258, "ruku": 213, "hizb_quarter": 103, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1769, "text": "Zar nisi vidio da je Allah stvorio nebesa i Zemlju s Istinom? Ako ho\u0107e, odstrani\u0107e vas, a dove\u0161\u0107e stvorenje novo;"}, {"id": 113859, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 258, "ruku": 213, "hizb_quarter": 103, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1770, "text": "A nije to za Allaha te\u0161ko."}, {"id": 113860, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 258, "ruku": 213, "hizb_quarter": 103, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1771, "text": "I iza\u0107i \u0107e Allahu svi, pa \u0107e slabi re\u0107i onima koji su se oholili: \"Uistinu, mi smo bili va\u0161e pristalice, pa ho\u0107ete li vi biti ti koji \u0107e nam imalo koristiti protiv kazne Allahove?\" Re\u0107i \u0107e: \"Da je nas uputio Allah, sigurno bismo (mi) vas uputili. Isto nam je uzrujavali se ili trpili; nema za nas nikakva pribje\u017ei\u0161ta.\""}, {"id": 113861, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 258, "ruku": 214, "hizb_quarter": 103, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1772, "text": "I re\u0107i \u0107e \u0161ejtan, po\u0161to stvar bude presu\u0111ena: \"Uistinu! Allah vam je dao obe\u0107anje istinito, i obe\u0107ao sam vam, pa sam vas iznevjerio. I nisam ja nad vama imao nikakvu vlast osim \u0161to sam vas pozivao, pa ste mi se odazvali. Zato ne korite mene, a korite du\u0161e svoje. Nisam ja pomaga\u010d va\u0161, niti ste vi pomaga\u010di moji. Uistinu, ja sam poricao to \u0161to ste me pridru\u017eivali ranije.\" Uistinu, zalimi - ima\u0107e oni kaznu bolnu."}, {"id": 113862, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 258, "ruku": 214, "hizb_quarter": 103, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1773, "text": "I bi\u0107e dato da oni koji vjeruju i \u010dine dobra djela u\u0111u u ba\u0161\u010de ispod kojih teku rijeke, vje\u010dno \u0107e biti u njima s dozvolom Gospodara njihovog. Pozdrav njihov u njima \u0107e biti: \"Selam!\""}, {"id": 113863, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 258, "ruku": 214, "hizb_quarter": 103, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1774, "text": "Zar ne vidi\u0161 kako Allah navodi primjer rije\u010di dobre kao drveta dobrog: korijen njegov je \u010dvrst, a njegova grana u nebu,"}, {"id": 113864, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 259, "ruku": 214, "hizb_quarter": 103, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1775, "text": "Daje plodove svoje svake sezone s dozvolom Gospodara svog; a navodi Allah primjere ljudima, da bi se oni podsjetili."}, {"id": 113865, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 259, "ruku": 214, "hizb_quarter": 103, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1776, "text": "A primjer lo\u0161e rije\u010di je kao lo\u0161e drvo i\u0161\u010dupano nad zemljom, nema ono nikakve stabilnosti."}, {"id": 113720, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 259, "ruku": 214, "hizb_quarter": 103, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1777, "text": "Allah oja\u010dava one koji vjeruju rje\u010dju \u010dvrstom u \u017eivotu Dunjaa i na Ahiretu, a zablu\u0111uje Allah zalime; a Allah \u010dini \u0161ta ho\u0107e."}, {"id": 113747, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 259, "ruku": 215, "hizb_quarter": 104, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1778, "text": "Zar nisi vidio one koji su blagodat Allahovu zamijenili kufrom i u\u010dinili da se narod njihov spusti u ku\u0107u propasti,"}, {"id": 113822, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 259, "ruku": 215, "hizb_quarter": 104, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1779, "text": "D\u017eehennemu, pr\u017ei\u0107e se njime, a lo\u0161e je stani\u0161te."}, {"id": 113867, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 259, "ruku": 215, "hizb_quarter": 104, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1780, "text": "I na\u010dinili su Allahu suparnike da zavode s puta Njegovog. Reci: \"U\u017eivajte! Pa uistinu, dolazi\u0161te va\u0161e je vatri.\""}, {"id": 113868, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 259, "ruku": 215, "hizb_quarter": 104, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1781, "text": "Reci robovima Mojim koji vjeruju, (da) obavljaju salat i udjeljuju od onog \u010dim smo ih opskrbili, tajno i javno, prije no do\u0111e Dan u kojem ne\u0107e biti trgovine, niti prijateljstva."}, {"id": 113869, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 259, "ruku": 215, "hizb_quarter": 104, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1782, "text": "Allah je Taj koji je stvorio nebesa i Zemlju, i spu\u0161ta s neba vodu, pa izvodi njome vo\u0107e, (kao) opskrbu za vas; i pot\u010dinio vam je plovilo, da plovi morem po naredbi Njegovoj, i pot\u010dinio je za vas rijeke;"}, {"id": 113870, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 259, "ruku": 215, "hizb_quarter": 104, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1783, "text": "I pot\u010dinio je za vas Sunce i Mjesec - oboje (us)trajno, i pot\u010dinio je za vas no\u0107 i dan,"}, {"id": 113871, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 260, "ruku": 215, "hizb_quarter": 104, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1784, "text": "I daje vam od sva\u010deg \u0161to od Njega tra\u017eite; a ako biste brojali blagodati Allahove, ne biste ih izra\u010dunali. Uistinu, \u010dovjek je uveliko zalim, nezahvalnik!"}, {"id": 113872, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 260, "ruku": 216, "hizb_quarter": 104, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1785, "text": "I kad re\u010de Ibrahim: \"Gospodaru moj! U\u010dini ovaj grad sigurnim, i sa\u010duvaj mene i sinove moje od obo\u017eavanja idola."}, {"id": 113873, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 260, "ruku": 216, "hizb_quarter": 104, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1786, "text": "Gospodaru moj! Uistinu, oni su zaveli mnoge od ljudi. Pa ko mene slijedi, pa uistinu on je od mene, a ko me ne poslu\u0161a - pa uistinu, Ti si Oprosnik, Milosrdni."}, {"id": 113874, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 260, "ruku": 216, "hizb_quarter": 104, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1787, "text": "Gospodaru na\u0161! Uistinu! Ja sam naselio neke od potomaka svojih u dolini neobradivoj, kod Ku\u0107e Tvoje Svete, Gospodaru na\u0161, da bi obavljali salat; zato u\u010dini da srca ljudi \u017eude ka njima, i opskrbi ih (nekim) od plodova, da bi oni zahvaljivali."}, {"id": 113875, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 260, "ruku": 216, "hizb_quarter": 104, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1788, "text": "Gospodaru na\u0161! Uistinu, Ti zna\u0161 \u0161ta krijemo i \u0161ta obznanjujemo. A ne\u0107e se sakriti od Allaha nikakva stvar na Zemlji, niti u nebu."}, {"id": 113876, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 260, "ruku": 216, "hizb_quarter": 104, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1789, "text": "Hvala Allahu koji mi je u starosti podario Ismaila i Ishaka! Uistinu, Gospodar moj je Onaj koji \u010duje dowu."}, {"id": 113877, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 260, "ruku": 216, "hizb_quarter": 104, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1790, "text": "Gospodaru moj! U\u010dini me ustrajnim u salatu i (isto) od potomaka mojih, Gospodaru na\u0161, i primi dowu moju."}, {"id": 113878, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 260, "ruku": 216, "hizb_quarter": 104, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1791, "text": "Gospodaru na\u0161! Oprosti meni i roditeljima mojim i vjernicima na Dan kad krene obra\u010dun.\""}, {"id": 113879, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 260, "ruku": 217, "hizb_quarter": 104, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1792, "text": "I nikako ne misli da je Allah nemaran prema onom \u0161ta rade zalimi; samo im odga\u0111a do Dana u kojem \u0107e se uko\u010diti pogledi."}, {"id": 113881, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 261, "ruku": 217, "hizb_quarter": 104, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1793, "text": "Bi\u0107e trka\u010di uzdignutih glava njihovih, ne\u0107e im se vra\u0107ati treptaj njihov, a srca njihova (kao) vazduh \u0107e biti."}, {"id": 113882, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 261, "ruku": 217, "hizb_quarter": 104, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1794, "text": "I upozori ljude Danom (kad) \u0107e im do\u0107i kazna, pa \u0107e re\u0107i oni koji su \u010dinili zulm: \"Gospodaru na\u0161! Ostavi nas do roka bliskog. Odazva\u0107emo se pozivu Tvom, i slijedi\u0107emo poslanike.\" Zar se niste kleli prije da vam nema nikakva nestanka?"}, {"id": 113883, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 261, "ruku": 217, "hizb_quarter": 104, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1795, "text": "A stanovali ste u nastambama onih koji su \u010dinili zulm du\u0161ama svojim, i bilo vam je jasno kako smo s njima postupili, a naveli smo vam primjere."}, {"id": 113884, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 261, "ruku": 217, "hizb_quarter": 104, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1796, "text": "I doista su pleli spletku svoju, a kod Allaha je spletka njihova, makar spletka njihova bila (takva) da njome brda nestanu"}, {"id": 113885, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 261, "ruku": 217, "hizb_quarter": 104, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1797, "text": "Zato nikako ne misli da je Allah prekr\u0161ilac obe\u0107anja Svog poslanicima Svojim. Uistinu! Allah je Mo\u0107ni, Vlasnik osvete."}, {"id": 113886, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 261, "ruku": 217, "hizb_quarter": 104, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1798, "text": "Na Dan kad bude zamijenjena Zemlja druga\u010dijom Zemljom i nebesa, i kad se pojave Allahu Jedinom, Onom koji pokorava:"}, {"id": 113887, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 261, "ruku": 217, "hizb_quarter": 104, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1799, "text": "I vidi\u0161 prestupnike Tog dana povezane u lance,"}, {"id": 113888, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 261, "ruku": 217, "hizb_quarter": 104, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1800, "text": "Odje\u0107a njihova bit \u0107e od katrana, a lica njihova pokriva\u0107e vatra,"}, {"id": 113889, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 261, "ruku": 217, "hizb_quarter": 104, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1801, "text": "Da bi isplatio Allah svakoj du\u0161i \u0161ta je zaradila. Uistinu! Allah je brz obra\u010dunom."}, {"id": 113890, "identifier": "bs.mlivo", "surah_number": 14, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0628\u0631\u0627\u0647\u064a\u0645", "surah_en_name": "Ibrahim", "surah_en_name_translation": "Abraham", "revelation_type": "Meccan", "juz": 13, "manzil": 3, "page": 261, "ruku": 217, "hizb_quarter": 104, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "bs", "name": "Mlivo", "transelator_en_name": "Mustafa Mlivo", "format": "text", "type": "translation", "ayah_number": 1802, "text": "Ovo je Poruka ljudima - i da se opomenu njome, i da znaju da je On Bog Jedini, i da se pou\u010de posjednici razuma."}]