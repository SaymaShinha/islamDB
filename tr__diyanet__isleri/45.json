[{"id": 565534, "identifier": "tr.diyanet", "surah_number": 45, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062c\u0627\u062b\u064a\u0629", "surah_en_name": "Al-Jaathiya", "surah_en_name_translation": "Crouching", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 499, "ruku": 434, "hizb_quarter": 199, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Diyanet \u0130\u015fleri", "transelator_en_name": "Diyanet Isleri", "format": "text", "type": "translation", "ayah_number": 4474, "text": "Ha, Mim."}, {"id": 565535, "identifier": "tr.diyanet", "surah_number": 45, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062c\u0627\u062b\u064a\u0629", "surah_en_name": "Al-Jaathiya", "surah_en_name_translation": "Crouching", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 499, "ruku": 434, "hizb_quarter": 199, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Diyanet \u0130\u015fleri", "transelator_en_name": "Diyanet Isleri", "format": "text", "type": "translation", "ayah_number": 4475, "text": "Kitap'\u0131n indirilmesi, g\u00fc\u00e7l\u00fc ve Hakim olan Allah kat\u0131ndand\u0131r."}, {"id": 565536, "identifier": "tr.diyanet", "surah_number": 45, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062c\u0627\u062b\u064a\u0629", "surah_en_name": "Al-Jaathiya", "surah_en_name_translation": "Crouching", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 499, "ruku": 434, "hizb_quarter": 199, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Diyanet \u0130\u015fleri", "transelator_en_name": "Diyanet Isleri", "format": "text", "type": "translation", "ayah_number": 4476, "text": "G\u00f6klerde ve yerde inananlara nice dersler vard\u0131r."}, {"id": 565537, "identifier": "tr.diyanet", "surah_number": 45, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062c\u0627\u062b\u064a\u0629", "surah_en_name": "Al-Jaathiya", "surah_en_name_translation": "Crouching", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 499, "ruku": 434, "hizb_quarter": 199, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Diyanet \u0130\u015fleri", "transelator_en_name": "Diyanet Isleri", "format": "text", "type": "translation", "ayah_number": 4477, "text": "Ey insanlar! Sizin yarat\u0131lman\u0131zda ve canl\u0131lar\u0131n yery\u00fcz\u00fcnde yay\u0131lmas\u0131nda, kesin olarak inanan kimseler i\u00e7in ibretler vard\u0131r."}, {"id": 565538, "identifier": "tr.diyanet", "surah_number": 45, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062c\u0627\u062b\u064a\u0629", "surah_en_name": "Al-Jaathiya", "surah_en_name_translation": "Crouching", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 499, "ruku": 434, "hizb_quarter": 199, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Diyanet \u0130\u015fleri", "transelator_en_name": "Diyanet Isleri", "format": "text", "type": "translation", "ayah_number": 4478, "text": "Gece ile g\u00fcnd\u00fcz\u00fcn birbiri ard\u0131ndan gelmesinde, g\u00f6kten, Allah'\u0131n r\u0131z\u0131k vermek i\u00e7in ya\u011fmur indirip, yeri onunla, \u00f6l\u00fcm\u00fcnden sonra diriltmesinde, r\u00fczgarlar\u0131 y\u00f6netmesinde, akleden kimseler i\u00e7in dersler vard\u0131r."}, {"id": 565539, "identifier": "tr.diyanet", "surah_number": 45, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062c\u0627\u062b\u064a\u0629", "surah_en_name": "Al-Jaathiya", "surah_en_name_translation": "Crouching", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 499, "ruku": 434, "hizb_quarter": 199, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Diyanet \u0130\u015fleri", "transelator_en_name": "Diyanet Isleri", "format": "text", "type": "translation", "ayah_number": 4479, "text": "\u0130\u015fte sana ger\u00e7ek olarak anlatt\u0131\u011f\u0131m\u0131z bunlar, Allah'\u0131n varl\u0131\u011f\u0131n\u0131n delilleridir. Art\u0131k Allah'tan ve O'nun delillerinden sonra hangi s\u00f6ze inan\u0131rlar?"}, {"id": 565540, "identifier": "tr.diyanet", "surah_number": 45, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062c\u0627\u062b\u064a\u0629", "surah_en_name": "Al-Jaathiya", "surah_en_name_translation": "Crouching", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 499, "ruku": 434, "hizb_quarter": 199, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Diyanet \u0130\u015fleri", "transelator_en_name": "Diyanet Isleri", "format": "text", "type": "translation", "ayah_number": 4480, "text": "Kendine okunan Allah'\u0131n ayetlerini dinleyip, sonra, onlar\u0131 hi\u00e7 duymam\u0131\u015f gibi b\u00fcy\u00fckl\u00fck taslamakta direnen, yalanc\u0131 ve g\u00fcnahkar ki\u015finin vay haline! Ona can yak\u0131c\u0131 bir azap m\u00fcjdele."}, {"id": 565541, "identifier": "tr.diyanet", "surah_number": 45, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062c\u0627\u062b\u064a\u0629", "surah_en_name": "Al-Jaathiya", "surah_en_name_translation": "Crouching", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 499, "ruku": 434, "hizb_quarter": 199, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Diyanet \u0130\u015fleri", "transelator_en_name": "Diyanet Isleri", "format": "text", "type": "translation", "ayah_number": 4481, "text": "Kendine okunan Allah'\u0131n ayetlerini dinleyip, sonra, onlar\u0131 hi\u00e7 duymam\u0131\u015f gibi b\u00fcy\u00fckl\u00fck taslamakta direnen, yalanc\u0131 ve g\u00fcnahkar ki\u015finin vay haline! Ona can yak\u0131c\u0131 bir azap m\u00fcjdele."}, {"id": 565542, "identifier": "tr.diyanet", "surah_number": 45, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062c\u0627\u062b\u064a\u0629", "surah_en_name": "Al-Jaathiya", "surah_en_name_translation": "Crouching", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 499, "ruku": 434, "hizb_quarter": 199, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Diyanet \u0130\u015fleri", "transelator_en_name": "Diyanet Isleri", "format": "text", "type": "translation", "ayah_number": 4482, "text": "Ayetlerimizden bir \u015fey \u00f6\u011frendi\u011finde onu alaya al\u0131r. \u0130\u015fte bunlara al\u00e7alt\u0131c\u0131 bir azap ve ard\u0131ndan da cehennem vard\u0131r. Kazand\u0131klar\u0131 \u015feyler de, Allah'\u0131 b\u0131rak\u0131p edindikleri dostlar da onlara bir fayda vermez. B\u00fcy\u00fck azap onlarad\u0131r."}, {"id": 565543, "identifier": "tr.diyanet", "surah_number": 45, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062c\u0627\u062b\u064a\u0629", "surah_en_name": "Al-Jaathiya", "surah_en_name_translation": "Crouching", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 499, "ruku": 434, "hizb_quarter": 199, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Diyanet \u0130\u015fleri", "transelator_en_name": "Diyanet Isleri", "format": "text", "type": "translation", "ayah_number": 4483, "text": "Ayetlerimizden bir \u015fey \u00f6\u011frendi\u011finde onu alaya al\u0131r. \u0130\u015fte bunlara al\u00e7alt\u0131c\u0131 bir azap ve ard\u0131ndan da cehennem vard\u0131r. Kazand\u0131klar\u0131 \u015feyler de, Allah'\u0131 b\u0131rak\u0131p edindikleri dostlar da onlara bir fayda vermez. B\u00fcy\u00fck azap onlarad\u0131r."}, {"id": 565544, "identifier": "tr.diyanet", "surah_number": 45, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062c\u0627\u062b\u064a\u0629", "surah_en_name": "Al-Jaathiya", "surah_en_name_translation": "Crouching", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 499, "ruku": 434, "hizb_quarter": 199, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Diyanet \u0130\u015fleri", "transelator_en_name": "Diyanet Isleri", "format": "text", "type": "translation", "ayah_number": 4484, "text": "\u0130\u015fte bu Kuran do\u011fruluk rehberidir. Rablerinin ayetlerini inkar edenlere, onlara, tiksindiren, can yakan bir azap vard\u0131r."}, {"id": 565545, "identifier": "tr.diyanet", "surah_number": 45, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062c\u0627\u062b\u064a\u0629", "surah_en_name": "Al-Jaathiya", "surah_en_name_translation": "Crouching", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 499, "ruku": 435, "hizb_quarter": 200, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Diyanet \u0130\u015fleri", "transelator_en_name": "Diyanet Isleri", "format": "text", "type": "translation", "ayah_number": 4485, "text": "Emri gere\u011fince denizde y\u00fczmek \u00fczere gemileri, l\u00fctfedip verdi\u011fi r\u0131zk\u0131 araman\u0131z i\u00e7in denizi buyru\u011funuz alt\u0131na veren Allah't\u0131r, belki art\u0131k \u015f\u00fckredersiniz."}, {"id": 565546, "identifier": "tr.diyanet", "surah_number": 45, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062c\u0627\u062b\u064a\u0629", "surah_en_name": "Al-Jaathiya", "surah_en_name_translation": "Crouching", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 499, "ruku": 435, "hizb_quarter": 200, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Diyanet \u0130\u015fleri", "transelator_en_name": "Diyanet Isleri", "format": "text", "type": "translation", "ayah_number": 4486, "text": "G\u00f6klerde olanlar\u0131, yerde olanlar\u0131, hepsini sizin buyru\u011funuz alt\u0131na vermi\u015ftir. Do\u011frusu bunlarda, d\u00fc\u015f\u00fcnen kimseler i\u00e7in dersler vard\u0131r."}, {"id": 565547, "identifier": "tr.diyanet", "surah_number": 45, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062c\u0627\u062b\u064a\u0629", "surah_en_name": "Al-Jaathiya", "surah_en_name_translation": "Crouching", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 500, "ruku": 435, "hizb_quarter": 200, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Diyanet \u0130\u015fleri", "transelator_en_name": "Diyanet Isleri", "format": "text", "type": "translation", "ayah_number": 4487, "text": "\u0130nanm\u0131\u015flara de ki: Allah'\u0131n bir milleti yapt\u0131klar\u0131na kar\u015f\u0131l\u0131k cezaland\u0131raca\u011f\u0131 g\u00fcnlerin gelece\u011fini ummayanlar\u0131 \u015fimdilik ba\u011f\u0131\u015flas\u0131nlar."}, {"id": 565548, "identifier": "tr.diyanet", "surah_number": 45, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062c\u0627\u062b\u064a\u0629", "surah_en_name": "Al-Jaathiya", "surah_en_name_translation": "Crouching", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 500, "ruku": 435, "hizb_quarter": 200, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Diyanet \u0130\u015fleri", "transelator_en_name": "Diyanet Isleri", "format": "text", "type": "translation", "ayah_number": 4488, "text": "Kim yararl\u0131 i\u015f i\u015flerse kendinedir; kim k\u00f6t\u00fcl\u00fck yaparsa kendi aleyhinedir. Sonra Rabbinize d\u00f6nd\u00fcr\u00fcl\u00fcrs\u00fcn\u00fcz."}, {"id": 565549, "identifier": "tr.diyanet", "surah_number": 45, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062c\u0627\u062b\u064a\u0629", "surah_en_name": "Al-Jaathiya", "surah_en_name_translation": "Crouching", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 500, "ruku": 435, "hizb_quarter": 200, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Diyanet \u0130\u015fleri", "transelator_en_name": "Diyanet Isleri", "format": "text", "type": "translation", "ayah_number": 4489, "text": "And olsun ki Biz, \u0130srailo\u011fullar\u0131na Kitap, h\u00fck\u00fcm ve peygamberlik verdik; onlar\u0131 temiz \u015feylerle r\u0131z\u0131kland\u0131rd\u0131k; onlar\u0131 d\u00fcnyalara \u00fcst\u00fcn k\u0131ld\u0131k."}, {"id": 565550, "identifier": "tr.diyanet", "surah_number": 45, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062c\u0627\u062b\u064a\u0629", "surah_en_name": "Al-Jaathiya", "surah_en_name_translation": "Crouching", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 500, "ruku": 435, "hizb_quarter": 200, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Diyanet \u0130\u015fleri", "transelator_en_name": "Diyanet Isleri", "format": "text", "type": "translation", "ayah_number": 4490, "text": "Din konusunda, onlara belgeler verdik; ancak, kendilerine ilim geldikten sonra birbirini \u00e7ekememezlikten ayr\u0131l\u0131\u011fa d\u00fc\u015ft\u00fcler. Rabbin k\u0131yamet g\u00fcn\u00fc, ayr\u0131l\u0131\u011fa d\u00fc\u015ft\u00fckleri \u015feyler hakk\u0131nda \u015f\u00fcphesiz aralar\u0131nda h\u00fckmedecektir."}, {"id": 565551, "identifier": "tr.diyanet", "surah_number": 45, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062c\u0627\u062b\u064a\u0629", "surah_en_name": "Al-Jaathiya", "surah_en_name_translation": "Crouching", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 500, "ruku": 435, "hizb_quarter": 200, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Diyanet \u0130\u015fleri", "transelator_en_name": "Diyanet Isleri", "format": "text", "type": "translation", "ayah_number": 4491, "text": "Sonra seni de din konusunda bir \u015feriat sahibi k\u0131ld\u0131k, ona uy; bilmeyenlerin heveslerine uyma."}, {"id": 565552, "identifier": "tr.diyanet", "surah_number": 45, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062c\u0627\u062b\u064a\u0629", "surah_en_name": "Al-Jaathiya", "surah_en_name_translation": "Crouching", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 500, "ruku": 435, "hizb_quarter": 200, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Diyanet \u0130\u015fleri", "transelator_en_name": "Diyanet Isleri", "format": "text", "type": "translation", "ayah_number": 4492, "text": "\u015e\u00fcphesiz onlar, seni Allah'tan m\u00fcsta\u011fni k\u0131lamazlar. Do\u011frusu zalimler birbirlerinin dostudurlar. Sak\u0131nanlar\u0131n dostu ise Allah't\u0131r."}, {"id": 565553, "identifier": "tr.diyanet", "surah_number": 45, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062c\u0627\u062b\u064a\u0629", "surah_en_name": "Al-Jaathiya", "surah_en_name_translation": "Crouching", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 500, "ruku": 435, "hizb_quarter": 200, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Diyanet \u0130\u015fleri", "transelator_en_name": "Diyanet Isleri", "format": "text", "type": "translation", "ayah_number": 4493, "text": "Bu Kuran, insanlar i\u00e7in a\u00e7\u0131k belgeler; kesin olarak inanan millet i\u00e7in do\u011fruluk rehberi ve rahmettir."}, {"id": 565555, "identifier": "tr.diyanet", "surah_number": 45, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062c\u0627\u062b\u064a\u0629", "surah_en_name": "Al-Jaathiya", "surah_en_name_translation": "Crouching", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 500, "ruku": 435, "hizb_quarter": 200, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Diyanet \u0130\u015fleri", "transelator_en_name": "Diyanet Isleri", "format": "text", "type": "translation", "ayah_number": 4494, "text": "Yoksa, k\u00f6t\u00fcl\u00fck i\u015fleyen kimseler, \u00f6l\u00fcmlerinde ve diriliklerinde kendilerini, inan\u0131p yararl\u0131 i\u015f i\u015fleyen kimseler ile bir mi tutaca\u011f\u0131m\u0131z\u0131 sand\u0131lar? Ne k\u00f6t\u00fc h\u00fck\u00fcm veriyorlar!"}, {"id": 565556, "identifier": "tr.diyanet", "surah_number": 45, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062c\u0627\u062b\u064a\u0629", "surah_en_name": "Al-Jaathiya", "surah_en_name_translation": "Crouching", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 500, "ruku": 436, "hizb_quarter": 200, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Diyanet \u0130\u015fleri", "transelator_en_name": "Diyanet Isleri", "format": "text", "type": "translation", "ayah_number": 4495, "text": "Allah g\u00f6kleri ve yeri ger\u00e7ekle yaratm\u0131\u015ft\u0131r; her cana, kazand\u0131\u011f\u0131n\u0131n kar\u015f\u0131l\u0131\u011f\u0131 verilir, onlara zulmedilmez."}, {"id": 565557, "identifier": "tr.diyanet", "surah_number": 45, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062c\u0627\u062b\u064a\u0629", "surah_en_name": "Al-Jaathiya", "surah_en_name_translation": "Crouching", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 501, "ruku": 436, "hizb_quarter": 200, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Diyanet \u0130\u015fleri", "transelator_en_name": "Diyanet Isleri", "format": "text", "type": "translation", "ayah_number": 4496, "text": "Heva ve hevesini tanr\u0131 edinen, bilgisi oldu\u011fu halde Allah'\u0131n \u015fa\u015f\u0131rtt\u0131\u011f\u0131, kula\u011f\u0131n\u0131 ve kalbini m\u00fch\u00fcrledi\u011fi, g\u00f6z\u00fcn\u00fc perdeledi\u011fi kimseyi g\u00f6rd\u00fcn m\u00fc? Onu Allah'tan ba\u015fka kim do\u011fru yola eri\u015ftirebilir? Ey insanlar! Anlamaz m\u0131s\u0131n\u0131z?"}, {"id": 565558, "identifier": "tr.diyanet", "surah_number": 45, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062c\u0627\u062b\u064a\u0629", "surah_en_name": "Al-Jaathiya", "surah_en_name_translation": "Crouching", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 501, "ruku": 436, "hizb_quarter": 200, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Diyanet \u0130\u015fleri", "transelator_en_name": "Diyanet Isleri", "format": "text", "type": "translation", "ayah_number": 4497, "text": "\"Hayat, ancak bu d\u00fcnyadaki hayat\u0131m\u0131zd\u0131r. \u00d6l\u00fcr\u00fcz ve ya\u015far\u0131z; bizi ancak zaman\u0131n ge\u00e7i\u015fi yoklu\u011fa s\u00fcr\u00fckler\" derler. Onlar\u0131n bu hususta bir bilgisi yoktur, sadece b\u00f6yle san\u0131rlar."}, {"id": 565559, "identifier": "tr.diyanet", "surah_number": 45, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062c\u0627\u062b\u064a\u0629", "surah_en_name": "Al-Jaathiya", "surah_en_name_translation": "Crouching", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 501, "ruku": 436, "hizb_quarter": 200, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Diyanet \u0130\u015fleri", "transelator_en_name": "Diyanet Isleri", "format": "text", "type": "translation", "ayah_number": 4498, "text": "Ayetlerimiz onlara a\u00e7\u0131k\u00e7a okundu\u011fu zaman, delilleri yaln\u0131zca: \"Do\u011fru s\u00f6zl\u00fc iseniz babalar\u0131m\u0131z\u0131 getirin bakal\u0131m\" demek olur."}, {"id": 565560, "identifier": "tr.diyanet", "surah_number": 45, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062c\u0627\u062b\u064a\u0629", "surah_en_name": "Al-Jaathiya", "surah_en_name_translation": "Crouching", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 501, "ruku": 436, "hizb_quarter": 200, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Diyanet \u0130\u015fleri", "transelator_en_name": "Diyanet Isleri", "format": "text", "type": "translation", "ayah_number": 4499, "text": "De ki: \"Sizi Allah diriltir, sonra \u00f6ld\u00fcr\u00fcr, sonra sizi \u015f\u00fcphe g\u00f6t\u00fcrmeyen k\u0131yamet g\u00fcn\u00fcnde toplar. Ama insanlar\u0131n \u00e7o\u011fu bilmezler.\""}, {"id": 565561, "identifier": "tr.diyanet", "surah_number": 45, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062c\u0627\u062b\u064a\u0629", "surah_en_name": "Al-Jaathiya", "surah_en_name_translation": "Crouching", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 501, "ruku": 437, "hizb_quarter": 200, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Diyanet \u0130\u015fleri", "transelator_en_name": "Diyanet Isleri", "format": "text", "type": "translation", "ayah_number": 4500, "text": "G\u00f6klerin ve yerin h\u00fck\u00fcmranl\u0131\u011f\u0131 Allah'\u0131nd\u0131r. K\u0131yamet kopaca\u011f\u0131 g\u00fcn, i\u015fte o g\u00fcn, bat\u0131l s\u00f6zlere uymu\u015f olanlar h\u00fcsranda kal\u0131rlar."}, {"id": 565562, "identifier": "tr.diyanet", "surah_number": 45, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062c\u0627\u062b\u064a\u0629", "surah_en_name": "Al-Jaathiya", "surah_en_name_translation": "Crouching", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 501, "ruku": 437, "hizb_quarter": 200, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Diyanet \u0130\u015fleri", "transelator_en_name": "Diyanet Isleri", "format": "text", "type": "translation", "ayah_number": 4501, "text": "Her \u00fcmmeti diz \u00fcst\u00fc \u00e7\u00f6km\u00fc\u015f olarak g\u00f6r\u00fcrs\u00fcn. Her \u00fcmmet kitab\u0131na \u00e7a\u011fr\u0131l\u0131r. Onlara denir ki: \"Bug\u00fcn, size i\u015fledi\u011finizin kar\u015f\u0131l\u0131\u011f\u0131 verilecektir.\""}, {"id": 565563, "identifier": "tr.diyanet", "surah_number": 45, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062c\u0627\u062b\u064a\u0629", "surah_en_name": "Al-Jaathiya", "surah_en_name_translation": "Crouching", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 501, "ruku": 437, "hizb_quarter": 200, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Diyanet \u0130\u015fleri", "transelator_en_name": "Diyanet Isleri", "format": "text", "type": "translation", "ayah_number": 4502, "text": "\"Bu kitab\u0131m\u0131z ger\u00e7ekten sizin aleyhinize konu\u015fur. Biz yapt\u0131klar\u0131n\u0131z\u0131 \u015f\u00fcphesiz bir bir kaydediyorduk.\""}, {"id": 565564, "identifier": "tr.diyanet", "surah_number": 45, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062c\u0627\u062b\u064a\u0629", "surah_en_name": "Al-Jaathiya", "surah_en_name_translation": "Crouching", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 501, "ruku": 437, "hizb_quarter": 200, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Diyanet \u0130\u015fleri", "transelator_en_name": "Diyanet Isleri", "format": "text", "type": "translation", "ayah_number": 4503, "text": "\u0130nan\u0131p, yararl\u0131 i\u015f i\u015fleyenlere gelince, Rableri onlar\u0131 rahmetine garkeder. \u0130\u015fte bu, apa\u00e7\u0131k kurtulu\u015ftur."}, {"id": 565565, "identifier": "tr.diyanet", "surah_number": 45, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062c\u0627\u062b\u064a\u0629", "surah_en_name": "Al-Jaathiya", "surah_en_name_translation": "Crouching", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 501, "ruku": 437, "hizb_quarter": 200, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Diyanet \u0130\u015fleri", "transelator_en_name": "Diyanet Isleri", "format": "text", "type": "translation", "ayah_number": 4504, "text": "Ama, inkar eden kimselere denir ki: \"Ayetlerim size okunmu\u015f, siz de b\u00fcy\u00fcklenip su\u00e7lu bir millet olmu\u015ftunuz de\u011fil mi?\""}, {"id": 565566, "identifier": "tr.diyanet", "surah_number": 45, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062c\u0627\u062b\u064a\u0629", "surah_en_name": "Al-Jaathiya", "surah_en_name_translation": "Crouching", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 501, "ruku": 437, "hizb_quarter": 200, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Diyanet \u0130\u015fleri", "transelator_en_name": "Diyanet Isleri", "format": "text", "type": "translation", "ayah_number": 4505, "text": "\"Do\u011frusu Allah'\u0131n verdi\u011fi s\u00f6z ger\u00e7ektir, k\u0131yamet saati \u015f\u00fcphe g\u00f6t\u00fcrmez\" dendi\u011fi zaman: \"K\u0131yametin ne oldu\u011funu bilmiyoruz, yaln\u0131z yoktur san\u0131yoruz, buna dair kesin bir bilgi elde etmi\u015f de\u011filiz\" derdiniz."}, {"id": 565567, "identifier": "tr.diyanet", "surah_number": 45, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062c\u0627\u062b\u064a\u0629", "surah_en_name": "Al-Jaathiya", "surah_en_name_translation": "Crouching", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 502, "ruku": 437, "hizb_quarter": 200, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Diyanet \u0130\u015fleri", "transelator_en_name": "Diyanet Isleri", "format": "text", "type": "translation", "ayah_number": 4506, "text": "\u0130\u015fledikleri k\u00f6t\u00fcl\u00fckler kendilerine belli oldu ve onlar\u0131, alaya ald\u0131klar\u0131 \u015feyler ku\u015fat\u0131p mahvetti."}, {"id": 565568, "identifier": "tr.diyanet", "surah_number": 45, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062c\u0627\u062b\u064a\u0629", "surah_en_name": "Al-Jaathiya", "surah_en_name_translation": "Crouching", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 502, "ruku": 437, "hizb_quarter": 200, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Diyanet \u0130\u015fleri", "transelator_en_name": "Diyanet Isleri", "format": "text", "type": "translation", "ayah_number": 4507, "text": "Onlara denir ki: \"Bug\u00fcne kavu\u015faca\u011f\u0131n\u0131z\u0131 unuttu\u011funuz gibi Biz de sizi unuttuk; varaca\u011f\u0131n\u0131z yer ate\u015ftir, yard\u0131mc\u0131lar\u0131n\u0131z da yoktur.\""}, {"id": 565569, "identifier": "tr.diyanet", "surah_number": 45, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062c\u0627\u062b\u064a\u0629", "surah_en_name": "Al-Jaathiya", "surah_en_name_translation": "Crouching", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 502, "ruku": 437, "hizb_quarter": 200, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Diyanet \u0130\u015fleri", "transelator_en_name": "Diyanet Isleri", "format": "text", "type": "translation", "ayah_number": 4508, "text": "\"Bu, Allah'\u0131n ayetlerini alaya alman\u0131zdan ve d\u00fcnya hayat\u0131n\u0131n sizi aldatm\u0131\u015f olmas\u0131ndan \u00f6t\u00fcr\u00fcd\u00fcr.\" O g\u00fcn, ne oradan \u00e7\u0131kar\u0131l\u0131rlar ve ne de \u00f6z\u00fcrleri dinlenir."}, {"id": 565570, "identifier": "tr.diyanet", "surah_number": 45, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062c\u0627\u062b\u064a\u0629", "surah_en_name": "Al-Jaathiya", "surah_en_name_translation": "Crouching", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 502, "ruku": 437, "hizb_quarter": 200, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Diyanet \u0130\u015fleri", "transelator_en_name": "Diyanet Isleri", "format": "text", "type": "translation", "ayah_number": 4509, "text": "\u00d6v\u00fclmek, g\u00f6klerin Rabbi, yerin Rabbi ve alemlerin Rabbi olan Allah i\u00e7indir."}, {"id": 565571, "identifier": "tr.diyanet", "surah_number": 45, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u062c\u0627\u062b\u064a\u0629", "surah_en_name": "Al-Jaathiya", "surah_en_name_translation": "Crouching", "revelation_type": "Meccan", "juz": 25, "manzil": 6, "page": 502, "ruku": 437, "hizb_quarter": 200, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "tr", "name": "Diyanet \u0130\u015fleri", "transelator_en_name": "Diyanet Isleri", "format": "text", "type": "translation", "ayah_number": 4510, "text": "G\u00f6klerde ve yerde azamet O'nundur, O, g\u00fc\u00e7l\u00fcd\u00fcr, Hakim'dir."}]