[{"id": 215348, "identifier": "en.pickthall", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 411, "ruku": 355, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Pickthall", "transelator_en_name": "Mohammed Marmaduke William Pickthall", "format": "text", "type": "translation", "ayah_number": 3470, "text": "Alif. Lam. Mim."}, {"id": 215349, "identifier": "en.pickthall", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 411, "ruku": 355, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Pickthall", "transelator_en_name": "Mohammed Marmaduke William Pickthall", "format": "text", "type": "translation", "ayah_number": 3471, "text": "These are revelations of the wise Scripture,"}, {"id": 215350, "identifier": "en.pickthall", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 411, "ruku": 355, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Pickthall", "transelator_en_name": "Mohammed Marmaduke William Pickthall", "format": "text", "type": "translation", "ayah_number": 3472, "text": "A guidance and a mercy for the good,"}, {"id": 215351, "identifier": "en.pickthall", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 411, "ruku": 355, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Pickthall", "transelator_en_name": "Mohammed Marmaduke William Pickthall", "format": "text", "type": "translation", "ayah_number": 3473, "text": "Those who establish worship and pay the poor-due and have sure faith in the Hereafter."}, {"id": 215352, "identifier": "en.pickthall", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 411, "ruku": 355, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Pickthall", "transelator_en_name": "Mohammed Marmaduke William Pickthall", "format": "text", "type": "translation", "ayah_number": 3474, "text": "Such have guidance from their Lord. Such are the successful."}, {"id": 215353, "identifier": "en.pickthall", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 411, "ruku": 355, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Pickthall", "transelator_en_name": "Mohammed Marmaduke William Pickthall", "format": "text", "type": "translation", "ayah_number": 3475, "text": "And of mankind is he who payeth for mere pastime of discourse, that he may mislead from Allah's way without knowledge, and maketh it the butt of mockery. For such there is a shameful doom."}, {"id": 215354, "identifier": "en.pickthall", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 411, "ruku": 355, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Pickthall", "transelator_en_name": "Mohammed Marmaduke William Pickthall", "format": "text", "type": "translation", "ayah_number": 3476, "text": "And when Our revelations are recited unto him he turneth away in pride as if he heard them not, as if there were a deafness in his ears. So give him tidings of a painful doom."}, {"id": 215355, "identifier": "en.pickthall", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 411, "ruku": 355, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Pickthall", "transelator_en_name": "Mohammed Marmaduke William Pickthall", "format": "text", "type": "translation", "ayah_number": 3477, "text": "Lo! those who believe and do good works, for them are the gardens of delight,"}, {"id": 215356, "identifier": "en.pickthall", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 411, "ruku": 355, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Pickthall", "transelator_en_name": "Mohammed Marmaduke William Pickthall", "format": "text", "type": "translation", "ayah_number": 3478, "text": "Wherein they will abide. It is a promise of Allah in truth. He is the Mighty, the Wise."}, {"id": 215358, "identifier": "en.pickthall", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 411, "ruku": 355, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Pickthall", "transelator_en_name": "Mohammed Marmaduke William Pickthall", "format": "text", "type": "translation", "ayah_number": 3479, "text": "He hath created the heavens without supports that ye can see, and hath cast into the earth firm hills, so that it quake not with you; and He hath dispersed therein all kinds of beasts. And We send down water from the sky and We cause (plants) of every goodly kind to grow therein."}, {"id": 215359, "identifier": "en.pickthall", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 411, "ruku": 355, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Pickthall", "transelator_en_name": "Mohammed Marmaduke William Pickthall", "format": "text", "type": "translation", "ayah_number": 3480, "text": "This is the Creation of Allah. Now show me that which those (ye worship) beside Him have created. Nay, but the wrong-doers are in error manifest!"}, {"id": 215360, "identifier": "en.pickthall", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 412, "ruku": 356, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Pickthall", "transelator_en_name": "Mohammed Marmaduke William Pickthall", "format": "text", "type": "translation", "ayah_number": 3481, "text": "And verily We gave Luqman wisdom, saying: Give thanks unto Allah; and whosoever giveth thanks, he giveth thanks for (the good of) his soul. And whosoever refuseth - Lo! Allah is Absolute, Owner of Praise."}, {"id": 215361, "identifier": "en.pickthall", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 412, "ruku": 356, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Pickthall", "transelator_en_name": "Mohammed Marmaduke William Pickthall", "format": "text", "type": "translation", "ayah_number": 3482, "text": "And (remember) when Luqman said unto his son, when he was exhorting him: O my dear son! Ascribe no partners unto Allah. Lo! to ascribe partners (unto Him) is a tremendous wrong -"}, {"id": 215362, "identifier": "en.pickthall", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 412, "ruku": 356, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Pickthall", "transelator_en_name": "Mohammed Marmaduke William Pickthall", "format": "text", "type": "translation", "ayah_number": 3483, "text": "And We have enjoined upon man concerning his partners - His mother beareth him in weakness upon weakness, and his weaning is in two years - Give thanks unto Me and unto thy parents. Unto Me is the journeying."}, {"id": 215363, "identifier": "en.pickthall", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 412, "ruku": 356, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Pickthall", "transelator_en_name": "Mohammed Marmaduke William Pickthall", "format": "text", "type": "translation", "ayah_number": 3484, "text": "But if they strive with thee to make thee ascribe unto Me as partner that of which thou hast no knowledge, then obey them not. Consort with them in the world kindly, and follow the path of him who repenteth unto Me. Then unto Me will be your return, and I shall tell you what ye used to do -"}, {"id": 215364, "identifier": "en.pickthall", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 412, "ruku": 356, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Pickthall", "transelator_en_name": "Mohammed Marmaduke William Pickthall", "format": "text", "type": "translation", "ayah_number": 3485, "text": "O my dear son! Lo! though it be but the weight of a grain of mustard-seed, and though it be in a rock, or in the heavens, or in the earth, Allah will bring it forth. Lo! Allah is Subtile, Aware."}, {"id": 215365, "identifier": "en.pickthall", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 412, "ruku": 356, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Pickthall", "transelator_en_name": "Mohammed Marmaduke William Pickthall", "format": "text", "type": "translation", "ayah_number": 3486, "text": "O my dear son! Establish worship and enjoin kindness and forbid iniquity, and persevere whatever may befall thee. Lo! that is of the steadfast heart of things."}, {"id": 215366, "identifier": "en.pickthall", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 412, "ruku": 356, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Pickthall", "transelator_en_name": "Mohammed Marmaduke William Pickthall", "format": "text", "type": "translation", "ayah_number": 3487, "text": "Turn not thy cheek in scorn toward folk, nor walk with pertness in the land. Lo! Allah loveth not each braggart boaster."}, {"id": 215367, "identifier": "en.pickthall", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 412, "ruku": 356, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Pickthall", "transelator_en_name": "Mohammed Marmaduke William Pickthall", "format": "text", "type": "translation", "ayah_number": 3488, "text": "Be modest in thy bearing and subdue thy voice. Lo! the harshest of all voices is the voice of the ass."}, {"id": 215369, "identifier": "en.pickthall", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 413, "ruku": 357, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Pickthall", "transelator_en_name": "Mohammed Marmaduke William Pickthall", "format": "text", "type": "translation", "ayah_number": 3489, "text": "See ye not how Allah hath made serviceable unto you whatsoever is in the skies and whatsoever is in the earth and hath loaded you with His favours both without and within? Yet of mankind is he who disputeth concerning Allah, without knowledge or guidance or a scripture giving light."}, {"id": 215370, "identifier": "en.pickthall", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 413, "ruku": 357, "hizb_quarter": 164, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Pickthall", "transelator_en_name": "Mohammed Marmaduke William Pickthall", "format": "text", "type": "translation", "ayah_number": 3490, "text": "And if it be said unto them: Follow that which Allah hath revealed, they say: Nay, but we follow that wherein we found our fathers. What! Even though the devil were inviting them unto the doom of flame?"}, {"id": 215371, "identifier": "en.pickthall", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 413, "ruku": 357, "hizb_quarter": 165, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Pickthall", "transelator_en_name": "Mohammed Marmaduke William Pickthall", "format": "text", "type": "translation", "ayah_number": 3491, "text": "Whosoever surrendereth his purpose to Allah while doing good, he verily hath grasped the firm hand-hold. Unto Allah belongeth the sequel of all things."}, {"id": 215372, "identifier": "en.pickthall", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 413, "ruku": 357, "hizb_quarter": 165, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Pickthall", "transelator_en_name": "Mohammed Marmaduke William Pickthall", "format": "text", "type": "translation", "ayah_number": 3492, "text": "And whosoever disbelieveth, let not his disbelief afflict thee (O Muhammad). Unto Us is their return, and We shall tell them what they did. Lo! Allah is Aware of what is in the breasts (of men)."}, {"id": 215373, "identifier": "en.pickthall", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 413, "ruku": 357, "hizb_quarter": 165, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Pickthall", "transelator_en_name": "Mohammed Marmaduke William Pickthall", "format": "text", "type": "translation", "ayah_number": 3493, "text": "We give them comfort for a little, and then We drive them to a heavy doom."}, {"id": 215374, "identifier": "en.pickthall", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 413, "ruku": 357, "hizb_quarter": 165, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Pickthall", "transelator_en_name": "Mohammed Marmaduke William Pickthall", "format": "text", "type": "translation", "ayah_number": 3494, "text": "If thou shouldst ask them: Who created the heavens and the earth? they would answer: Allah. Say: Praise be to Allah! But most of them know not."}, {"id": 215375, "identifier": "en.pickthall", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 413, "ruku": 357, "hizb_quarter": 165, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Pickthall", "transelator_en_name": "Mohammed Marmaduke William Pickthall", "format": "text", "type": "translation", "ayah_number": 3495, "text": "Unto Allah belongeth whatsoever is in the heavens and the earth. Lo! Allah, He is the Absolute, the Owner of Praise."}, {"id": 215376, "identifier": "en.pickthall", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 413, "ruku": 357, "hizb_quarter": 165, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Pickthall", "transelator_en_name": "Mohammed Marmaduke William Pickthall", "format": "text", "type": "translation", "ayah_number": 3496, "text": "And if all the trees in the earth were pens, and the sea, with seven more seas to help it, (were ink), the words of Allah could not be exhausted. Lo! Allah is Mighty, Wise."}, {"id": 215377, "identifier": "en.pickthall", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 413, "ruku": 357, "hizb_quarter": 165, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Pickthall", "transelator_en_name": "Mohammed Marmaduke William Pickthall", "format": "text", "type": "translation", "ayah_number": 3497, "text": "Your creation and your raising (from the dead) are only as (the creation and the raising of) a single soul. Lo! Allah is Hearer, Knower."}, {"id": 215378, "identifier": "en.pickthall", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 414, "ruku": 357, "hizb_quarter": 165, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Pickthall", "transelator_en_name": "Mohammed Marmaduke William Pickthall", "format": "text", "type": "translation", "ayah_number": 3498, "text": "Hast thou not seen how Allah causeth the night to pass into the day and causeth the day to pass into the night, and hath subdued the sun and the moon (to do their work), each running unto an appointed term; and that Allah is Informed of what ye do?"}, {"id": 215379, "identifier": "en.pickthall", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 414, "ruku": 357, "hizb_quarter": 165, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Pickthall", "transelator_en_name": "Mohammed Marmaduke William Pickthall", "format": "text", "type": "translation", "ayah_number": 3499, "text": "That (is so) because Allah, He is the True, and that which they invoke beside Him is the False, and because Allah, He is the Sublime, the Great."}, {"id": 215380, "identifier": "en.pickthall", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 414, "ruku": 357, "hizb_quarter": 165, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Pickthall", "transelator_en_name": "Mohammed Marmaduke William Pickthall", "format": "text", "type": "translation", "ayah_number": 3500, "text": "Hast thou not seen how the ships glide on the sea by Allah's grace, that He may show you of His wonders? Lo! therein indeed are portents for every steadfast, grateful (heart)."}, {"id": 215381, "identifier": "en.pickthall", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 414, "ruku": 357, "hizb_quarter": 165, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Pickthall", "transelator_en_name": "Mohammed Marmaduke William Pickthall", "format": "text", "type": "translation", "ayah_number": 3501, "text": "And if a wave enshroudeth them like awnings, they cry unto Allah, making their faith pure for Him only. But when He bringeth them safe to land, some of them compromise. None denieth Our signs save every traitor ingrate."}, {"id": 215382, "identifier": "en.pickthall", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 414, "ruku": 357, "hizb_quarter": 165, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Pickthall", "transelator_en_name": "Mohammed Marmaduke William Pickthall", "format": "text", "type": "translation", "ayah_number": 3502, "text": "O mankind! Keep your duty to your Lord and fear a Day when the parent will not be able to avail the child in aught, nor the child to avail the parent. Lo! Allah's promise is the very truth. Let not the life of the world beguile you, nor let the deceiver beguile you, in regard to Allah."}, {"id": 215383, "identifier": "en.pickthall", "surah_number": 31, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0644\u0642\u0645\u0627\u0646", "surah_en_name": "Luqman", "surah_en_name_translation": "Luqman", "revelation_type": "Meccan", "juz": 21, "manzil": 5, "page": 414, "ruku": 357, "hizb_quarter": 165, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "en", "name": "Pickthall", "transelator_en_name": "Mohammed Marmaduke William Pickthall", "format": "text", "type": "translation", "ayah_number": 3503, "text": "Lo! Allah! With Him is knowledge of the Hour. He sendeth down the rain, and knoweth that which is in the wombs. No soul knoweth what it will earn to-morrow, and no soul knoweth in what land it will die. Lo! Allah is Knower, Aware."}]