[{"id": 124437, "identifier": "cs.hrbek", "surah_number": 98, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0628\u064a\u0646\u0629", "surah_en_name": "Al-Bayyina", "surah_en_name_translation": "The Evidence", "revelation_type": "Medinan", "juz": 30, "manzil": 7, "page": 598, "ruku": 540, "hizb_quarter": 239, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "cs", "name": "Hrbek", "transelator_en_name": "Preklad I. Hrbek", "format": "text", "type": "translation", "ayah_number": 6131, "text": "Ti, kdo\u017e z vlastn\u00edk\u016f P\u00edsma a z modloslu\u017eebn\u00edk\u016f jsou nev\u011b\u0159\u00edc\u00edmi, se neza\u010dali uvol\u0148ovat, pokud k nim nep\u0159i\u0161el d\u016fkaz jasn\u00fd,"}, {"id": 124438, "identifier": "cs.hrbek", "surah_number": 98, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0628\u064a\u0646\u0629", "surah_en_name": "Al-Bayyina", "surah_en_name_translation": "The Evidence", "revelation_type": "Medinan", "juz": 30, "manzil": 7, "page": 598, "ruku": 540, "hizb_quarter": 239, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "cs", "name": "Hrbek", "transelator_en_name": "Preklad I. Hrbek", "format": "text", "type": "translation", "ayah_number": 6132, "text": "posel od Boha, jen\u017e p\u0159edn\u00e1\u0161el jim listy o\u010di\u0161t\u011bn\u00e9,"}, {"id": 124439, "identifier": "cs.hrbek", "surah_number": 98, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0628\u064a\u0646\u0629", "surah_en_name": "Al-Bayyina", "surah_en_name_translation": "The Evidence", "revelation_type": "Medinan", "juz": 30, "manzil": 7, "page": 598, "ruku": 540, "hizb_quarter": 239, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "cs", "name": "Hrbek", "transelator_en_name": "Preklad I. Hrbek", "format": "text", "type": "translation", "ayah_number": 6133, "text": "obsahuj\u00edc\u00ed P\u00edsmo nezm\u011bniteln\u00e9."}, {"id": 124440, "identifier": "cs.hrbek", "surah_number": 98, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0628\u064a\u0646\u0629", "surah_en_name": "Al-Bayyina", "surah_en_name_translation": "The Evidence", "revelation_type": "Medinan", "juz": 30, "manzil": 7, "page": 598, "ruku": 540, "hizb_quarter": 239, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "cs", "name": "Hrbek", "transelator_en_name": "Preklad I. Hrbek", "format": "text", "type": "translation", "ayah_number": 6134, "text": "A nerozd\u011blili se ti, jim\u017e bylo d\u00e1no P\u00edsmo, le\u010d a\u017e pot\u00e9, co k nim p\u0159i\u0161el d\u016fkaz jasn\u00fd."}, {"id": 124441, "identifier": "cs.hrbek", "surah_number": 98, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0628\u064a\u0646\u0629", "surah_en_name": "Al-Bayyina", "surah_en_name_translation": "The Evidence", "revelation_type": "Medinan", "juz": 30, "manzil": 7, "page": 598, "ruku": 540, "hizb_quarter": 239, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "cs", "name": "Hrbek", "transelator_en_name": "Preklad I. Hrbek", "format": "text", "type": "translation", "ayah_number": 6135, "text": "A p\u0159itom jim bylo pouze poru\u010deno, aby uct\u00edvali Boha, zasv\u011bcuj\u00edce mu up\u0159\u00edmn\u011b svou v\u00edru jako han\u00edfov\u00e9, aby dodr\u017eovali modlitbu a d\u00e1vali almu\u017enu - a toto je n\u00e1bo\u017eenstv\u00ed nem\u011bnn\u00e9."}, {"id": 124442, "identifier": "cs.hrbek", "surah_number": 98, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0628\u064a\u0646\u0629", "surah_en_name": "Al-Bayyina", "surah_en_name_translation": "The Evidence", "revelation_type": "Medinan", "juz": 30, "manzil": 7, "page": 598, "ruku": 540, "hizb_quarter": 239, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "cs", "name": "Hrbek", "transelator_en_name": "Preklad I. Hrbek", "format": "text", "type": "translation", "ayah_number": 6136, "text": "A v\u011bru ti, kdo\u017e jsou nev\u011b\u0159\u00edc\u00ed z vlastn\u00edk\u016f P\u00edsma a z modloslu\u017eebn\u00edk\u016f, p\u0159ijdou do ohn\u011b pekeln\u00e9ho a budou v n\u011bm nesmrteln\u00ed, a to jsou ti nejhor\u0161\u00ed ze v\u0161ech stvo\u0159en\u00ed!"}, {"id": 124443, "identifier": "cs.hrbek", "surah_number": 98, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0628\u064a\u0646\u0629", "surah_en_name": "Al-Bayyina", "surah_en_name_translation": "The Evidence", "revelation_type": "Medinan", "juz": 30, "manzil": 7, "page": 598, "ruku": 540, "hizb_quarter": 239, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "cs", "name": "Hrbek", "transelator_en_name": "Preklad I. Hrbek", "format": "text", "type": "translation", "ayah_number": 6137, "text": "Av\u0161ak ti, kdo\u017e uv\u011b\u0159ili a zbo\u017en\u00e9 skutky konali, to jsou ti nejlep\u0161\u00ed ze v\u0161ech stvo\u0159en\u00ed."}, {"id": 124444, "identifier": "cs.hrbek", "surah_number": 98, "surah_ar_name": "\u0633\u0648\u0631\u0629 \u0627\u0644\u0628\u064a\u0646\u0629", "surah_en_name": "Al-Bayyina", "surah_en_name_translation": "The Evidence", "revelation_type": "Medinan", "juz": 30, "manzil": 7, "page": 599, "ruku": 540, "hizb_quarter": 239, "sajda": false, "sajda_id": 0, "sajda_obligatory": false, "sajda_recommended": false, "language": "cs", "name": "Hrbek", "transelator_en_name": "Preklad I. Hrbek", "format": "text", "type": "translation", "ayah_number": 6138, "text": "Odm\u011bnou jejich u P\u00e1na jejich budou zahrady Edenu, pod nimi\u017e \u0159eky tekou a v nich\u017e z\u016fstanou nav\u011bky nesmrteln\u00ed. B\u016fh v nich nalezne zal\u00edben\u00ed a i oni v N\u011bm naleznou zal\u00edbeni, a toto \u00fad\u011blem bude toho, kdo P\u00e1na sv\u00e9ho se boj\u00ed."}]